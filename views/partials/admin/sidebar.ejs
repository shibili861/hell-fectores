  <style>
/* ============================================
   LUXEADMIN SIDEBAR - WHITE & GRADIENT THEME
   Clean white design with #003543 gradient
   ============================================ */

:root {
  /* Modern white theme colors */
  --sidebar-bg: #ffffff;
  --sidebar-text: #333333;
  --sidebar-accent: #003543;
  --sidebar-hover: rgba(0, 53, 67, 0.08);
  --sidebar-active: rgba(0, 53, 67, 0.12);
  --sidebar-border: rgba(0, 0, 0, 0.1);
  --sidebar-shadow: 0 4px 25px rgba(0, 0, 0, 0.08);
  
  /* Logo colors */
  --logo-bg: linear-gradient(135deg, #003543, #005566);
  --logo-text: #003543;
  --logo-icon: #ffffff;
  
  /* Section colors */
  --section-title: #666666;
  
  /* User profile */
  --user-avatar-bg: linear-gradient(135deg, #003543, #005566);
  --user-name: #003543;
  --user-role: #666666;
  
  /* Transitions */
  --transition-normal: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-fast: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Sidebar dimensions */
  --sidebar-width: 280px;
  --sidebar-collapsed: 70px;
  --sidebar-padding: 25px;
}

/* ========== SIDEBAR TOGGLE BUTTON ========== */
.sidebar-toggle {
  position: fixed;
  top: 25px;
  left: 25px;
  z-index: 1001;
  background: linear-gradient(135deg, #003543, #005566);
  color: white;
  border: none;
  border-radius: 10px;
  width: 46px;
  height: 46px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 4px 15px rgba(0, 53, 67, 0.2);
  transition: var(--transition-normal);
  font-size: 1.2rem;
}

.sidebar-toggle:hover {
  background: linear-gradient(135deg, #002531, #003543);
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(0, 53, 67, 0.3);
}

.sidebar-toggle:active {
  transform: translateY(-1px);
}

/* ========== SIDEBAR CONTAINER ========== */
.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: var(--sidebar-width);
  background: var(--sidebar-bg);
  color: var(--sidebar-text);
  padding: var(--sidebar-padding);
  display: flex;
  flex-direction: column;
  box-shadow: var(--sidebar-shadow);
  z-index: 1000;
  transition: var(--transition-normal);
  overflow-y: auto;
  overflow-x: hidden;
  border-right: 1px solid rgba(0, 53, 67, 0.1);
  scrollbar-width: thin;
  scrollbar-color: var(--sidebar-accent) rgba(0, 53, 67, 0.05);
}

/* Custom scrollbar for sidebar */
.sidebar::-webkit-scrollbar {
  width: 6px;
}

.sidebar::-webkit-scrollbar-track {
  background: rgba(0, 53, 67, 0.05);
  border-radius: 10px;
}

.sidebar::-webkit-scrollbar-thumb {
  background: var(--sidebar-accent);
  border-radius: 10px;
  transition: var(--transition-normal);
}

.sidebar::-webkit-scrollbar-thumb:hover {
  background: #002531;
}

/* Collapsed sidebar state */
.sidebar.collapsed {
  width: var(--sidebar-collapsed);
  border-right: 1px solid rgba(0, 53, 67, 0.05);
}

.sidebar.collapsed .logo-text,
.sidebar.collapsed .section-title,
.sidebar.collapsed .menu-text,
.sidebar.collapsed .user-info,
.sidebar.collapsed .user-role {
  opacity: 0;
  width: 0;
  height: 0;
  overflow: hidden;
  transition: opacity var(--transition-fast), width var(--transition-normal);
}

.sidebar.collapsed .logo {
  justify-content: center;
  padding: 0;
  margin-bottom: 30px;
}

.sidebar.collapsed .logo-icon {
  margin: 0;
}

.sidebar.collapsed .menu-link {
  justify-content: center;
  padding: 12px 0;
  border-radius: 8px;
}

.sidebar.collapsed .menu-icon {
  margin: 0;
}

.sidebar.collapsed .user-profile {
  justify-content: center;
  padding: 15px 0;
}

.sidebar.collapsed .user-avatar {
  margin: 0;
}

.sidebar.collapsed .menu-section {
  margin-bottom: 25px;
}

/* ========== LOGO SECTION ========== */
.logo {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 40px;
  padding-bottom: 20px;
  border-bottom: 1px solid var(--sidebar-border);
  transition: var(--transition-normal);
}

.logo-icon {
  width: 46px;
  height: 46px;
  background: var(--logo-bg);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: var(--logo-icon);
  box-shadow: 0 4px 12px rgba(0, 53, 67, 0.15);
  flex-shrink: 0;
  transition: var(--transition-normal);
}

.logo-text {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--logo-text);
  letter-spacing: 0.5px;
  transition: var(--transition-normal);
  white-space: nowrap;
  overflow: hidden;
  background: linear-gradient(135deg, #003543, #005566);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ========== MENU SECTIONS ========== */
.menu-section {
  margin-bottom: 30px;
  transition: var(--transition-normal);
}

.section-title {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  color: var(--section-title);
  margin-bottom: 15px;
  font-weight: 600;
  transition: var(--transition-normal);
  white-space: nowrap;
  overflow: hidden;
}

.menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.menu-item {
  margin-bottom: 8px;
  position: relative;
}

.menu-link {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 14px 16px;
  color: var(--sidebar-text);
  text-decoration: none;
  border-radius: 10px;
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  border: 1px solid transparent;
}

.menu-link:hover {
  background: var(--sidebar-hover);
  border-color: rgba(0, 53, 67, 0.1);
  transform: translateX(5px);
}

.menu-link.active {
  background: var(--sidebar-active);
  font-weight: 600;
  border-color: rgba(0, 53, 67, 0.15);
  box-shadow: inset 3px 0 0 var(--sidebar-accent);
}

.menu-link.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 3px;
  background: var(--sidebar-accent);
  border-radius: 0 3px 3px 0;
}

.menu-icon {
  font-size: 1.2rem;
  width: 24px;
  text-align: center;
  color: #666;
  flex-shrink: 0;
  transition: var(--transition-normal);
}

.menu-link.active .menu-icon {
  color: #003543;
  transform: scale(1.1);
}

.menu-text {
  font-size: 1rem;
  font-weight: 500;
  transition: var(--transition-normal);
  white-space: nowrap;
  overflow: hidden;
}

/* ========== USER PROFILE ========== */
.user-profile {
  margin-top: auto;
  padding-top: 20px;
  border-top: 1px solid var(--sidebar-border);
  display: flex;
  align-items: center;
  gap: 15px;
  transition: var(--transition-normal);
}

.user-avatar {
  width: 46px;
  height: 46px;
  background: var(--user-avatar-bg);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.1rem;
  color: white;
  flex-shrink: 0;
  box-shadow: 0 4px 10px rgba(0, 53, 67, 0.15);
  transition: var(--transition-normal);
}

.user-info {
  flex: 1;
  overflow: hidden;
  transition: var(--transition-normal);
}

.user-name {
  font-size: 1rem;
  font-weight: 600;
  color: var(--user-name);
  margin-bottom: 3px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-role {
  font-size: 0.85rem;
  color: var(--user-role);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ========== MAIN CONTENT ADJUSTMENT ========== */
/* Add this to your main content container */
main, .container.mt-4 {
  margin-left: var(--sidebar-width);
  transition: var(--transition-normal);
  padding: 30px;
  background: #f8fafc;
  min-height: 100vh;
}

/* Adjust when sidebar is collapsed */
.sidebar.collapsed ~ main,
.sidebar.collapsed ~ .container.mt-4 {
  margin-left: var(--sidebar-collapsed);
}

/* Adjust sidebar toggle position when sidebar is collapsed */
.sidebar.collapsed ~ .sidebar-toggle {
  left: 85px;
}

/* ========== RESPONSIVE DESIGN ========== */
@media (max-width: 1200px) {
  :root {
    --sidebar-width: 250px;
  }
  
  .logo-text {
    font-size: 1.6rem;
  }
  
  .menu-link {
    padding: 12px 14px;
  }
  
  main, .container.mt-4 {
    padding: 25px;
  }
}

@media (max-width: 992px) {
  .sidebar {
    transform: translateX(-100%);
    box-shadow: none;
  }
  
  .sidebar.active {
    transform: translateX(0);
    box-shadow: var(--sidebar-shadow);
    width: 280px;
  }
  
  main, .container.mt-4 {
    margin-left: 0 !important;
    padding: 20px;
  }
  
  .sidebar-toggle {
    display: flex;
  }
  
  .sidebar.collapsed {
    transform: translateX(-100%);
  }
  
  .sidebar.collapsed.active {
    transform: translateX(0);
    width: 280px;
  }
  
  .sidebar.collapsed.active .logo-text,
  .sidebar.collapsed.active .section-title,
  .sidebar.collapsed.active .menu-text,
  .sidebar.collapsed.active .user-info,
  .sidebar.collapsed.active .user-role {
    opacity: 1;
    width: auto;
    height: auto;
    overflow: visible;
  }
  
  .sidebar.collapsed.active .logo {
    justify-content: flex-start;
    padding: 0 0 20px 0;
  }
  
  .sidebar.collapsed.active .menu-link {
    justify-content: flex-start;
    padding: 14px 16px;
  }
  
  .sidebar.collapsed.active .user-profile {
    justify-content: flex-start;
    padding: 20px 0 0 0;
  }
}

@media (max-width: 768px) {
  .sidebar {
    width: 100%;
    max-width: 300px;
  }
  
  .sidebar-toggle {
    top: 20px;
    left: 20px;
    width: 42px;
    height: 42px;
    font-size: 1.1rem;
  }
  
  main, .container.mt-4 {
    padding: 15px;
  }
}

@media (max-width: 576px) {
  :root {
    --sidebar-padding: 20px;
  }
  
  .logo {
    margin-bottom: 30px;
  }
  
  .logo-icon {
    width: 42px;
    height: 42px;
    font-size: 1.3rem;
  }
  
  .logo-text {
    font-size: 1.5rem;
  }
  
  .menu-link {
    padding: 12px;
  }
  
  .menu-icon {
    font-size: 1.1rem;
  }
  
  .menu-text {
    font-size: 0.95rem;
  }
  
  .user-avatar {
    width: 42px;
    height: 42px;
    font-size: 1rem;
  }
  
  .sidebar-toggle {
    top: 15px;
    left: 15px;
    width: 40px;
    height: 40px;
  }
}

/* ========== ANIMATIONS ========== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.menu-item {
  animation: fadeInUp 0.4s ease-out backwards;
}

.menu-item:nth-child(1) { animation-delay: 0.1s; }
.menu-item:nth-child(2) { animation-delay: 0.15s; }
.menu-item:nth-child(3) { animation-delay: 0.2s; }
.menu-item:nth-child(4) { animation-delay: 0.25s; }
.menu-item:nth-child(5) { animation-delay: 0.3s; }

/* ========== UTILITY CLASSES ========== */
.hidden {
  display: none !important;
}

.visible {
  display: block !important;
}

/* ========== FIX FOR DEFAULT BROWSER ZOOM ========== */
html {
  font-size: 16px;
}

body {
  min-height: 100vh;
  overflow-x: hidden;
  background: #f8fafc;
}

/* ========== TABLE CONTAINER FIX ========== */
.container.mt-4 {
  max-width: calc(100% - 30px);
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

/* Table adjustments for sidebar layout */
.table-responsive-wrapper {
  overflow-x: auto;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  background: white;
  border: 1px solid rgba(0, 53, 67, 0.1);
  margin-top: 20px;
}

/* Pagination alignment fix */
.pagination.justify-content-center {
  margin-top: 2.5rem;
  margin-bottom: 2.5rem;
  padding: 1rem;
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 12px rgba(0, 53, 67, 0.08);
  border: 1px solid rgba(0, 53, 67, 0.1);
}

/* ========== DROPDOWN INDICATOR FOR MENU ITEMS ========== */
.menu-item.has-dropdown .menu-link::after {
  content: "â€º";
  margin-left: auto;
  font-size: 1.2rem;
  color: #999;
  transition: var(--transition-normal);
}

.menu-item.has-dropdown.active .menu-link::after {
  color: #003543;
  transform: rotate(90deg);
}

/* ========== GLOW EFFECT ON HOVER ========== */
.menu-link:hover .menu-icon {
  animation: iconGlow 0.6s ease;
}

@keyframes iconGlow {
  0%, 100% { 
    text-shadow: 0 0 5px rgba(0, 53, 67, 0.3); 
  }
  50% { 
    text-shadow: 0 0 15px rgba(0, 53, 67, 0.5); 
  }
}

/* ========== BADGE NOTIFICATION ========== */
.menu-badge {
  margin-left: auto;
  background: linear-gradient(135deg, #003543, #005566);
  color: white;
  font-size: 0.7rem;
  padding: 2px 8px;
  border-radius: 10px;
  font-weight: 600;
  min-width: 20px;
  text-align: center;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* ========== SIDEBAR FOOTER (Optional) ========== */
.sidebar-footer {
  margin-top: 20px;
  padding-top: 15px;
  border-top: 1px solid var(--sidebar-border);
  text-align: center;
  font-size: 0.75rem;
  color: #999;
}

.sidebar-footer a {
  color: #003543;
  text-decoration: none;
  transition: var(--transition-fast);
}

.sidebar-footer a:hover {
  color: #005566;
  text-decoration: underline;
}
</style>
