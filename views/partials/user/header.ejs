<script>
// ----------------------- GLOBAL TOAST -----------------------
function showToast(message, type = "success") {
    const old = document.querySelector(".lux-toast");
    if (old) old.remove();

    const t = document.createElement("div");
    t.className = `lux-toast ${type}`;
    t.innerHTML = `
        <div class="toast-content">
            <span class="toast-icon">${type === "success" ? "‚úì" : "‚úï"}</span>
            <span>${message}</span>
        </div>
    `;
    document.body.appendChild(t);

    setTimeout(() => t.classList.add("show"), 10);
    setTimeout(() => {
        t.classList.remove("show");
        setTimeout(() => t.remove(), 350);
    }, 2500);
}

// ----------------------- UPDATE NAVBAR HEART -----------------------
async function updateWishlistNavbar() {
    try {
        const res = await fetch("/wishlist/count");
        const data = await res.json();

        const heart = document.querySelector(".wishlist-heart");
        const dot   = document.querySelector(".wishlist-dot");

        if (!heart) return;

        if (data.count > 0) {
            heart.textContent = "‚ù§Ô∏è";
            if (!dot) {
                const d = document.createElement("span");
                d.className = "wishlist-dot";
                heart.parentElement.appendChild(d);
            }
        } else {
            heart.textContent = "‚ô°";
            if (dot) dot.remove();
        }
    } catch (err) {
        console.log("Navbar wishlist update error:", err);
    }
}

// ----------------------- GLOBAL ADD TO WISHLIST ---------------------
async function addToWishlist(productId) {
    const res = await fetch("/wishlist/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId })
    });

    const data = await res.json();
    showToast(data.message, data.success ? "success" : "error");
    updateWishlistNavbar();
}
</script>

