<style>
 @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@500;600;700&display=swap');

:root {
  --primary: #003543;
  --secondary: #005566;
  --white: #ffffff;
}

/* ================= NAVBAR ================= */

nav {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;

  padding: 14px 56px;
  display: flex;
  justify-content: space-between;
  align-items: center;

  background: linear-gradient(135deg, #003543, #005566);
  border-bottom: 1px solid rgba(255,255,255,0.15);
  transition: all 0.35s ease;
}

/* Scrolled state */
nav.scrolled {
  padding: 10px 56px;
  background: linear-gradient(135deg, #002a35, #004a58);
}

/* ================= LOGO ================= */

.logo {
  font-family: 'Cormorant Garamond', serif;
  font-size: 26px;
  font-weight: 600;
  letter-spacing: 3px;
  color: #ffffff;
  position: relative;
}

.logo::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 38px;
  height: 2px;
  background: rgba(255,255,255,0.85);
}

/* ================= LINKS ================= */

.nav-links {
  display: flex;
  gap: 30px;
  list-style: none;
}

.nav-links a {
  font-family: 'Montserrat', sans-serif;
  color: #ffffff;
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 1.4px;
  text-transform: uppercase;
  text-decoration: none;
  position: relative;
}

.nav-links a::after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 50%;
  width: 0;
  height: 2px;
  background: #ffffff;
  transform: translateX(-50%);
  transition: width 0.3s ease;
}

.nav-links a:hover::after {
  width: 100%;
}

/* ================= ICON BUTTONS ================= */

.nav-icons {
  display: flex;
  gap: 16px;
  align-items: center;
}

.icon-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: 1px solid rgba(255,255,255,0.35);
  background: rgba(255,255,255,0.12);

  display: flex;
  align-items: center;
  justify-content: center;

  cursor: pointer;
  position: relative;
  transition: all 0.3s ease;
  font-size: 0; /* hide emoji */
}

.icon-btn::before {
  content: '';
  width: 14px;
  height: 14px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  filter: invert(1);
}

.icon-btn:hover {
  background: #ffffff;
  transform: translateY(-2px) scale(1.06);
  box-shadow: 0 10px 24px rgba(0,0,0,0.35);
}

.icon-btn:hover::before {
  filter: none;
}

/* USER ICON */
.icon-btn[title="Account"]::before,
.icon-btn[title="Login"]::before {
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23003543' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12' cy='8' r='4'/%3E%3Cpath d='M4 20c0-4 4-6 8-6s8 2 8 6'/%3E%3C/svg%3E");
}

/* CART ICON */
.cart-icon::before {
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23003543' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='9' cy='21' r='1'/%3E%3Ccircle cx='20' cy='21' r='1'/%3E%3Cpath d='M1 1h4l2.5 13h11l2-8H6'/%3E%3C/svg%3E");
}

/* WISHLIST ICON */
.wishlist-icon::before {
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23003543' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 21s-7-4.5-7-10a4 4 0 017-2 4 4 0 017 2c0 5.5-7 10-7 10z'/%3E%3C/svg%3E");
}

/* ================= NOTIFICATION DOTS ================= */

.cart-dot,
.wishlist-dot {
  position: absolute;
  top: 6px;
  right: 6px;
  width: 6px;
  height: 6px;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 8px rgba(255,255,255,0.9);
}

/* ================= DROPDOWN ================= */

.dropdown {
  position: relative;
}

.dropdown-content {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  min-width: 180px;
  background: #ffffff;
  border-radius: 12px;
  padding: 8px 0;
  box-shadow: 0 28px 55px rgba(0,0,0,0.35);

  opacity: 0;
  visibility: hidden;
  transform: translateY(-6px);
  transition: all 0.25s ease;
  z-index: 9999;
}

.dropdown:hover .dropdown-content,
.dropdown:focus-within .dropdown-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-user {
  padding: 12px 18px;
  font-size: 12px;
  font-weight: 600;
  color: var(--primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dropdown-content a {
  display: block;
  padding: 12px 18px;
  font-size: 12px;
  font-weight: 600;
  color: var(--primary);
  text-decoration: none;
}

.dropdown-content a:hover {
  background: rgba(0,85,102,0.08);
}

/* ================= MOBILE ================= */

@media (max-width: 768px) {
  nav {
    padding: 14px 24px;
    flex-direction: column;
    gap: 10px;
  }

  .logo {
    font-size: 22px;
  }

  .nav-links {
    gap: 20px;
  }
}

</style>

