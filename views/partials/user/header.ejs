<style>
  :root {
    --gold: #d4af37;
    --light-gold: #f9e79f;
  }

  nav {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    padding: 30px 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(10, 10, 10, 0.7);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  nav.scrolled {
    padding: 20px 80px;
    background: rgba(10, 10, 10, 0.95);
  }

  .logo {
    font-family: 'Cormorant Garamond', serif;
    font-size: 36px;
    font-weight: 300;
    letter-spacing: 6px;
    background: linear-gradient(135deg, var(--gold) 0%, var(--light-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  .logo::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 1px;
    background: var(--gold);
  }

  .nav-links {
    display: flex;
    gap: 50px;
    list-style: none;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
    transition: all 0.4s ease;
    position: relative;
    padding: 5px 0;
  }

  .nav-links a::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: var(--gold);
    transition: all 0.4s ease;
    transform: translateX(-50%);
  }

  .nav-links a:hover::before {
    width: 100%;
  }

  .nav-links a:hover {
    color: var(--gold);
  }

  .nav-icons {
    display: flex;
    gap: 20px;
    align-items: center;
    position: relative;
  }

  .icon-btn {
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 18px;
    transition: all 0.4s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .icon-btn:hover {
    border-color: var(--gold);
    color: var(--gold);
    transform: rotate(15deg) scale(1.1);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }
.dropdown-content {
  display: none;
  position: absolute;
  top: 100%;        /* attaches directly to bottom of button */
  right: 0;
  margin-top: 5px;  /* tiny space but no gap */
