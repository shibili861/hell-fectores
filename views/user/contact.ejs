        // Custom notification system
const Notification = {
    show: function(type, title, message, details = null) {
        // Create notification container if it doesn't exist
        let container = document.getElementById('notification-container');
        if (!container) {
            container = document.createElement('div');
            container.id = 'notification-container';
            container.style.cssText = `
                position: fixed;
                top: 30px;
                right: 30px;
                z-index: 9999;
                display: flex;
                flex-direction: column;
                gap: 15px;
                max-width: 400px;
            `;
            document.body.appendChild(container);
        }
        
        // Create notification element
        const notification = document.createElement('div');
        notification.className = `luxury-notification ${type}`;
        notification.style.cssText = `
            background: var(--white);
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 20px 60px rgba(0, 53, 67, 0.25);
            border: 1px solid var(--border);
            transform: translateX(100%);
            opacity: 0;
            animation: slideIn 0.5s forwards;
            position: relative;
            overflow: hidden;
        `;
        
        // Add border accent based on type
        const accentColor = type === 'success' ? 'var(--accent)' : 
                           type === 'error' ? '#f44336' : 
                           type === 'warning' ? '#ff9800' : 'var(--primary)';
        
        notification.innerHTML = `
            <div style="position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: ${accentColor};"></div>
            <div style="display: flex; align-items: flex-start; gap: 15px;">
                <div style="width: 44px; height: 44px; border-radius: 50%; background: ${type === 'success' ? 'rgba(193, 154, 107, 0.1)' : 'rgba(244, 67, 54, 0.1)'}; display: flex; align-items: center; justify-content: center;">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}" 
                       style="font-size: 20px; color: ${accentColor};"></i>
                </div>
                <div style="flex: 1;">
                    <h4 style="font-family: 'Cormorant Garamond', serif; font-size: 22px; font-weight: 700; color: var(--primary); margin-bottom: 8px;">
                        ${title}
                    </h4>
                    <p style="color: var(--text-dark); font-size: 14px; line-height: 1.5; margin-bottom: ${details ? '15px' : '0'};">${message}</p>
                    ${details ? `<div style="background: rgba(0, 53, 67, 0.03); padding: 15px; border-radius: 10px; border-left: 3px solid var(--accent); margin-top: 15px;">
                        ${details}
                    </div>` : ''}
                </div>
                <button class="close-notification" style="background: none; border: none; color: var(--text-muted); cursor: pointer; font-size: 18px; padding: 5px;">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;
        
        container.appendChild(notification);
        
        // Add close functionality
        const closeBtn = notification.querySelector('.close-notification');
        closeBtn.addEventListener('click', () => {
            this.close(notification);
        });
        
        // Auto-close after 5 seconds
        setTimeout(() => {
            if (notification.parentNode) {
                this.close(notification);
            }
        }, 5000);
        
        return notification;
    },
    
    close: function(notification) {
        notification.style.animation = 'slideOut 0.5s forwards';
        setTimeout(() => {
            if (notification.parentNode) {
                notification.parentNode.removeChild(notification);
            }
        }, 500);
    }
};

