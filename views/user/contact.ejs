            text-align: center;
            position: relative;
            z-index: 2;
        }

        .page-subtitle {
            font-size: 13px;
            letter-spacing: 3px;
            color: var(--primary);
            margin-bottom: 12px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .page-title {
