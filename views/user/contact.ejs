        /* ================= RESET ================= */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* ================= VARIABLES ================= */
        :root {
            --primary: #003543;
            --secondary: #005566;
            --accent: #c19a6b;
            --accent-light: #e8d4b9;
            
            --white: #ffffff;
            --soft-white: #fafafa;
            --warm-white: #f3f2ef;
            --charcoal: #1c1c1c;
            
            --text-dark: #0b1f26;
            --text-muted: #6b7f87;
            
            --border: rgba(0, 53, 67, 0.12);
            --shadow: 0 18px 40px rgba(0, 53, 67, 0.12);
            --shadow-hover: 0 30px 60px rgba(0, 53, 67, 0.22);
            --shadow-light: 0 8px 30px rgba(0, 0, 0, 0.05);
            
