<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Premium</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
   <link rel="stylesheet" href="/user/signup.css">
</head>
<body>
 <div class="signup-container">
    <div class="signup-image">
        <h2>Join Our Community</h2>
        <p>Create an account to access exclusive features, premium content, and personalized recommendations.</p>
        <div class="signup-image-footer">
            <p>Already have an account? <a href="#" class="signin-link">Sign In</a></p>
        </div>
    </div>
    <div class="signup-form-container">
        <div class="signup-header">
            <h2>Create Account</h2>
            <p>Join us today and unlock a world of possibilities</p>
        </div>
          <a href="/auth/google" class="btn-google">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
    </svg>
    Continue with Google
</a>

<!-- Divider (optional for better UX) -->
<div class="divider">
    <span>or</span>
</div>
                
              
        
        <form id="signupForm" method="post" action="/signup" >

            <% if(message){ %>
           <div class="alert" id="backend-error"><%= message %></div>
             <% } %>

            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name"  minlength="3">
                <small class="error-message"></small>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" >
                <small class="error-message"></small>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone" class="form-control" placeholder="Enter your phone number">

                <small class="error-message"></small>
            </div>

            <div class="form-group password-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Create a password"  minlength="8">
                <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                <small class="error-message"></small>
            </div>

           <div class="form-group password-group">
    <label for="confirm-password">Confirm Password</label>
    <input type="password" id="confirm-password" name="confirmpassword" class="form-control" placeholder="Confirm your password" >
    <i class="fas fa-eye password-toggle" id="toggleConfirmPassword"></i>
    <small class="error-message"></small> <!-- client-side error will show here -->
</div>


            <button type="submit" class="btn-signup">Sign Up</button>
        </form>
    </div>
</div>


   <script>
const form = document.getElementById('signupForm');

form.addEventListener('submit', function (e) {
    e.preventDefault(); // stop submission until validation passes

    let isValid = true;

    const name = document.getElementById('name');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirm-password');

    // Reset previous errors
    document.querySelectorAll('.error-message').forEach(el => {
        el.textContent = '';
        el.classList.remove('show');
    });

    // Name validation
    if (name.value.trim().length < 3) {
        showError(name, "Full name must be at least 3 characters");
        isValid = false;
    }

    // Email validation
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailPattern.test(email.value.trim())) {
        showError(email, "Enter a valid email address");
        isValid = false;
    }

    // Phone validation: required, 10â€“15 digits, optional '+'
const phonePattern = /^\+?[0-9]{10,15}$/;
if (!phonePattern.test(phone.value.trim())) {
    showError(phone, "Phone number is required and must be 10-15 digits (optional '+' at start)");
    isValid = false;
}

    // Password validation: at least 8 chars, letters + numbers
    const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$/;
    if (!passwordPattern.test(password.value)) {
        showError(password, "Password must be at least 8 characters, letters and numbers only");
        isValid = false;
    }

    // Confirm password
    if (password.value !== confirmPassword.value) {
        showError(confirmPassword, "Passwords do not match");
        isValid = false;
    }

    // If all valid, submit form
    if (isValid) {
        form.submit();
    }
});

// Show error helper
function showError(input, message) {
    const errorElement = input.parentElement.querySelector('.error-message');
    if (errorElement) {
        errorElement.textContent = message;
        errorElement.classList.add('show');

        // Remove error after 5 seconds
        setTimeout(() => {
            errorElement.textContent = '';
            errorElement.classList.remove('show');
        }, 5000); // 5000ms = 5 seconds
    }
}






// Toggle password visibility for "Password"
const togglePassword = document.getElementById("togglePassword");
const passwordField = document.getElementById("password");

togglePassword.addEventListener("click", () => {
    const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
    passwordField.setAttribute("type", type);

    togglePassword.classList.toggle("fa-eye");
    togglePassword.classList.toggle("fa-eye-slash");
});

// Toggle password visibility for "Confirm Password"
const toggleConfirmPassword = document.getElementById("toggleConfirmPassword");
const confirmPasswordField = document.getElementById("confirm-password");

toggleConfirmPassword.addEventListener("click", () => {
    const type = confirmPasswordField.getAttribute("type") === "password" ? "text" : "password";
    confirmPasswordField.setAttribute("type", type);

    toggleConfirmPassword.classList.toggle("fa-eye");
    toggleConfirmPassword.classList.toggle("fa-eye-slash");
});

</script>

</body>
</html>
