      <style>
/* Minimal Premium Address Management */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

:root {
  --primary: #003543;
  --primary-light: #005566;
  --accent: #00b4d8;
  --surface: #ffffff;
  --surface-light: #f8fafc;
  --border: #e2e8f0;
  --border-light: #f1f5f9;
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-light: #94a3b8;
  --radius-sm: 6px;
  --radius-md: 10px;
  --radius-lg: 14px;
  --transition: all 0.2s ease;
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 8px 30px rgba(0, 0, 0, 0.08);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, sans-serif;
  background: var(--surface-light);
  color: var(--text-primary);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  padding: 24px;
  min-height: 100vh;
}

/* Main Container */
.address-main {
  max-width: 1000px;
  margin: 0 auto;
}

/* Minimal Header */
.address-header {
  margin-bottom: 40px;
  text-align: center;
  padding: 50px 0;
}

.address-header h1 {
  font-size: 2.25rem;
  font-weight: 600;
  color: var(--primary);
  margin-bottom: 8px;
  letter-spacing: -0.5px;
}

.address-subtitle {
  font-size: 1rem;
  color: var(--text-secondary);
  margin-bottom: 32px;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

/* Minimal Add Button */
.add {
  background: var(--primary);
  color: white;
  border: none;
  padding: 12px 28px;
  border-radius: var(--radius-md);
  font-weight: 500;
  font-size: 0.95rem;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  letter-spacing: 0.3px;
}

.add:hover {
  background: var(--primary-light);
  transform: translateY(-1px);
}

/* Section */
.address-list-section {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 32px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border);
}

.section-heading {
  font-size: 1.125rem;
  font-weight: 500;
  color: var(--primary);
  margin-bottom: 24px;
  letter-spacing: 0.3px;
}

/* Premium Address Cards Grid */
.premium-address-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.address-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 24px;
  border: 1px solid var(--border-light);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.address-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(to bottom, var(--primary), var(--primary-light));
  opacity: 0;
  transition: opacity 0.2s ease;
}

.address-card:hover {
  border-color: var(--border);
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.address-card:hover::before {
  opacity: 1;
}

.address-card b {
  display: inline-block;
  background: var(--surface-light);
  color: var(--primary);
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 500;
  margin-bottom: 16px;
  letter-spacing: 0.5px;
  border: 1px solid var(--border);
}

.address-card div:not(.actions) {
  color: var(--text-primary);
  line-height: 1.6;
  font-size: 0.95rem;
  margin-bottom: 12px;
}

.address-card .actions {
  display: flex;
  gap: 10px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid var(--border-light);
}

/* Action Buttons */
.edit, .delete {
  padding: 8px 16px;
  border-radius: var(--radius-sm);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition);
  border: none;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  flex: 1;
  justify-content: center;
}

.edit {
  background: var(--primary);
  color: white;
}

.edit:hover {
  background: var(--primary-light);
  transform: translateY(-1px);
}

.delete {
  background: var(--surface);
  color: #dc2626;
  border: 1px solid #fee2e2;
}

.delete:hover {
  background: #fef2f2;
  transform: translateY(-1px);
}

/* Empty State */
#addressList > p {
  text-align: center;
  color: var(--text-secondary);
  font-size: 1rem;
  padding: 48px 20px;
  grid-column: 1 / -1;
  background: var(--surface-light);
  border-radius: var(--radius-lg);
  border: 1px dashed var(--border);
}

/* === PREMIUM MINIMAL MODALS === */
#addModal, #editModal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  padding: 20px;
  animation: modalFadeIn 0.2s ease-out;
}

@keyframes modalFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 32px;
  width: 100%;
  max-width: 480px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border);
  position: relative;
  animation: modalSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-content h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--primary);
  margin-bottom: 24px;
  text-align: left;
  letter-spacing: 0.3px;
}

/* Form Elements */
.modal-content form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.modal-content select,
.modal-content input {
  padding: 12px 16px;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  font-size: 0.95rem;
  font-family: 'Inter', sans-serif;
  color: var(--text-primary);
  background: var(--surface);
  transition: var(--transition);
  width: 100%;
}

.modal-content select:focus,
.modal-content input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(0, 53, 67, 0.08);
}

.modal-content select {
  appearance: none;
  background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='none' stroke='%23003543' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpath d='M6 9l6 6 6-6'/%3e%3c/svg%3e");
  background-repeat: no-repeat;
  background-position: right 16px center;
  background-size: 14px;
  padding-right: 40px;
}

/* Error Messages */
.error-message {
  color: #dc2626;
  font-size: 0.75rem;
  font-weight: 400;
  margin-top: 4px;
  min-height: 18px;
}

.error {
  border-color: #dc2626 !important;
  background: #fef2f2 !important;
}

/* Modal Actions */
.modal-actions {
  display: flex;
  gap: 12px;
  margin-top: 24px;
  padding-top: 20px;
  border-top: 1px solid var(--border-light);
}

.modal-actions button {
  flex: 1;
  padding: 12px 20px;
  font-weight: 500;
  font-size: 0.95rem;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  border: none;
}

.modal-actions .add,
.modal-actions .edit {
  background: var(--primary);
  color: white;
}

.modal-actions .add:hover,
.modal-actions .edit:hover {
  background: var(--primary-light);
  transform: translateY(-1px);
}

.cancel-btn {
  background: var(--surface);
  color: var(--text-secondary);
  border: 1px solid var(--border);
}

.cancel-btn:hover {
  background: var(--surface-light);
  transform: translateY(-1px);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .premium-address-list {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }
}

@media (max-width: 768px) {
  .address-main {
    padding: 0 12px;
  }
  
  .address-header {
    padding: 40px 0;
  }
  
  .address-header h1 {
    font-size: 2rem;
  }
  
  .address-list-section {
    padding: 24px;
    border-radius: var(--radius-md);
  }
  
  .premium-address-list {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .modal-content {
    padding: 24px;
    width: 95%;
    margin: 20px;
  }
  
  .modal-content h3 {
    font-size: 1.125rem;
  }
  
  .modal-actions {
    flex-direction: column;
  }
  
  .modal-actions button {
    width: 100%;
  }
}

@media (max-width: 480px) {
  body {
    padding: 16px;
  }
  
  .address-header {
    padding: 32px 0;
  }
  
  .address-header h1 {
    font-size: 1.75rem;
  }
  
  .add {
    width: 100%;
    justify-content: center;
  }
  
  .address-card .actions {
    flex-direction: column;
  }
  
  .edit, .delete {
    width: 100%;
  }
}

/* Custom Scrollbar for Modal */
.modal-content::-webkit-scrollbar {
  width: 6px;
}

.modal-content::-webkit-scrollbar-track {
  background: var(--surface-light);
  border-radius: 3px;
}

.modal-content::-webkit-scrollbar-thumb {
