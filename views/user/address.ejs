}

/* =================== ADDRESS CONTENT =================== */
.address-card-content {
  flex: 1;
  margin-bottom: 30px;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 15px;
  color: var(--dark);
  font-size: 15px;
  line-height: 1.6;
  padding-left: 10px;
  position: relative;
}

.address-line::before {
  content: '‚Ä¢';
  color: var(--accent);
  font-size: 20px;
  position: absolute;
  left: -10px;
}

.address-line strong {
  color: var(--primary);
  font-weight: 600;
  min-width: 80px;
}

/* =================== ACTION BUTTONS =================== */
.address-card .actions {
