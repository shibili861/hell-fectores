      <style>
/* =================== SUPER PREMIUM ADDRESSES PAGE =================== */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600&display=swap');

:root {
  --primary: #003543;
  --primary-light: #005566;
  --accent: #d4af37;
  --accent-light: #f7ef8a;
  --light: #f8fafc;
  --dark: #1a1a1a;
  --gray: #6f7f86;
  --light-gray: #e8edef;
  --border-color: rgba(0, 53, 67, 0.12);
  --shadow-soft: 0 8px 30px rgba(0, 53, 67, 0.08);
  --shadow-medium: 0 12px 35px rgba(0, 53, 67, 0.12);
  --shadow-hover: 0 20px 50px rgba(0, 53, 67, 0.18);
  --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  --border-radius: 12px;
  --border-radius-lg: 24px;
  --gradient-primary: linear-gradient(135deg, #003543, #005566);
  --gradient-accent: linear-gradient(135deg, #d4af37, #f7ef8a);
  --gradient-light: linear-gradient(135deg, #ffffff, #f7f9fa);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Montserrat', sans-serif;
  background: linear-gradient(135deg, #f5f7f6 0%, #eef0f2 100%);
  color: var(--dark);
  min-height: 100vh;
  padding: 30px;
  overflow-x: hidden;
}

/* =================== MAIN CONTAINER =================== */
.address-main {
  max-width: 1400px;
  margin: 50px auto;
  padding: 50px;
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-soft);
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.6s ease-out;
  border: 1px solid var(--border-color);
}

.address-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: var(--gradient-accent);
}

.address-main::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(to right, transparent, rgba(212, 175, 55, 0.2), transparent);
  transform: translateY(-50%);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* =================== HEADER SECTION =================== */
.address-header {
  text-align: center;
  margin-bottom: 60px;
  padding-bottom: 40px;
  position: relative;
}

.address-header h1 {
  font-family: 'Cormorant Garamond', serif;
  font-size: 52px;
  font-weight: 400;
  color: var(--primary);
  margin-bottom: 15px;
  letter-spacing: 4px;
  text-transform: uppercase;
  position: relative;
  display: inline-block;
}

.address-header h1::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: var(--gradient-accent);
  border-radius: 3px;
}

.address-subtitle {
  font-size: 16px;
  color: var(--gray);
  margin-bottom: 40px;
  font-weight: 300;
  letter-spacing: 2px;
  text-transform: uppercase;
  max-width: 500px;
  margin: 0 auto 40px;
  line-height: 1.8;
}

/* =================== ADD BUTTON - PREMIUM =================== */
.add {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 16px 40px;
  background: var(--gradient-primary);
  color: white;
  border: none;
  border-radius: 35px;
  font-weight: 600;
  font-size: 13px;
  letter-spacing: 2.5px;
  text-transform: uppercase;
  cursor: pointer;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 53, 67, 0.2);
}

.add::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.7s ease;
}

.add:hover {
  transform: translateY(-8px) scale(1.05);
  box-shadow: 0 20px 50px rgba(0, 53, 67, 0.3);
}

.add:hover::before {
  left: 100%;
}

.btn-icon {
  font-size: 18px;
  transition: transform 0.5s ease;
}

.add:hover .btn-icon {
  transform: rotate(180deg) scale(1.3);
}

/* =================== ADDRESS LIST SECTION =================== */
.address-list-section {
  margin-top: 50px;
}

.section-heading {
  font-family: 'Cormorant Garamond', serif;
  font-size: 32px;
  font-weight: 400;
  color: var(--primary);
  margin-bottom: 40px;
  padding-bottom: 15px;
  border-bottom: 2px solid var(--gradient-accent);
  display: inline-block;
  letter-spacing: 2px;
}

/* =================== ADDRESS GRID LAYOUT =================== */
.premium-address-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 30px;
  margin-top: 30px;
}

.address-card {
  background: white;
  border-radius: 20px;
  padding: 35px 30px;
  box-shadow: var(--shadow-soft);
  border: 1px solid var(--border-color);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  animation: cardFloatIn 0.6s ease forwards;
  opacity: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.address-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6px;
  height: 100%;
  background: var(--gradient-accent);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.address-card:hover {
  transform: translateY(-12px) scale(1.02);
  box-shadow: var(--shadow-hover);
  border-color: var(--accent);
}

.address-card:hover::before {
  opacity: 1;
}

@keyframes cardFloatIn {
  from {
    opacity: 0;
    transform: translateY(30px) rotateX(10deg);
  }
  to {
    opacity: 1;
    transform: translateY(0) rotateX(0);
  }
}

.address-card:nth-child(1) { animation-delay: 0.1s; }
.address-card:nth-child(2) { animation-delay: 0.2s; }
.address-card:nth-child(3) { animation-delay: 0.3s; }
.address-card:nth-child(4) { animation-delay: 0.4s; }
.address-card:nth-child(5) { animation-delay: 0.5s; }

/* =================== ADDRESS TYPE BADGE =================== */
.address-card > b {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  font-family: 'Cormorant Garamond', serif;
  font-size: 20px;
  font-weight: 600;
  color: var(--primary);
  margin-bottom: 25px;
  padding: 10px 20px;
  background: linear-gradient(135deg, rgba(0, 53, 67, 0.05), rgba(0, 85, 102, 0.03));
  border-radius: 30px;
  border: 1px solid rgba(0, 53, 67, 0.1);
  width: fit-content;
}

.address-card > b::before {
