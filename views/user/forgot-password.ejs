/* ================= FIXED BRAND HEADER ================= */
.brand-header {
    margin-bottom: 30px;
    position: relative;
}

.brand-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: -0.5px;
    position: relative;
    display: inline-block;
}

.brand-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, 
