<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP - LUXSHORE</title>
    <style>
    /* ================= PREMIUM OTP VERIFICATION PAGE ================= */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap');

:root {
    --primary: #0a2e3d;
    --secondary: #1a5c75;
    --accent: #d4af37;
    --success: #059669;
    --error: #dc2626;
    --white: #ffffff;
    --off-white: #f8f7f3;
    --text-dark: #1a2a32;
    --text-muted: #7a8c94;
    --border: rgba(10, 46, 61, 0.1);
    --shadow: 0 20px 50px rgba(10, 46, 61, 0.15);
    --shadow-hover: 0 30px 70px rgba(10, 46, 61, 0.25);
    --gold-glow: 0 0 20px rgba(212, 175, 55, 0.3);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Montserrat', sans-serif;
    background: linear-gradient(135deg, #f8f7f3 0%, #e8e6df 100%);
    color: var(--text-dark);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    position: relative;
    overflow-x: hidden;
    -webkit-tap-highlight-color: transparent;
}

/* ================= ANIMATED BACKGROUND ================= */
.animated-bg {
    position: fixed;
    inset: 0;
    background: 
        radial-gradient(circle at 15% 85%, rgba(26, 92, 117, 0.05) 0%, transparent 40%),
        radial-gradient(circle at 85% 15%, rgba(212, 175, 55, 0.03) 0%, transparent 40%);
    z-index: -1;
    pointer-events: none;
}

/* ================= FLOATING SHAPES ================= */
.floating-shapes {
    position: fixed;
    inset: 0;
    z-index: -1;
    pointer-events: none;
    overflow: hidden;
}

.shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.08;
    filter: blur(30px);
}

.shape1 {
    width: 200px;
    height: 200px;
    top: 15%;
    left: 10%;
    background: linear-gradient(135deg, var(--accent), var(--secondary));
    animation: floatShape1 20s infinite ease-in-out;
}

.shape2 {
    width: 150px;
    height: 150px;
    top: 70%;
    right: 15%;
    background: linear-gradient(135deg, var(--secondary), var(--primary));
    animation: floatShape2 25s infinite ease-in-out reverse;
}

.shape3 {
    width: 100px;
    height: 100px;
    bottom: 10%;
    left: 20%;
    background: linear-gradient(135deg, var(--primary), var(--accent));
    animation: floatShape3 30s infinite ease-in-out;
}

@keyframes floatShape1 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -20px) rotate(120deg); }
    66% { transform: translate(-20px, 30px) rotate(240deg); }
}

@keyframes floatShape2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(-30px, 20px) rotate(120deg); }
    66% { transform: translate(20px, -30px) rotate(240deg); }
}

@keyframes floatShape3 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(20px, 20px) rotate(120deg); }
    66% { transform: translate(-20px, -20px) rotate(240deg); }
}

/* ================= OTP CONTAINER ================= */
.otp-container {
    width: 100%;
    max-width: 460px;
    background: rgba(255, 255, 255, 0.96);
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    border-radius: 28px;
    padding: 45px 40px;
    box-shadow: 
        var(--shadow),
        0 1px 0 rgba(255, 255, 255, 0.8) inset,
        0 -1px 0 rgba(10, 46, 61, 0.05) inset;
    border: 1px solid rgba(255, 255, 255, 0.8);
    position: relative;
    z-index: 10;
    text-align: center;
}

/* Gold Border Effect */
.otp-container::before {
    content: '';
    position: absolute;
    inset: 0;
    padding: 2px;
    background: linear-gradient(135deg, 
        transparent 0%, 
        rgba(212, 175, 55, 0.3) 50%, 
        transparent 100%);
    -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    border-radius: 28px;
    pointer-events: none;
}

/* ================= BRAND HEADER ================= */
.brand-header {
    margin-bottom: 30px;
    position: relative;
}

.brand-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 36px;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: -0.5px;
    position: relative;
    display: inline-block;
    margin-bottom: 8px;
}

.brand-title::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 70px;
    height: 2px;
    background: linear-gradient(90deg, 
        transparent 0%, 
        var(--accent) 50%, 
        transparent 100%);
}

.brand-subtitle {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    opacity: 0.8;
}

/* ================= ICON WRAPPER ================= */
.icon-wrapper {
    width: 90px;
    height: 90px;
    margin: 0 auto 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    position: relative;
    box-shadow: 
        0 15px 35px rgba(10, 46, 61, 0.2),
        0 0 25px rgba(212, 175, 55, 0.4);
}

.icon-wrapper::before {
    content: '';
    position: absolute;
    inset: 2px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    backdrop-filter: blur(5px);
}

.icon-wrapper svg {
    width: 40px;
    height: 40px;
    stroke: var(--white);
    stroke-width: 1.5;
    position: relative;
    z-index: 1;
}

/* ================= FORM STYLES ================= */
form {
    margin-bottom: 25px;
}

form h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 26px;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 12px;
    letter-spacing: -0.3px;
}

.otp-description {
    color: var(--text-muted);
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 30px;
    font-weight: 400;
}

/* ================= MESSAGE STYLES ================= */
form p[style*="color:red"] {
    background: rgba(220, 38, 38, 0.1);
    border: 1px solid rgba(220, 38, 38, 0.2);
    border-radius: 12px;
    padding: 14px 18px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 25px;
    animation: slideDown 0.4s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ================= OTP INPUT WRAPPER ================= */
.otp-input-wrapper {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 30px;
    padding: 5px 0;
}

.otp-box {
    width: 60px;
    height: 72px;
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    font-family: 'Montserrat', sans-serif;
    color: var(--primary);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(10, 46, 61, 0.12);
    border-radius: 16px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(10, 46, 61, 0.05) inset;
    caret-color: var(--accent);
}

.otp-box:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 
        0 0 0 4px rgba(212, 175, 55, 0.15),
        0 4px 15px rgba(10, 46, 61, 0.05) inset,
        var(--gold-glow);
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.98);
}

.otp-box.filled {
    border-color: var(--success);
    background: rgba(5, 150, 105, 0.05);
}

/* ================= HIDDEN OTP INPUT ================= */
#hiddenOtp {
    display: none;
}

/* ================= VALIDATION MESSAGE ================= */
.validation-message {
    min-height: 24px;
    margin-bottom: 20px;
    padding: 8px 12px;
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(-5px);
    transition: all 0.3s ease;
}

.validation-message.error {
    background: rgba(220, 38, 38, 0.1);
    color: var(--error);
    opacity: 1;
    transform: translateY(0);
}

.validation-message.success {
    background: rgba(5, 150, 105, 0.1);
    color: var(--success);
    opacity: 1;
    transform: translateY(0);
}

/* ================= TIMER WRAPPER ================= */
.timer-wrapper {
    margin-bottom: 25px;
    padding: 15px;
    background: rgba(10, 46, 61, 0.03);
    backdrop-filter: blur(5px);
    border-radius: 14px;
    border: 1px solid rgba(10, 46, 61, 0.05);
}

.timer {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.3px;
}

#countdown {
    color: var(--accent);
    font-weight: 700;
    font-size: 16px;
    margin-left: 5px;
}

/* ================= RESEND WRAPPER ================= */
.resend-wrapper {
    margin-bottom: 30px;
    padding: 18px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(5px);
    border-radius: 14px;
    border: 1px solid rgba(10, 46, 61, 0.08);
}

.resend-text {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 12px;
}

.resend-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, rgba(10, 46, 61, 0.05), rgba(26, 92, 117, 0.05));
    color: var(--text-muted);
    border: 2px solid rgba(10, 46, 61, 0.1);
    border-radius: 12px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.resend-btn:not(:disabled):hover {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(212, 175, 55, 0.2);
}

.resend-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

#resendTimer {
    color: var(--accent);
    font-weight: 700;
    font-size: 15px;
}

/* ================= SUBMIT BUTTON ================= */
#submitBtn {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    border: none;
    border-radius: 14px;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 700;
    letter-spacing: 1.5px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    position: relative;
    overflow: hidden;
    margin-bottom: 25px;
    box-shadow: 
        0 12px 30px rgba(10, 46, 61, 0.25),
        0 1px 1px rgba(255, 255, 255, 0.2) inset;
}

#submitBtn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.25), 
        transparent);
    transition: left 0.6s ease;
}

#submitBtn:hover:not(:disabled)::before {
    left: 100%;
}

#submitBtn:hover:not(:disabled) {
    transform: translateY(-3px);
    box-shadow: 
        0 20px 45px rgba(10, 46, 61, 0.35),
        0 0 15px rgba(212, 175, 55, 0.3),
        0 1px 1px rgba(255, 255, 255, 0.2) inset;
}

#submitBtn:active:not(:disabled) {
    transform: translateY(-1px);
}

#submitBtn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none !important;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* ================= FORM FOOTER ================= */
.form-footer {
    padding-top: 25px;
    border-top: 1px solid rgba(10, 46, 61, 0.08);
    text-align: center;
}

.footer-text {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 500;
}

.footer-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 700;
    position: relative;
    transition: all 0.3s ease;
    padding: 4px 8px;
    border-radius: 6px;
}

.footer-link:hover {
    color: var(--accent);
    background: rgba(212, 175, 55, 0.1);
}

/* ================= LOADING STATES ================= */
.loading {
    position: relative;
    color: transparent;
}

.loading::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* ================= SUCCESS ANIMATION ================= */
@keyframes successPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
}

.success-pulse {
    animation: successPulse 2s ease infinite;
}

/* ================= RESPONSIVE DESIGN ================= */
@media (max-width: 768px) {
    .otp-container {
        max-width: 420px;
        padding: 40px 35px;
        border-radius: 24px;
    }
    
    .brand-title {
        font-size: 32px;
    }
    
    .icon-wrapper {
        width: 80px;
        height: 80px;
        margin-bottom: 25px;
    }
    
    .icon-wrapper svg {
        width: 36px;
        height: 36px;
    }
    
    form h2 {
        font-size: 24px;
    }
    
    .otp-description {
        font-size: 14px;
        margin-bottom: 25px;
    }
    
    .otp-box {
        width: 54px;
        height: 64px;
        font-size: 28px;
    }
    
    .otp-input-wrapper {
        gap: 10px;
    }
    
    #submitBtn, .resend-btn {
        padding: 16px;
        font-size: 15px;
    }
}

@media (max-width: 480px) {
    body {
        padding: 15px;
    }
    
    .otp-container {
        max-width: 100%;
        padding: 35px 25px;
        border-radius: 20px;
    }
    
    .brand-title {
        font-size: 28px;
    }
    
    .icon-wrapper {
        width: 70px;
        height: 70px;
        margin-bottom: 20px;
    }
    
    .icon-wrapper svg {
        width: 32px;
        height: 32px;
    }
    
    form h2 {
        font-size: 22px;
    }
    
    .otp-box {
        width: 48px;
        height: 56px;
        font-size: 26px;
        border-radius: 14px;
    }
    
    .otp-input-wrapper {
        gap: 8px;
    }
    
    .timer-wrapper,
    .resend-wrapper {
        padding: 14px;
    }
    
    #submitBtn, .resend-btn {
        padding: 15px;
        font-size: 14px;
    }
}

/* ================= FLOATING ANIMATION ================= */
@keyframes containerFloat {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
    }
    33% {
        transform: translateY(-5px) rotate(0.5deg);
    }
    66% {
        transform: translateY(5px) rotate(-0.5deg);
    }
}

.otp-container {
    animation: containerFloat 8s ease-in-out infinite;
}

/* ================= OTP INPUT ANIMATION ================= */
@keyframes inputPop {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

.otp-box:focus {
    animation: inputPop 0.3s ease;
}

/* ================= PROGRESS BAR FOR TIMER ================= */
.timer-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    width: 100%;
    background: linear-gradient(90deg, var(--accent), var(--secondary));
    border-radius: 0 0 14px 14px;
    transform: scaleX(1);
    transform-origin: left;
    animation: timerProgress 300s linear forwards;
}

@keyframes timerProgress {
    from {
        transform: scaleX(1);
    }
    to {
        transform: scaleX(0);
    }
}

/* ================= INPUT ERROR ANIMATION ================= */
@keyframes shakeError {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
}

.otp-box.error {
    border-color: var(--error);
    background: rgba(220, 38, 38, 0.05);
    animation: shakeError 0.5s ease;
}
    </style>
