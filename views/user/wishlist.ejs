    <span class="cart-icon">ðŸ›’</span>
    <span>Add to Cart</span>
</button>


                                    <button class="btn-delete" onclick="removeFromWishlist('<%= p._id %>')" title="Remove">
                                        <i>Ã—</i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Continue Shopping -->
        <div class="continue-shopping">
            <h3>Continue Exploring</h3>
            <p>Discover more exquisite pieces to complement your collection and elevate your style.</p>
            <a href="/collections" class="explore-btn">
                <span>View New Arrivals</span>
            </a>
        </div>
    <% } %>
</div>

<script>
async function addToCartFromWishlist(productId) {
    const size = document.getElementById("size-" + productId)?.value;

    if (!size) {
        showToast("Please select a size", "error");
        return;
    }

    const res = await fetch("/api/cart/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, quantity: 1, size })
    });

    const data = await res.json();
    showToast(data.message, data.success ? "success" : "error");

    if (data.success) {
        removeFromWishlist(productId); // auto removes
    }
}

async function removeFromWishlist(productId) {
    const res = await fetch("/wishlist/remove", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId })
    });

    const data = await res.json();
    showToast(data.message, data.success ? "success" : "error");

    if (data.success) {
        const row = document.querySelector(`tr[data-id="${productId}"]`);
        if (row) {
            row.style.opacity = "0";
            row.style.transform = "translateX(-20px)";
            setTimeout(() => row.remove(), 350);
        }
        updateWishlistNavbar();
    }
}
</script>




