    .wishlist-size-select {
        min-width: 180px;
        padding: 14px 22px 14px 18px;
        font-size: 11px;
    }
}

@media (max-width: 768px) {
    .wishlist-size-select {
        min-width: 100%;
        margin-bottom: 15px;
    }
    
    .action-buttons {
        width: 100%;
