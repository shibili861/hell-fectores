<%- include('../partials/user/header') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap');

    :root {
        --gold: #d4af37;
        --light-gold: #f4e4c1;
        --dark-gold: #b8941f;
        --dark: #0a0a0a;
        --darker: #050505;
        --light-dark: #1a1a1a;
        --medium-gray: #2a2a2a;
        --light-gray: #444;
        --white: #ffffff;
        --off-white: #f5f5f5;
        --red: #c41e3a;
        --light-red: #ff4d6d;
    }

    body {
        font-family: 'Montserrat', sans-serif;
        background: var(--darker);
        color: var(--white);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Breadcrumb */
    .breadcrumb {
        padding: 60px 80px 30px;
        background: linear-gradient(to bottom, var(--darker), transparent);
    }

    .breadcrumb-links {
        display: flex;
        align-items: center;
        gap: 15px;
        font-size: 11px;
        letter-spacing: 2.5px;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
    }

    .breadcrumb-links a {
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 400;
    }

    .breadcrumb-links a:hover {
        color: var(--gold);
    }

    .breadcrumb-separator {
        color: var(--gold);
        opacity: 0.5;
        font-size: 10px;
    }

    .current-page {
        color: var(--gold);
        font-weight: 500;
    }

    /* Wishlist Header */
    .wishlist-header {
        padding: 0 80px 60px;
        position: relative;
    }

    .wishlist-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 80px;
        right: 80px;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent, 
            rgba(212, 175, 55, 0.3), 
            transparent
        );
    }

    .wishlist-title-main {
        font-family: 'Cormorant Garamond', serif;
        font-size: 56px;
        font-weight: 300;
        letter-spacing: 8px;
        margin-bottom: 15px;
        color: var(--white);
        position: relative;
        display: inline-block;
    }

    .wishlist-title-main::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 60px;
        height: 2px;
        background: linear-gradient(90deg, var(--gold), transparent);
    }

    .wishlist-subtitle {
        font-size: 12px;
        letter-spacing: 4px;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        font-weight: 300;
        margin-top: 25px;
    }

    /* Wishlist Container */
    .wishlist-container {
        padding: 40px 80px 120px;
    }

    /* Empty Wishlist */
    .empty-wishlist {
        text-align: center;
        padding: 120px 20px;
        position: relative;
    }

    .empty-wishlist::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(212, 175, 55, 0.05) 0%, transparent 70%);
        z-index: -1;
    }

    .empty-icon {
        font-size: 80px;
        color: var(--gold);
        margin-bottom: 40px;
        opacity: 0.3;
        animation: subtleFloat 3s ease-in-out infinite;
    }

    @keyframes subtleFloat {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-10px) scale(1.05); }
    }

    .empty-wishlist h3 {
        font-family: 'Cormorant Garamond', serif;
        font-size: 32px;
        font-weight: 300;
        letter-spacing: 4px;
        margin-bottom: 25px;
        color: var(--white);
    }

    .empty-wishlist p {
        font-size: 14px;
        letter-spacing: 2px;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 50px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.8;
        font-weight: 300;
    }

    .explore-btn {
        display: inline-flex;
        align-items: center;
        gap: 15px;
        padding: 18px 45px;
        background: linear-gradient(135deg, var(--gold) 0%, var(--dark-gold) 100%);
        color: var(--darker);
        border: none;
        font-size: 11px;
        letter-spacing: 3px;
        text-transform: uppercase;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        border-radius: 1px;
        position: relative;
        overflow: hidden;
    }

    .explore-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s ease;
    }

    .explore-btn:hover::before {
        left: 100%;
    }

    .explore-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.3);
    }

    .explore-btn::after {
        content: 'â†’';
        font-size: 18px;
        transition: transform 0.3s ease;
    }

    .explore-btn:hover::after {
        transform: translateX(5px);
    }

    /* Premium Table Structure */
    .wishlist-table-container {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        margin-top: 40px;
    }

    .wishlist-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: var(--light-dark);
        border: 1px solid rgba(212, 175, 55, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    /* Table Header */
    .table-header {
        background: linear-gradient(135deg, rgba(26, 26, 26, 0.95), rgba(10, 10, 10, 0.95));
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    }

    .table-header th {
        padding: 28px 30px;
        text-align: left;
        font-size: 11px;
        letter-spacing: 3px;
        font-weight: 500;
        color: var(--gold);
        text-transform: uppercase;
        border-right: 1px solid rgba(212, 175, 55, 0.1);
        position: relative;
        background: rgba(10, 10, 10, 0.5);
    }

    .table-header th:last-child {
        border-right: none;
    }

    .table-header th::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 30px;
        right: 30px;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent, 
            rgba(212, 175, 55, 0.3), 
            transparent
        );
    }

    /* Table Rows */
    .table-row {
        background: var(--light-dark);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
    }

    .table-row:hover {
        background: rgba(26, 26, 26, 0.8);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        border-color: rgba(212, 175, 55, 0.2);
    }

    .table-row:last-child {
        border-bottom: none;
    }

    .table-row td {
        padding: 30px;
        vertical-align: middle;
        border-right: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
    }

    .table-row td:last-child {
        border-right: none;
    }

    /* Product Image Cell */
    .product-image-cell {
        width: 140px;
        padding: 20px;
    }

    .product-image-wrapper {
        width: 100px;
        height: 100px;
        position: relative;
        overflow: hidden;
        border-radius: 6px;
        border: 1px solid rgba(212, 175, 55, 0.2);
        transition: all 0.4s ease;
    }

    .table-row:hover .product-image-wrapper {
        transform: scale(1.05) rotate(2deg);
        border-color: var(--gold);
        box-shadow: 0 10px 20px rgba(212, 175, 55, 0.2);
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .table-row:hover .product-image {
        transform: scale(1.1);
    }

    /* Product Details Cell */
    .product-details {
        min-width: 300px;
    }

    .product-name {
        font-family: 'Cormorant Garamond', serif;
        font-size: 22px;
        font-weight: 400;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        color: var(--white);
        line-height: 1.4;
    }

    .product-category {
        font-size: 10px;
        letter-spacing: 2.5px;
        color: var(--light-gray);
        text-transform: uppercase;
        font-weight: 500;
        margin-bottom: 15px;
        opacity: 0.8;
    }

    /* Price Cell */
    .price-cell {
        text-align: center;
        min-width: 180px;
    }

    .current-price {
        font-size: 24px;
        font-weight: 500;
        color: var(--gold);
        letter-spacing: 1px;
        margin-bottom: 5px;
    }

    .original-price {
        font-size: 14px;
        color: var(--light-gray);
        text-decoration: line-through;
        letter-spacing: 1px;
    }

    /* Actions Cell */
    .actions-cell {
        width: 200px;
        text-align: right;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    /* Add to Cart Button */
    .btn-add-cart {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 15px 30px;
        background: linear-gradient(135deg, var(--gold) 0%, var(--dark-gold) 100%);
        color: var(--darker);
        border: none;
        font-size: 10px;
        letter-spacing: 2.5px;
        text-transform: uppercase;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 1px;
        position: relative;
        overflow: hidden;
        min-width: 160px;
        justify-content: center;
    }

    .btn-add-cart::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .btn-add-cart:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-add-cart:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.3);
    }

    .cart-icon {
        font-size: 14px;
        transition: transform 0.3s ease;
    }

    .btn-add-cart:hover .cart-icon {
        transform: translateX(3px);
    }

    /* Delete Button */
    .btn-delete {
        width: 50px;
        height: 50px;
        background: rgba(196, 30, 58, 0.1);
        border: 1px solid rgba(196, 30, 58, 0.3);
        color: var(--red);
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .btn-delete::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--red) 0%, var(--light-red) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 50%;
    }

    .btn-delete:hover::before {
        opacity: 1;
    }

    .btn-delete:hover {
        transform: scale(1.1) rotate(90deg);
        border-color: var(--red);
        color: var(--white);
        box-shadow: 0 8px 20px rgba(196, 30, 58, 0.3);
    }

    .btn-delete i {
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }

    /* Continue Shopping */
    .continue-shopping {
        text-align: center;
        margin-top: 80px;
        padding-top: 60px;
        position: relative;
    }

    .continue-shopping::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent, 
            rgba(212, 175, 55, 0.5), 
            transparent
        );
    }

    .continue-shopping h3 {
        font-family: 'Cormorant Garamond', serif;
        font-size: 32px;
        font-weight: 300;
        letter-spacing: 4px;
        margin-bottom: 25px;
        color: var(--white);
    }

    .continue-shopping p {
        font-size: 14px;
        letter-spacing: 2px;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 40px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.8;
        font-weight: 300;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .breadcrumb,
        .wishlist-header,
        .wishlist-container {
            padding: 40px;
        }

        .wishlist-title-main {
            font-size: 42px;
            letter-spacing: 6px;
        }
    }

    @media (max-width: 768px) {
        .breadcrumb,
        .wishlist-header,
        .wishlist-container {
            padding: 30px 20px;
        }

        .wishlist-title-main {
            font-size: 32px;
            letter-spacing: 4px;
        }

        .wishlist-table {
            display: block;
            overflow-x: auto;
        }

        .table-header th,
        .table-row td {
            padding: 20px;
            font-size: 10px;
        }

        .product-name {
            font-size: 18px;
        }

        .btn-add-cart {
            padding: 12px 20px;
            font-size: 9px;
            min-width: 140px;
        }

        .btn-delete {
            width: 40px;
            height: 40px;
            font-size: 18px;
        }
    }

    /* Fade in animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .wishlist-table-container {
        animation: fadeInUp 0.8s ease forwards;
        opacity: 0;
    }

    .table-row {
        animation: fadeInUp 0.5s ease forwards;
        opacity: 0;
    }
