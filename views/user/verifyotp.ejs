<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premium Verification | ÉLÉGANCE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600&family=Montserrat:wght@200;300;400;600&display=swap" rel="stylesheet">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- jQuery (needed for $.ajax) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
     /* ================= GLOBAL STYLES ================= */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap');

:root {
    --primary: #0a2e3d;
    --secondary: #1a5c75;
    --accent: #d4af37;
    --white: #ffffff;
    --off-white: #f8f7f3;
    --text-dark: #1a2a32;
    --text-muted: #7a8c94;
    --border: rgba(10, 46, 61, 0.1);
    --shadow: 0 20px 50px rgba(10, 46, 61, 0.15);
    --shadow-hover: 0 30px 70px rgba(10, 46, 61, 0.25);
    --gold-glow: 0 0 20px rgba(212, 175, 55, 0.3);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Montserrat', sans-serif;
    background: linear-gradient(135deg, #f8f7f3 0%, #e8e6df 100%);
    color: var(--text-dark);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    position: relative;
    overflow-x: hidden;
}

/* ================= BACKGROUND PATTERN ================= */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle at 15% 85%, rgba(26, 92, 117, 0.03) 0%, transparent 40%),
        radial-gradient(circle at 85% 15%, rgba(212, 175, 55, 0.02) 0%, transparent 40%),
        linear-gradient(135deg, transparent 30%, rgba(255, 255, 255, 0.4) 100%);
    z-index: -1;
}

/* ================= NAVBAR ================= */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 20px 40px;
    z-index: 100;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(10, 46, 61, 0.08);
    box-shadow: 0 10px 30px rgba(10, 46, 61, 0.08);
}

.logo {
    font-family: 'Cormorant Garamond', serif;
    font-size: 28px;
    font-weight: 600;
    color: var(--primary);
    text-decoration: none;
    letter-spacing: 1px;
    position: relative;
}

.logo::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, var(--primary), transparent);
}

/* ================= VERIFICATION CONTAINER ================= */
.verification-container {
    width: 100%;
    max-width: 480px;
    margin: 80px auto 40px;
    padding: 20px;
}

.verification-box {
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(40px) saturate(200%);
    -webkit-backdrop-filter: blur(40px) saturate(200%);
    border-radius: 28px;
    padding: 50px 40px;
    box-shadow: 
        var(--shadow),
        0 1px 0 rgba(255, 255, 255, 0.8) inset,
        0 -1px 0 rgba(10, 46, 61, 0.05) inset;
    border: 1px solid rgba(255, 255, 255, 0.5);
    position: relative;
    overflow: hidden;
    text-align: center;
}

/* Gold border effect */
.verification-box::before {
    content: '';
    position: absolute;
    inset: 0;
    padding: 2px;
    background: linear-gradient(135deg, 
        transparent 0%, 
        rgba(212, 175, 55, 0.3) 50%, 
        transparent 100%);
    -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    border-radius: 28px;
    pointer-events: none;
}

/* Gradient overlay */
.verification-box::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.5) 0%,
        rgba(255, 255, 255, 0.2) 50%,
        rgba(255, 255, 255, 0.3) 100%
    );
    z-index: -1;
}

/* ================= VERIFICATION ICON ================= */
.verification-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    position: relative;
    box-shadow: 
        0 12px 30px rgba(10, 46, 61, 0.2),
        0 0 20px rgba(212, 175, 55, 0.3);
}

.verification-icon::before {
    content: '';
    position: absolute;
    inset: 2px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    backdrop-filter: blur(5px);
}

.verification-icon i {
    font-size: 36px;
    color: var(--white);
    position: relative;
    z-index: 1;
}

/* ================= VERIFICATION TITLE ================= */
.verification-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 15px;
    letter-spacing: -0.5px;
}

.verification-subtitle {
    color: var(--text-muted);
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 40px;
    font-weight: 400;
    letter-spacing: 0.3px;
}

/* ================= OTP INPUT CONTAINER ================= */
.otp-input-container {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 30px;
}

.otp-input {
    width: 56px;
    height: 68px;
    text-align: center;
    font-size: 28px;
    font-weight: 600;
    font-family: 'Montserrat', sans-serif;
    color: var(--primary);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(10, 46, 61, 0.1);
    border-radius: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(10, 46, 61, 0.08) inset;
}

.otp-input:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 
        0 0 0 3px rgba(212, 175, 55, 0.15),
        0 4px 15px rgba(10, 46, 61, 0.08) inset,
        var(--gold-glow);
    transform: translateY(-2px);
}

.otp-input.error {
    border-color: #dc2626;
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.15);
    animation: shake 0.5s ease;
}

@keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
}

/* ================= VERIFICATION MESSAGE ================= */
.verification-message {
    padding: 12px 20px;
    margin-bottom: 25px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 500;
    display: none;
    animation: slideDown 0.4s ease;
}

.verification-message.error {
    background: rgba(220, 38, 38, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(220, 38, 38, 0.2);
    color: #dc2626;
    display: block;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ================= VERIFY BUTTON ================= */
.verify-btn {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    border: none;
    border-radius: 14px;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 700;
    letter-spacing: 1.5px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    position: relative;
    overflow: hidden;
    margin-bottom: 30px;
    box-shadow: 
        0 12px 30px rgba(10, 46, 61, 0.25),
        0 1px 1px rgba(255, 255, 255, 0.2) inset;
}

.verify-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.25), 
        transparent);
    transition: left 0.6s ease;
}

.verify-btn:hover::before {
    left: 100%;
}

.verify-btn:hover {
    transform: translateY(-3px);
    box-shadow: 
        0 20px 45px rgba(10, 46, 61, 0.35),
        0 0 15px rgba(212, 175, 55, 0.3),
        0 1px 1px rgba(255, 255, 255, 0.2) inset;
}

.verify-btn:active {
    transform: translateY(-1px);
}

.verify-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* ================= RESEND CONTAINER ================= */
.resend-container {
    text-align: center;
    padding-top: 25px;
    border-top: 1px solid rgba(10, 46, 61, 0.08);
}

.resend-label {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
}

.resend-btn {
    background: transparent;
    border: 2px solid rgba(10, 46, 61, 0.1);
    color: var(--primary);
    padding: 12px 24px;
    border-radius: 12px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 12px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.resend-btn:hover:not(:disabled) {
    background: rgba(212, 175, 55, 0.1);
    border-color: var(--accent);
    color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(212, 175, 55, 0.15);
}

.resend-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none !important;
}

.resend-icon {
    font-size: 14px;
    transition: transform 0.3s ease;
}

.resend-btn:hover:not(:disabled) .resend-icon {
    transform: rotate(45deg);
}

/* ================= TIMER DISPLAY ================= */
.timer-display {
    color: var(--text-muted);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.3px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    margin-top: 8px;
}

.timer-count {
    color: var(--accent);
    font-weight: 700;
    font-size: 14px;
}

/* ================= FOOTER ================= */
footer {
    margin-top: 40px;
    padding: 20px;
    text-align: center;
    width: 100%;
}

.copyright {
    color: var(--text-muted);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
}

/* ================= CURSOR EFFECTS ================= */
.cursor {
    width: 8px;
    height: 8px;
    background: var(--primary);
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    z-index: 9999;
    mix-blend-mode: difference;
    transition: all 0.1s ease;
}

.cursor-follower {
    width: 20px;
    height: 20px;
    border: 1.5px solid var(--primary);
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    z-index: 9998;
    mix-blend-mode: difference;
    transition: all 0.3s ease;
}

button:hover ~ .cursor,
.otp-input:focus ~ .cursor,
.resend-btn:hover ~ .cursor {
    transform: scale(1.5);
}

button:hover ~ .cursor-follower,
.otp-input:focus ~ .cursor-follower,
.resend-btn:hover ~ .cursor-follower {
    transform: scale(1.3);
}

/* ================= RESPONSIVE DESIGN ================= */
@media (max-width: 768px) {
    .navbar {
        padding: 15px 25px;
    }
    
    .logo {
        font-size: 24px;
    }
    
    .verification-container {
        max-width: 400px;
        margin: 70px auto 30px;
        padding: 15px;
    }
    
    .verification-box {
        padding: 40px 30px;
        border-radius: 24px;
    }
    
    .verification-title {
        font-size: 28px;
    }
    
    .verification-subtitle {
        font-size: 14px;
        margin-bottom: 35px;
    }
    
    .verification-icon {
        width: 70px;
        height: 70px;
        margin-bottom: 20px;
    }
    
    .verification-icon i {
        font-size: 32px;
    }
    
    .otp-input {
        width: 48px;
        height: 58px;
        font-size: 24px;
    }
    
    .verify-btn {
        padding: 16px;
        font-size: 15px;
    }
}

@media (max-width: 480px) {
    .verification-box {
        padding: 35px 25px;
    }
    
    .verification-title {
        font-size: 24px;
    }
    
    .otp-input-container {
        gap: 8px;
    }
    
    .otp-input {
        width: 42px;
        height: 52px;
        font-size: 22px;
        border-radius: 12px;
    }
    
    .verify-btn {
        padding: 15px;
        font-size: 14px;
    }
    
    .resend-btn {
        padding: 10px 20px;
        font-size: 13px;
    }
}

/* ================= ANIMATIONS ================= */
@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-8px);
    }
}

.verification-box:hover {
    animation: float 6s ease-in-out infinite;
}

/* ================= LOADING STATE ================= */
.verification-box.loading {
    position: relative;
}

.verification-box.loading::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 600;
    color: var(--primary);
}

/* ================= SUCCESS ANIMATION ================= */
@keyframes success {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.verification-box.success {
    animation: success 1.5s ease;
}
    </style>
</head>
<body>
    <div class="cursor"></div>
    <div class="cursor-follower"></div>

    <nav class="navbar">
        <a href="#" class="logo">LUXÉShore<span></span></a>
    </nav>

    <div class="verification-container">
        <div class="verification-box">
            <div class="verification-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h1 class="verification-title">Verify Your Account</h1>
            <p class="verification-subtitle">
                We've sent a 6-digit verification code to your email address.<br>
                Please enter the code below to verify your account.
            </p>
            
            <form id="otp" action="/verifyotp" method="post" onsubmit="return validateOTPForm()">
                <div class="otp-input-container">
                    <input type="text" class="otp-input" maxlength="1" data-index="1" autocomplete="off">
                    <input type="text" class="otp-input" maxlength="1" data-index="2" autocomplete="off">
                    <input type="text" class="otp-input" maxlength="1" data-index="3" autocomplete="off">
                    <input type="text" class="otp-input" maxlength="1" data-index="4" autocomplete="off">
                    <input type="text" class="otp-input" maxlength="1" data-index="5" autocomplete="off">
                    <input type="text" class="otp-input" maxlength="1" data-index="6" autocomplete="off">
                </div>
                
                <div class="verification-message error" id="errorMessage">
                    Please enter a valid 6-digit code.
                </div>
                
                <button type="submit" class="verify-btn">Verify Account</button>
                
                <!-- Premium Resend Section -->
                <div class="resend-container">
                    <div class="resend-label">Need a new code?</div>
                    <button type="button" class="resend-btn" id="resendBtn">
                        <span class="resend-text">
                            <i class="fas fa-redo-alt resend-icon"></i>
                            Resend Verification Code
                        </span>
                    </button>
                    <div class="timer-display" id="timerDisplay">
                        Available in <span class="timer-count" id="timerCount">1:00</span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <footer>
        <p class="copyright">&copy; 2025 LUXSHORE. All rights reserved.</p>
    </footer>

<script>
// Custom Cursor
const cursor = document.querySelector('.cursor');
const follower = document.querySelector('.cursor-follower');

document.addEventListener('mousemove', (e) => {
    cursor.style.left = e.clientX + 'px';
    cursor.style.top = e.clientY + 'px';
    
    setTimeout(() => {
        follower.style.left = e.clientX + 'px';
        follower.style.top = e.clientY + 'px';
    }, 100);
});

// Hover effects for buttons
document.querySelectorAll('button, .resend-btn').forEach(el => {
    el.addEventListener('mouseenter', () => {
        cursor.style.transform = 'scale(2)';
        follower.style.transform = 'scale(1.5)';
    });
    el.addEventListener('mouseleave', () => {
        cursor.style.transform = 'scale(1)';
        follower.style.transform = 'scale(1)';
    });
});

document.addEventListener('DOMContentLoaded', function() {
    const otpInputs = document.querySelectorAll('.otp-input');
    const form = document.getElementById('otp');
    const errorMessage = document.getElementById('errorMessage');
    const resendBtn = document.getElementById('resendBtn');
    const timerDisplay = document.getElementById('timerDisplay');
    const timerCount = document.getElementById('timerCount');

    let timeLeft = 36;
    let timer;

    // Disable the resend button at start
    resendBtn.disabled = true;

    // Start countdown function
    function startTimer() {
        resendBtn.disabled = true;
        timerDisplay.style.display = 'block';
        timeLeft = 60;
        updateTimerDisplay();

        timer = setInterval(() => {
            timeLeft--;
            updateTimerDisplay();

            if (timeLeft <= 0) {
                clearInterval(timer);
                resendBtn.disabled = false;
                timerDisplay.style.display = 'none';
                resendBtn.innerHTML = '<span class="resend-text"><i class="fas fa-paper-plane resend-icon"></i>Send New Code</span>';
            }
        }, 1000);
    }

    function updateTimerDisplay() {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerCount.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }

    startTimer(); // start countdown when page loads

    // Handle OTP input navigation
    otpInputs.forEach((input, index) => {
        input.addEventListener('input', (e) => {
            if (e.target.value.length === 1 && index < otpInputs.length - 1) {
                otpInputs[index + 1].focus();
            }
            errorMessage.style.display = 'none';
            input.classList.remove('error');
        });

        input.addEventListener('keydown', (e) => {
            if (e.key === 'Backspace' && e.target.value.length === 0 && index > 0) {
                otpInputs[index - 1].focus();
            }
            if (e.key.length === 1 && !/\d/.test(e.key)) {
                e.preventDefault();
            }
        });
    });

    // Handle resend OTP click
    resendBtn.addEventListener('click', function() {
        if (resendBtn.disabled) return;
        
        // Add loading state
        resendBtn.disabled = true;
        resendBtn.innerHTML = '<span class="resend-text"><i class="fas fa-spinner fa-spin resend-icon"></i>Sending...</span>';
        
        resendOtp();
    });

    // Function to resend OTP
    function resendOtp() {
        $.ajax({
            type: "POST",
            url: "/resendotp",
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: "success",
                        title: "New Code Sent",
                        text: "A new verification code has been sent to your email.",
                        showConfirmButton: false,
                        timer: 2000,
                    });
                    startTimer(); // restart countdown
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "An error occurred while resending OTP. Please try again.",
                    });
                    resetResendButton();
                }
            },
            error: function(xhr, status, error) {
                Swal.fire({
                    icon: "error",
                    title: "Server Error",
                    text: error || "Something went wrong. Please try again."
                });
                resetResendButton();
            }
        });
    }

    function resetResendButton() {
        resendBtn.disabled = false;
        resendBtn.innerHTML = '<span class="resend-text"><i class="fas fa-redo-alt resend-icon"></i>Try Again</span>';
    }
});

// OTP verification (unchanged)
function validateOTPForm() {
    let otpCode = '';
    document.querySelectorAll('.otp-input').forEach(input => {
        otpCode += input.value;
    });
     
    if (otpCode.length !== 6) {
        Swal.fire({
            icon: "error",
            title: "Invalid OTP",
            text: "Please enter all 6 digits."
        });
        return false;
    }

    $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/verifyotp", 
        data: JSON.stringify({ otp: otpCode }),
        success: function (response) {
            try {
                if (response.success) {
                    Swal.fire({
                        icon: "success",
                        title: "OTP Verified",
                        text: "Redirecting...",
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.href = response.redirectUrl || 'user/home';
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Verification Failed",
                        text: response.message || "Invalid code. Please try again."
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "An unexpected error occurred."
                });
            }
        },
        error: function (xhr, status, error) {
            console.error('AJAX Error:', status, error);
            Swal.fire({
                icon: "error",
                title: "Server Error",
                text: error || "Something went wrong. Please try again."
            });
        }
    });

    return false; 
}
</script>

