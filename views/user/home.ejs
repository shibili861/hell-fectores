/* Header */
.section-header {
  text-align: center;
  margin-bottom: 75px;
}

.section-label {
  font-size: 11px;
  letter-spacing: 4px;
  color: var(--primary);
  font-weight: 700;
}

.section-title {
  font-family: 'Cormorant Garamond', serif;
