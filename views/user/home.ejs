  letter-spacing: 8px;
  color: var(--text-dark);
}

/* Grid */
.collection-grid {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 36px;
}

/* Card */
.collection-card {
  position: relative;
  height: 460px;
  border-radius: 22px;
  overflow: hidden;
  background: var(--pure-white);

  box-shadow:
    0 18px 40px rgba(0, 53, 67, 0.1),
    0 6px 18px rgba(0, 53, 67, 0.08);

  transition: all 0.55s ease;
}

.collection-card:hover {
  transform: translateY(-10px);
  box-shadow:
    0 30px 60px rgba(0, 53, 67, 0.16),
    0 12px 30px rgba(0, 53, 67, 0.12);
}

/* Background */
.collection-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  transition: transform 1s ease;
}

.collection-card:hover .collection-bg {
  transform: scale(1.08);
}

/* Overlay */
.collection-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.55) 0%,
    rgba(0, 0, 0, 0.22) 45%,
    rgba(255, 255, 255, 0.06) 100%
  );
}

/* Content */
.collection-content {
  position: absolute;
  bottom: 40px;
  left: 40px;
  right: 40px;
  z-index: 2;
}

.collection-content h3 {
  font-family: 'Cormorant Garamond', serif;
  font-size: 40px;
  letter-spacing: 5px;
  margin-bottom: 12px;
  color: #ffffff;
  transition: transform 0.35s ease;
}

.collection-card:hover h3 {
  transform: translateY(-4px);
}

.collection-content p {
  font-size: 12px;
  letter-spacing: 3px;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 22px;
  font-weight: 500;
}

/* CTA Button */
