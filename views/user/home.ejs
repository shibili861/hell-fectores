/* ================= ROOT ================= */
:root {
  --primary: #8b7355;
  --primary-dark: #6b4423;
  --text-dark: #1a1a1a;
  --text-muted: #777;
  --white: #ffffff;

  --shadow-soft: 0 10px 30px rgba(0,0,0,0.08);
  --shadow-hover: 0 25px 60px rgba(0,0,0,0.15);

  --radius: 18px;
  --transition: all 0.4s ease;
}
/* ================= HERO SECTION ================= */
/* =====================================================
   HERO SECTION — COMPLETE & FIXED
===================================================== */

.hero {
  position: relative;
  height: 90vh;
  min-height: 720px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;

  background:
    linear-gradient(
      rgba(255, 255, 255, 0.86),
      rgba(255, 255, 255, 0.94)
    ),
    url("https://images.unsplash.com/photo-1520975916090-3105956dac38?auto=format&fit=crop&w=2000&q=80")
    center / cover no-repeat;

  overflow: hidden;
}

/* IMPORTANT: allow hover/click */
.hero::before,
.hero::after {
  pointer-events: none;
}

.hero-content {
  position: relative;
  z-index: 5;
  max-width: 980px;
  padding: 0 20px;
}
/* ================= REFERRAL MODAL ================= */

.ref-modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.ref-modal {
  width: 90%;
  max-width: 420px;
  background: #ffffff;
  padding: 36px 32px;
  border-radius: 18px;
  text-align: center;
  box-shadow: 0 30px 80px rgba(0, 0, 0, 0.35);
  animation: modalFadeIn 0.4s ease;
}

.ref-modal h2 {
  font-family: 'Cormorant Garamond', serif;
  font-size: 28px;
  margin-bottom: 10px;
  letter-spacing: 2px;
}

.ref-modal p {
  font-size: 14px;
  color: #666;
  margin-bottom: 24px;
}

.ref-modal input {
  width: 100%;
  padding: 14px;
  border-radius: 12px;
  border: 1px solid #ccc;
  font-size: 14px;
  margin-bottom: 24px;
}

.modal-buttons {
  display: flex;
  gap: 14px;
}

.modal-buttons button {
  flex: 1;
  padding: 14px;
  border-radius: 30px;
  border: none;
  font-size: 12px;
  letter-spacing: 2px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
}

#skipReferral {
  background: #eee;
  color: #333;
}

#applyReferral {
  background: linear-gradient(135deg, #003543, #005566);
  color: #fff;
}

#applyReferral:hover,
#skipReferral:hover {
  transform: translateY(-2px);
}

/* Animation */
@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px) scale(0.96);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* =====================================================
   TOP LABEL
===================================================== */

.hero-subtitle-top {
  display: inline-block;
  font-size: 9px;
  letter-spacing: 6px;
  font-weight: 600;
  text-transform: uppercase;
  color: #5f7f89;
  margin-bottom: 26px;
  opacity: 0;
  animation: fadeUp 0.8s ease forwards;
}

.hero-subtitle-top::after {
  content: '';
  display: block;
  width: 46px;
  height: 1px;
  margin: 18px auto 0;
  background: linear-gradient(135deg, #003543, #005566);
}

/* =====================================================
   MAIN TITLE
===================================================== */

.hero h1 {
  font-family: 'Cormorant Garamond', serif;
  font-size: 92px;
  letter-spacing: 12px;
  font-weight: 500;
  text-transform: uppercase;
  line-height: 1.05;
  margin-bottom: 36px;

  background: linear-gradient(
    135deg,
    #003543,
    #005566,
    #1a6f7c
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

  opacity: 0;
  animation: fadeUp 1.1s ease forwards;
}

.hero h1::after {
  content: '';
  display: block;
  width: 110px;
  height: 1px;
  margin: 32px auto 0;
  background: linear-gradient(135deg, #003543, #005566);
}

/* =====================================================
   SUBTITLE
===================================================== */

.hero-subtitle {
  font-size: 14px;
  letter-spacing: 2.5px;
  color: #6b7f86;
  max-width: 600px;
  margin: 0 auto 56px;
  line-height: 1.9;
  font-weight: 400;

  opacity: 0;
  animation: fadeUp 1.4s ease forwards;
}

/* =====================================================
   BUTTONS
===================================================== */
.hero-buttons {
  display: flex;
  justify-content: center;
  gap: 22px;

  opacity: 1;
  transform: translateY(34px);
  animation: heroButtonsIn 1.7s ease forwards;
}
@keyframes heroButtonsIn {
  to {
    transform: translateY(0);
  }
}

.cta-primary,
.cta-secondary {
  position: relative;
  z-index: 10;
  pointer-events: auto;
}


/* Primary Button */
.cta-primary {
  padding: 16px 52px;
  font-size: 10px;
  letter-spacing: 3.5px;
  font-weight: 700;
  text-transform: uppercase;
  border-radius: 32px;

  background: linear-gradient(135deg, #003543, #005566);
  color: #ffffff;

  border: none;
  position: relative;
  overflow: hidden;

  transition: transform 0.35s ease, box-shadow 0.35s ease;
  box-shadow: 0 16px 40px rgba(0,53,67,0.35);
}

/* Shine effect */
.cta-primary::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    120deg,
    transparent,
    rgba(255,255,255,0.35),
    transparent
  );
  transform: translateX(-120%);
  transition: transform 0.6s ease;
}

.cta-primary:hover::before {
  transform: translateX(120%);
}

.cta-primary:hover {
  transform: translateY(-6px);
  box-shadow: 0 26px 60px rgba(0,53,67,0.45);
}

/* Secondary Button */
.cta-secondary {
  padding: 16px 52px;
  font-size: 10px;
  letter-spacing: 3.5px;
  font-weight: 600;
  text-transform: uppercase;
  border-radius: 32px;

  background: transparent;
  border: 1px solid rgba(0,53,67,0.45);
  color: #0f2f36;

  transition: all 0.35s ease;
}

.cta-secondary:hover {
  background: rgba(0,53,67,0.08);
  transform: translateY(-4px);
}

/* =====================================================
   ANIMATION
===================================================== */

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(34px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
