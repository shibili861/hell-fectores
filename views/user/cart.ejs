<%- include('../partials/user/header') %>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600&family=Montserrat:wght@200;300;400;600&display=swap');

  * { margin: 0; padding: 0; box-sizing: border-box; }

  :root {
    --accent: #003543;
    --accent-soft: #C9E0E3;    /* darker & richer soft teal */
    --bg: #ECEFF1;              /* darker premium off-white */
    --card-bg: #FFFFFF;
    --muted: #3d3d3d;
    --text: #0a1a1a;

    /* ‚≠ê Strong, modern shadows */
    --shadow: 0 28px 80px rgba(0,55,67,0.22);
    --glow: 0 0 55px rgba(0,55,67,0.22);
  }

  body{
    font-family: 'Montserrat', sans-serif;
    background: var(--bg);
    color: var(--text);
    overflow-x: hidden;
    padding-top: 130px;
  }

  /* Subtle background */
  .cart-wrapper::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 120%;
    background:
      radial-gradient(circle at 15% 25%, rgba(0,53,67,0.06) 0%, transparent 60%),
      radial-gradient(circle at 85% 75%, rgba(0,53,67,0.04) 0%, transparent 60%);
    pointer-events: none; z-index: -1;
    animation: pulseGlow 10s ease-in-out infinite alternate;
  }

  @keyframes pulseGlow { 0% { opacity: 0.9; } 100% { opacity: 1; } }

  /* Floating accents */
  .floating-accent {
    position: absolute;
    border: 2px solid rgba(0,53,67,0.10);
    border-radius: 50%;
    opacity: 0.35;
    pointer-events: none;
    animation: floatAccent 20s infinite ease-in-out;
    background: linear-gradient(180deg, rgba(230,245,245,0.4), rgba(255,255,255,0.1));
  }
  .accent1 { width: 200px; height: 200px; top: 10%; left: 8%; animation-delay: 0s; }
  .accent2 { width: 140px; height: 140px; top: 68%; right: 12%; animation-delay: 4s; }
  .accent3 { width: 120px; height: 120px; bottom: 18%; left: 16%; animation-delay: 7s; }

  @keyframes floatAccent {
    0%,100% { transform: translateY(0) rotate(0deg);}
    50% { transform: translateY(-24px) rotate(5deg); }
  }

  .cart-wrapper { 
    max-width: 1350px; 
    margin: 0 auto; 
    padding: 120px 60px 100px; 
    position: relative; 
  }

  /* Header */
  .cart-header { text-align: center; margin-bottom: 40px; position: relative; animation: fadeInUp 0.8s ease 0.1s both; }
  .cart-header::before {
    content: '';
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    width: 110px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent), transparent);
    box-shadow: var(--glow);
  }

  .cart-header h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 48px;
    font-weight: 300;
    letter-spacing: 4px;
    background: linear-gradient(135deg, var(--accent), var(--accent-soft));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 8px;
  }

  .cart-header p {
    font-size: 14px;
    letter-spacing: 2px;
    color: var(--muted);
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.3s forwards;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(18px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  /* Layout with sticky right box */
  .cart-main {
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: 30px;
  }

  /* Cart table container */
  .cart-table-container {
    background: #ffffff;
    border-radius: 16px;
    padding: 28px;
    border: 1px solid rgba(0,53,67,0.12);
    box-shadow: var(--shadow);
  }

  .cart-table { width: 100%; border-collapse: separate; border-spacing: 0 12px; }

  .cart-table thead th {
    font-family: 'Cormorant Garamond', serif;
    font-size: 12px;
    letter-spacing: 3px;
    color: var(--accent);
    padding-bottom: 18px;
    border-bottom: 1px solid rgba(0,53,67,0.15);
  }

  /* Table rows */
  .cart-table tbody tr {
    background: #ffffff;
    border: 1px solid rgba(0,53,67,0.10);
    border-radius: 12px;
    transition: all .3s ease;
  }

  .cart-table tbody tr:hover {
    transform: translateY(-6px);
    box-shadow: var(--glow);
    border-color: rgba(0,53,67,0.25);
    background: linear-gradient(180deg, #FFFFFF, #F4FAFA);
  }

  .cart-table tbody td {
    padding: 18px 14px;
  }

  /* Product info */
  .product-info { display: flex; align-items: center; gap: 20px; }

  .product-image {
    width: 75px;
    height: 75px;
    border-radius: 10px;
    object-fit: cover;
    border: 1.5px solid rgba(0,53,67,0.18);
    transition: all .35s ease;
  }

  .product-info:hover .product-image {
    transform: scale(1.08);
    border-color: var(--accent);
    box-shadow: 0 16px 35px rgba(0,53,67,0.28);
  }

  .product-details h3 { font-size: 16px; font-weight: 500; color: var(--text); }
  .product-category { font-size: 11px; color: var(--muted); letter-spacing: 1px; }

  .price-cell { font-size: 17px; font-weight: 700; color: var(--accent); }
  .total-cell { font-size: 19px; font-weight: 800; color: #003b3b; }

  /* Quantity buttons */
  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 6px 10px;
    background: #fff;
    border: 1px solid rgba(0,53,67,0.15);
    border-radius: 10px;
  }

  .qty-btn {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 1.5px solid var(--accent);
    color: var(--accent);
    background: white;
    font-weight: 700;
    cursor: pointer;
    transition: 0.25s ease;
  }

  .qty-btn:hover {
    background: var(--accent);
    color: #fff;
    transform: scale(1.18);
    box-shadow: 0 12px 28px rgba(0,53,67,0.22);
  }

  /* Remove btn */
  .remove-btn {
    background: transparent;
    color: #D93B3B;
    border: 1px solid rgba(217,59,59,0.3);
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 700;
    cursor: pointer;
    transition: .25s ease;
  }

  .remove-btn:hover {
    background: #D93B3B;
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(217,59,59,0.25);
  }

  /* PRICE DETAILS RIGHT BOX */
  .price-box {
    position: sticky;
    top: 130px;
  }

  .price-card {
    background: #FFFFFF;
    border-radius: 16px;
    padding: 30px;
    border: 1px solid rgba(0,53,67,0.14);
    box-shadow: var(--shadow);
  }

  .price-card h3 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 24px;
    background: linear-gradient(135deg, var(--accent), var(--accent-soft));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 20px;
  }

  .summary-table tr td {
    padding: 12px 0;
    font-size: 15px;
  }

  .summary-label { color: var(--muted); }
  .summary-value { font-weight: 800; text-align: right; color: #003b3b; }

  .total-row td {
    padding-top: 18px;
    font-size: 22px;
    font-weight: 900;
    color: var(--accent);
  }

  /* CHECKOUT BUTTON */
.checkout-btn {
  width: 100%;
  padding: 14px 20px;
  border-radius: 12px;
  border: none;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 1px;
  background: linear-gradient(135deg, var(--accent), var(--accent-soft));
  color: #fff;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 6px 16px rgba(0,53,67,0.15);  /* reduced shadow */
}

.checkout-btn:hover {
  transform: translateY(-3px) scale(1.02);
  background: linear-gradient(135deg, #002a33, #007283);
  box-shadow: 0 10px 20px rgba(0,53,67,0.18); /* reduced hover shadow */
}


  /* EMPTY CART */
  .empty-cart {
    padding: 90px 40px;
    background: white;
    border-radius: 16px;
    border: 1px solid rgba(0,53,67,0.12);
    box-shadow: var(--shadow);
    text-align: center;
  }

  /* TOAST */
  #toast-root { position: fixed; top: 30px; left: 50%; transform: translateX(-50%); z-index: 9999; }
  .toast {
    background: #fff;
    padding: 12px 22px;
    border-radius: 12px;
    border: 1px solid rgba(0,53,67,0.12);
    box-shadow: var(--shadow);
  }
</style>


<!-- Floating accents -->
<div class="floating-accent accent1"></div>
<div class="floating-accent accent2"></div>
<div class="floating-accent accent3"></div>

<div class="cart-wrapper">
  <div class="cart-header">
    <h1>üõí Shopping Cart</h1>
    <p>Review your premium selections</p>
  </div>

  <div id="cart-root">
    <div class="loading">Loading your cart...</div>
  </div>
</div>

<div id="toast-root"></div>

<script>
  const currency = (amt) => '‚Çπ' + Number(amt).toFixed(2);

  // Simple toast message
  function showToast(msg, type = 'info') {
    const root = document.getElementById('toast-root');
    const el = document.createElement('div');
    el.className = `toast ${type === 'error' ? 'error' : ''}`;
    el.textContent = msg;
    root.appendChild(el);
    setTimeout(() => el.remove(), 3000);
  }

  // Fetch cart data with user info
  async function fetchCart() {
    try {
      const res = await fetch('/api/cart');
      return await res.json();
    } catch {
      showToast('Error loading cart', 'error');
      return { success: false, cart: { items: [] }, user: null };
    }
  }

  // Update navbar with user info
  function updateNavbar(user) {
    const userSection = document.getElementById('user-section');
    const guestSection = document.getElementById('guest-section');
    const userName = document.getElementById('user-name');

    if (user && userSection && guestSection && userName) {
      userName.textContent = user.name || user.email;
      userSection.style.display = 'block';
      guestSection.style.display = 'none';
    } else if (guestSection && userSection) {
      userSection.style.display = 'none';
      guestSection.style.display = 'block';
    }
  }

  async function removeItem(productId, size) {
    try {
      const res = await fetch(`/api/cart/${productId}/${size}`, {
        method: "DELETE"
      });

      const data = await res.json();

      if (data.success) {
        showToast(" Item removed");
        renderCart(); // refresh cart UI
      } else {
        showToast(data.message || "Could not remove item", "error");
      }
    } catch (err) {
      showToast("Error removing item", "error");
    }
  }

  async function changeQuantity(productId, size, delta) {
    try {
      const res = await fetch(`/api/cart/${productId}/quantity`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantityDelta: delta, size }),
      });

      const data = await res.json();

      // FIX: match row by productId + size
      let row = document.querySelector(`tr[data-id="${productId}"][data-size="${size}"]`);
      if (!row) row = document.querySelector(`tr[data-id="${productId}"]`);

      const minusBtn = row.querySelector(".qty-minus");
      const plusBtn = row.querySelector(".qty-plus");

      // ERROR HANDLING
      if (!data.success) {
        if (data.type === "max") {
          showToast("Maximum quantity reached (3)", "error");
          plusBtn.disabled = true;
          return;
        }

        if (data.type === "stock") {
          showToast(data.message, "error");
          plusBtn.disabled = true;
          return;
        }

        if (data.type === "min") {
          showToast("Minimum quantity is 1", "error");
          minusBtn.disabled = true;
          return;
        }

        showToast(data.message, "error");
        return;
      }

      // SUCCESS
      const item = data.updatedItem;
      row.querySelector('.qty-display').textContent = item.quantity;
      row.querySelector('td:nth-child(4)').textContent = '‚Çπ' + item.totalprice.toFixed(2);

      if (data.totals) {
        document.getElementById("subtotal").textContent = "‚Çπ" + data.totals.subtotal.toFixed(2);
        // Also update shipping/total if provided
        if (typeof data.totals.shipping !== 'undefined') {
          document.getElementById("shipping-amount").textContent = "‚Çπ" + Number(data.totals.shipping).toFixed(2);
        }
        if (typeof data.totals.total !== 'undefined') {
          document.getElementById("grand-total").textContent = "‚Çπ" + Number(data.totals.total).toFixed(2);
        } else if (typeof data.totals.subtotal !== 'undefined') {
          // compute fallback
          const ship = Number(data.totals.shipping || 0);
          const totalVal = Number(data.totals.subtotal) + ship;
          document.getElementById("grand-total").textContent = "‚Çπ" + totalVal.toFixed(2);
        }
      }

      minusBtn.disabled = item.quantity <= 1;
      plusBtn.disabled = item.quantity >= 3;

      showToast("Quantity updated");

    } catch (err) {
      showToast("Error updating quantity", "error");
    }
  }

  async function renderCart() {
    const root = document.getElementById('cart-root');
    root.innerHTML = `<div class="loading">Loading your cart...</div>`;

    const data = await fetchCart();
    updateNavbar(data.user);

    if (!data.success) {
      root.innerHTML = `<div class="empty-cart">‚ùå Failed to load cart</div>`;
      return;
    }

    const items = data.cart?.items || [];
    if (items.length === 0) {
      root.innerHTML = `
        <div class="empty-cart">
          <h2>Your Cart is Empty üõí</h2>
          <p>Looks like you haven't added anything yet.</p>
          <a href="/collections" style="display:inline-block;margin-top:12px;padding:12px 20px;border-radius:10px;background:linear-gradient(135deg,var(--accent),var(--accent-soft));color:#fff;text-decoration:none;font-weight:700;">Continue Shopping</a>
        </div>`;
      return;
    }

    // compute subtotal (and also try to use backend totals if present)
    let subtotal = 0;
    const rows = items
      .filter(item => item.productId)
      .map(item => {
        const product = item.productId;
        const qty = item.quantity;
        const price = item.price || product.salePrice || product.regularPrice || 0;
        const total = price * qty;
        subtotal += total;

        return `
          <tr data-id="${product._id}" data-size="${item.size || ''}">
            <td>
              <div class="product-info">
                <img src="${product.productImage?.[0] || '/images/no-image.jpg'}" class="product-image" alt="${product.productName || 'product'}">
                <div>
                  <h3>${product.productName}</h3>
                  <div class="product-category">${product.category?.name || ''}</div>
                  ${item.size ? `<div style="color:var(--accent);font-size:0.85rem;margin-top:6px;">Size: <b>${item.size}</b></div>` : ''}
                </div>
              </div>
            </td>

            <td class="price-cell">${currency(price)}</td>

            <td>
              <div class="quantity-controls">
                <button type="button"
                    class="qty-btn qty-minus"
                    onclick="changeQuantity('${product._id}', '${item.size}', -1)"
                    ${qty <= 1 ? 'disabled' : ''}>‚àí</button>

                <div class="qty-display">${qty}</div>

                <button type="button"
                    class="qty-btn qty-plus"
                    onclick="changeQuantity('${product._id}', '${item.size}', 1)">+</button>
              </div>

              ${qty >= 3 ? '<div style="color:#E74C3C;font-size:0.8rem;margin-top:6px;">Max limit reached</div>' : ''}
            </td>

            <td class="total-cell">${currency(total)}</td>

            <td>
              <button type="button"
                class="remove-btn"
                onclick="removeItem('${product._id}', '${item.size || ""}')">
                Remove
              </button>
            </td>

          </tr>`;
      })
      .join('');

    // Use backend totals if available
    const shippingFromServer = data.totals?.shipping;
    const totalFromServer = data.totals?.total;
    const subtotalFromServer = data.totals?.subtotal;

    const displaySubtotal = typeof subtotalFromServer !== 'undefined' ? subtotalFromServer : subtotal;
    const displayShipping = typeof shippingFromServer !== 'undefined' ? shippingFromServer : 0;
    const displayTotal = typeof totalFromServer !== 'undefined' ? totalFromServer : (Number(displaySubtotal) + Number(displayShipping));

    // inject the new 2-column layout with sticky price box
    root.innerHTML = `
      <div class="cart-main">
        <div class="cart-table-container">
          <table class="cart-table">
            <thead>
              <tr><th>Product</th><th>Price</th><th>Quantity</th><th>Total</th><th></th></tr>
            </thead>
            <tbody>${rows}</tbody>
          </table>
        </div>

        <aside class="price-box">
          <div class="price-card">
            <div class="card-header">
              <h3>Price Details</h3>
              <div style="font-size:0.85rem;color:var(--muted);">Secure Checkout</div>
            </div>

            <table class="summary-table" style="width:100%;">
              <tr>
                <td class="summary-label">Subtotal</td>
                <td class="summary-value" id="subtotal">${currency(displaySubtotal)}</td>
              </tr>
              <tr>
                <td class="summary-label">Shipping</td>
                <td class="summary-value" id="shipping-amount">${currency(displayShipping)}</td>
              </tr>

              <tr class="total-row">
                <td class="summary-label">Grand Total</td>
                <td class="summary-value" id="grand-total">${currency(displayTotal)}</td>
              </tr>
            </table>

            <div class="action-buttons">
              <button id="checkout-btn" class="checkout-btn">Proceed to Checkout</button>
              
            </div>

            <div style="font-size:12px;color:var(--muted);margin-top:12px;">
              Prices are inclusive of taxes where applicable.
            </div>
          </div>
        </aside>
      </div>
    `;

    // add event for checkout button (same logic preserved)
    const checkoutBtn = document.getElementById("checkout-btn");
    checkoutBtn.addEventListener("click", async () => {
      try {
        const res = await fetch("/cart/validate", {
          method: "GET",
          credentials: "include"
        });
        const result = await res.json();
        if (!result.success) {
          showToast(result.message || "Some items are unavailable", "error");
          renderCart();
          return;
        }
        window.location.href = "/checkout";
      } catch (err) {
        console.error("Validation error:", err);
        showToast("Failed to proceed to checkout", "error");
      }
    });
  }

  document.addEventListener("DOMContentLoaded", renderCart);
</script>

