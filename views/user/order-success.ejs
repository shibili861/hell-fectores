<style>
/* Google Font */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

/* Order Success Page - Premium Minimal Design */
.order-success-container {
    max-width: 480px;
    margin: 80px auto;
    padding: 0 24px;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    text-align: center;
}

/* Success Icon Animation */
.success-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 32px;
    background: linear-gradient(135deg, #10B981 0%, #059669 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 36px;
    font-weight: 600;
    box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
    animation: successPulse 2s ease-in-out;
    position: relative;
}

.success-icon::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid rgba(16, 185, 129, 0.2);
    border-radius: 50%;
    animation: ripple 1.5s ease-out infinite;
}

@keyframes successPulse {
    0% { transform: scale(0.9); opacity: 0; }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); opacity: 1; }
}

@keyframes ripple {
    0% { transform: scale(1); opacity: 1; }
    100% { transform: scale(1.5); opacity: 0; }
}

/* Heading Styles */
.order-success-container h1 {
    font-size: 28px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 12px;
    letter-spacing: -0.5px;
    line-height: 1.3;
}

.order-success-container > p {
    font-size: 16px;
    color: #6B7280;
    margin-bottom: 40px;
    line-height: 1.6;
}

.order-success-container > p strong {
    color: #111827;
    font-weight: 600;
    background: linear-gradient(135deg, #003543 0%, #005566 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* Order Summary Card */
.order-summary {
    background: white;
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
    border: 1px solid #F3F4F6;
    text-align: left;
}

.order-summary h3 {
    font-size: 18px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid #F3F4F6;
    display: flex;
    align-items: center;
    gap: 10px;
}

.order-summary h3::before {
    content: '';
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #003543 0%, #005566 100%);
    border-radius: 50%;
}

/* Order Items List */
.order-summary ul {
    list-style: none;
    padding: 0;
    margin: 0 0 24px 0;
}

.order-summary li {
    display: flex;
    align-items: center;
    padding: 16px 0;
    border-bottom: 1px solid #F3F4F6;
    transition: all 0.2s ease;
}

.order-summary li:hover {
    background: #F9FAFB;
    margin: 0 -16px;
    padding: 16px;
    border-radius: 12px;
}

.order-summary li:last-child {
    border-bottom: none;
}

.order-summary li img {
    width: 64px;
    height: 64px;
    object-fit: cover;
    border-radius: 12px;
    margin-right: 16px;
    border: 2px solid #F3F4F6;
    transition: all 0.3s ease;
}

.order-summary li:hover img {
    border-color: #E5E7EB;
    transform: scale(1.05);
}

.order-summary li span {
    flex: 1;
    font-size: 15px;
    font-weight: 500;
    color: #111827;
    line-height: 1.5;
}

.order-summary li small {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #059669 !important;
    margin-top: 4px;
}

/* Price Breakdown */
.price-breakdown {
    background: #F9FAFB;
    border-radius: 16px;
    padding: 24px;
    margin-top: 24px;
}

.price-breakdown p {
    display: flex;
    justify-content: space-between;
    margin: 12px 0;
    font-size: 15px;
    color: #6B7280;
    font-weight: 500;
}

.price-breakdown p:last-of-type {
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 2px dashed #E5E7EB;
}

.total-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    margin-top: 16px;
    border-top: 2px solid #E5E7EB;
}

.total-line h3 {
    font-size: 20px;
    font-weight: 700;
    color: #111827;
    margin: 0;
    border: none;
    padding: 0;
}

.total-line h3::before {
    display: none;
}

/* Action Buttons */
.order-success-actions {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 32px;
}

.btn-premium {
    padding: 16px 32px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.btn-premium::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
}

.btn-premium:hover::before {
    left: 100%;
}

.btn-premium:active {
    transform: translateY(2px);
}

/* Primary Button */
.btn-primary-gold {
    background: linear-gradient(135deg, #003543 0%, #005566 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(0, 85, 102, 0.3);
}

.btn-primary-gold:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 85, 102, 0.4);
    background: linear-gradient(135deg, #002a35 0%, #004354 100%);
}

/* Secondary Button */
.btn-secondary-outline {
    background: transparent;
    color: #003543;
    border: 2px solid #E5E7EB;
    position: relative;
}

.btn-secondary-outline:hover {
    border-color: #005566;
    background: rgba(0, 85, 102, 0.02);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
}

/* Responsive Design */
@media (max-width: 480px) {
    .order-success-container {
        margin: 40px auto;
        padding: 0 16px;
    }
    
    .order-success-container h1 {
        font-size: 24px;
    }
    
    .success-icon {
        width: 64px;
        height: 64px;
        font-size: 28px;
        margin-bottom: 24px;
    }
    
    .order-summary {
        padding: 24px;
    }
    
    .order-summary li img {
        width: 56px;
        height: 56px;
    }
    
    .btn-premium {
        padding: 14px 24px;
    }
}

/* Add subtle animation for page load */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.order-success-container > * {
    animation: fadeInUp 0.6s ease-out forwards;
}

.order-success-container > *:nth-child(1) { animation-delay: 0.1s; }
.order-success-container > *:nth-child(2) { animation-delay: 0.2s; }
.order-success-container > *:nth-child(3) { animation-delay: 0.3s; }
.order-summary { animation-delay: 0.4s !important; }
.order-success-actions { animation-delay: 0.5s !important; }
</style>

<!-- Google Fonts - Inter (premium feel) -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="order-success-container">
  <div class="success-icon">✓</div>
  <h1>Order Confirmed – Thank You!</h1>
  <p>Your order <strong>#<%= order.orderId %></strong> has been placed successfully.</p>

  <div class="order-summary">
    <h3>Order Summary</h3>
    <ul>
      <% order.orderedItems.forEach(item => { %>
        <li>
          <img src="<%= item.product?.productImage?.[0] || '/images/no-image.jpg' %>" alt="<%= item.product?.productName %>">
          <span><%= item.product?.productName %> × <%= item.quantity %><br>
            <small style="color:#cccccc;">₹<%= (item.price * item.quantity).toLocaleString() %></small>
          </span>
        </li>
      <% }) %>
    </ul>

    <div class="price-breakdown">
  <p>Subtotal: ₹<%= order.totalPrice.toLocaleString() %></p>

  <p>
    Shipping:
    <%= order.shippingCharge === 0
      ? 'FREE'
      : `₹${order.shippingCharge.toLocaleString()}` %>
  </p>

  <p>Tax: Included</p>

  <div class="total-line">
    <h3>Total: ₹<%= order.finalAmount.toLocaleString() %></h3>
  </div>
</div>

  </div>

  <div class="order-success-actions">
    <a href="/order-details/<%= order.orderId %>" class="btn-premium btn-primary-gold">
      View Order Details
    </a>
    <a href="/collections" class="btn-premium btn-secondary-outline">
      Continue Shopping
    </a>
  </div>
</div>