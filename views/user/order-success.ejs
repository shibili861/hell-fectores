
<style>
.order-success-container {
  text-align: center;
  margin: 80px auto;
  color: #fff;
  font-family: 'Segoe UI', system-ui, sans-serif;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
  padding: 40px 20px;
  border-radius: 20px;
  max-width: 800px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  position: relative;
  overflow: hidden;
}

.order-success-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, #d4af37, #f4e4c1, #d4af37);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.success-icon {
  font-size: 80px;
  margin-bottom: 20px;
  color: #d4af37;
  filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.3));
  animation: bounce 0.6s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
  40% {transform: translateY(-10px);}
  60% {transform: translateY(-5px);}
}

.order-success-container h1 {
  font-size: 2.5rem;
  margin-bottom: 10px;
  background: linear-gradient(135deg, #d4af37, #f4e4c1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 700;
}

.order-success-container p {
  font-size: 1.1rem;
  margin-bottom: 5px;
  color: #e0e0e0;
}

.order-summary {
  margin: 40px auto;
  max-width: 650px;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  padding: 30px;
  border-radius: 15px;
  border: 1px solid rgba(212, 175, 55, 0.3);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.order-summary h3 {
  color: #d4af37;
  font-size: 1.5rem;
  margin-bottom: 20px;
  font-weight: 600;
}

.order-summary ul {
  list-style: none;
  padding: 0;
  margin: 0 0 25px 0;
}

.order-summary li {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 12px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.order-summary li:hover {
  background: rgba(212, 175, 55, 0.1);
  transform: translateX(5px);
}

.order-summary li img {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid rgba(212, 175, 55, 0.3);
}

.order-summary p {
  margin: 8px 0;
  font-size: 1rem;
  color: #b0b0b0;
}

.order-summary h3:last-of-type {
  margin-top: 20px;
  font-size: 1.8rem;
  color: #d4af37;
  border-top: 1px solid rgba(212, 175, 55, 0.3);
  padding-top: 15px;
}

.order-success-actions {
  margin-top: 40px;
  display: flex;
  justify-content: center;
  gap: 25px;
  flex-wrap: wrap;
}

.btn-view-order, .btn-continue-shopping {
  background: linear-gradient(135deg, #d4af37, #f4e4c1);
  color: #0a0a0a;
  padding: 14px 32px;
  border-radius: 12px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
}

.btn-view-order::before, .btn-continue-shopping::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.btn-view-order:hover::before, .btn-continue-shopping:hover::before {
  left: 100%;
}

.btn-view-order:hover, .btn-continue-shopping:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(212, 175, 55, 0.5);
}

.btn-view-order:active, .btn-continue-shopping:active {
  transform: translateY(-1px);
}

/* Responsive design */
@media (max-width: 768px) {
  .order-success-container {
    margin: 40px 20px;
    padding: 30px 15px;
  }
  
  .order-success-container h1 {
    font-size: 2rem;
  }
  
  .order-summary {
    padding: 20px 15px;
  }
  
  .order-success-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .btn-view-order, .btn-continue-shopping {
    width: 100%;
    max-width: 280px;
  }
}
</style>



<div class="order-success-container">
  <div class="success-icon">✅</div>
  <h1>Thank you for your order!</h1>
  <p>Your order <strong>#<%= order.orderId %></strong> has been placed successfully.</p>

  <div class="order-summary">
    <h3>Order Summary</h3>
    <ul>
      <% order.orderedItems.forEach(item => { %>
        <li>
          <img src="<%= item.product?.productImage?.[0] || '/images/no-image.jpg' %>" width="60">
          <span><%= item.product?.productName %> (x<%= item.quantity %>) - ₹<%= item.price * item.quantity %></span>
        </li>
      <% }) %>
    </ul>

    <p>Subtotal: ₹<%= order.totalPrice.toLocaleString() %></p>
    <p>Tax: ₹<%= (order.totalPrice * 0.05).toLocaleString() %></p>
    <p>Shipping: ₹<%= order.totalPrice > 5000 ? 0 : 100 %></p>
    <h3>Total Paid: ₹<%= order.finalAmount.toLocaleString() %></h3>
  </div>

  <div class="order-success-actions">
  <a href="/order-details/<%= order.orderId %>" class="btn btn-primary">View Order Details</a>


    <a href="/collections" class="btn-continue-shopping">Continue Shopping</a>
  </div>
</div>
