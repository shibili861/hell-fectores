<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice - <%= order.orderId %></title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', system-ui, sans-serif;
    }

    body {
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
      padding: 40px;
      color: #334155;
    }

    .invoice {
      background: white;
      max-width: 950px;
      margin: auto;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 53, 67, 0.08);
    }

    /* HEADER */
    .invoice-header {
      background: linear-gradient(135deg, #003543 0%, #005566 100%);
      color: white;
      padding: 30px 40px;
      position: relative;
    }

    .invoice-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #00a8c6, #4ade80);
    }

    .invoice-header h1 {
      font-size: 2rem;
      letter-spacing: 1px;
    }

    .invoice-header p {
      opacity: 0.85;
      font-size: 0.95rem;
      margin-top: 5px;
    }

    /* DOWNLOAD BUTTON */
    .download-btn {
      position: absolute;
      right: 40px;
      top: 30px;
      background: white;
      color: #003543;
      border: none;
      padding: 10px 18px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .download-btn:hover {
      background: #f1f5f9;
      transform: translateY(-1px);
    }

    /* META */
    .meta {
      display: flex;
      justify-content: space-between;
      padding: 25px 40px;
      background: #f8fafc;
      border-bottom: 1px solid #e2e8f0;
      font-size: 14px;
    }

    /* TABLE */
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background: #f1f5f9;
      padding: 14px;
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
      color: #64748b;
      text-align: left;
    }

    td {
      padding: 14px;
      border-bottom: 1px solid #f1f5f9;
      vertical-align: middle;
    }

    tr:hover {
      background: #f8fafc;
    }

    .product-img {
      width: 55px;
      height: 70px;
      object-fit: cover;
      border-radius: 8px;
      border: 1px solid #e2e8f0;
    }

    /* SUMMARY */
    .summary {
      text-align: right;
      padding: 30px 40px;
      background: #f8fafc;
    }

    .summary p {
      margin-bottom: 6px;
    }

    .summary h3 {
      margin-top: 10px;
      font-size: 1.5rem;
      color: #003543;
    }

    /* PRINT */
    @media print {
      body {
        background: none;
        padding: 0;
      }

      .invoice {
        box-shadow: none;
        border-radius: 0;
      }

      .download-btn {
        display: none;
      }
    }
  </style>
</head>

<body>

  <div class="invoice">

    <!-- HEADER -->
    <div class="invoice-header">
      <h1>LUXSHORE</h1>
      <p>Premium Fashion Invoice</p>

      <button class="download-btn" onclick="downloadInvoice()">
        ⬇ Download Invoice
      </button>
    </div>

    <!-- META -->
    <div class="meta">
      <div>
        <p><strong>Order ID:</strong> <%= order.orderId %></p>
        <p><strong>Date:</strong> <%= new Date(order.createdOn).toLocaleDateString() %></p>
      </div>
      <div>
        <p><strong>Payment:</strong> <%= order.paymentMethod %></p>
        <p><strong>Status:</strong> <%= order.paymentStatus %></p>
      </div>
    </div>

    <!-- TABLE -->
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Size</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>

      <tbody>
        <% order.orderedItems.forEach(item => { %>
          <tr>
            <td>
              <img
                src="<%= item.product.productImage && item.product.productImage.length
                      ? item.product.productImage[0]
                      : '/images/no-image.png' %>"
                class="product-img"
                alt="Product">
            </td>
            <td><%= item.product.productName %></td>
            <td><%= item.size %></td>
            <td><%= item.quantity %></td>
            <td>₹<%= item.price %></td>
            <td>₹<%= item.price * item.quantity %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- SUMMARY -->
    <div class="summary">
      <p>Total: ₹<%= order.totalPrice %></p>
      <p>Discount: ₹<%= order.discount %></p>
      <h3>Final Amount: ₹<%= order.finalAmount %></h3>
    </div>

  </div>

  <script>
    function downloadInvoice() {
      window.print();
    }
  </script>

</body>
</html>
