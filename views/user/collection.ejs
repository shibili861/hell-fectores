<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@300;400;500;600&display=swap');

/* ================= RESET ================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* ================= VARIABLES ================= */
:root {
  --primary: #003543;
  --secondary: #005566;

  --white: #ffffff;
  --soft-white: #fafafa;
  --warm-white: #f3f2ef;

  --text-dark: #0b1f26;
  --text-muted: #6b7f87;

  --border: rgba(0, 53, 67, 0.12);
  --shadow: 0 18px 40px rgba(0, 53, 67, 0.12);
  --shadow-hover: 0 30px 60px rgba(0, 53, 67, 0.22);
}

/* ================= BODY ================= */
body {
  font-family: 'Montserrat', sans-serif;
  background: linear-gradient(180deg, var(--warm-white), var(--soft-white));
  color: var(--text-dark);
  overflow-x: hidden;
}

/* ================= PAGE HEADER ================= */
.page-header {
  padding: 90px 20px 70px;
  background: linear-gradient(180deg, #ffffff, #f2f4f5);
  border-bottom: 1px solid var(--border);
}

.page-header-content {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.page-subtitle {
  font-size: 13px;
  letter-spacing: 3px;
  color: var(--primary);
  margin-bottom: 12px;
}

.page-title {
  font-family: 'Cormorant Garamond', serif;
  font-size: 56px;
  font-weight: 600;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.page-description {
  margin-top: 14px;
  font-size: 15px;
  color: var(--text-muted);
  line-height: 1.6;
}
/* ================= FILTER BAR ================= */
.filter-navbar {
  position: sticky;
  top: 72px;
  z-index: 90;

  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(22px) saturate(140%);
  -webkit-backdrop-filter: blur(22px) saturate(140%);

  border-bottom: 1px solid rgba(0, 53, 67, 0.12);
  box-shadow: 0 10px 30px rgba(0, 53, 67, 0.12);
}

/* Container */
.filter-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 14px 18px;

  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 14px;
}

/* Groups */
.filter-group,
.filter-actions {
  display: flex;
  align-items: center;
  gap: 12px;
}

/* ================= SEARCH (FIXED ALIGNMENT) ================= */
.search-container {
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Search input */
.search-input {
  height: 38px;
  width: 200px;

  padding: 0 16px;
  border-radius: 30px;

  border: 1px solid rgba(0, 53, 67, 0.18);
  background: rgba(255, 255, 255, 0.9);

  font-size: 12px;
  color: var(--text-dark);

  transition: all 0.3s ease;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
}

.search-input::placeholder {
  color: var(--text-muted);
}

/* Focus */
.search-input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(0, 53, 67, 0.15);
}

/* Search button */
.search-btn {
  width: 38px;
  height: 38px;

  border-radius: 50%;
  border: none;

  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: #fff;

  display: flex;
  align-items: center;
  justify-content: center;

  cursor: pointer;
  box-shadow: 0 8px 18px rgba(0, 53, 67, 0.28);
  transition: all 0.35s ease;
}

.search-btn:hover {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 14px 32px rgba(0, 53, 67, 0.38);
}

/* ================= SELECT DROPDOWNS ================= */
.filter-select {
  height: 38px;
  min-width: 150px;

  padding: 0 16px;
  border-radius: 30px;

  border: 1px solid rgba(0, 53, 67, 0.18);
  background: rgba(255, 255, 255, 0.9);

  font-size: 12px;
  color: var(--text-dark);

  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-select:hover {
  border-color: var(--primary);
}

.filter-select:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(0, 53, 67, 0.15);
}

/* ================= ACTION BUTTONS ================= */
.apply-filters-btn {
  height: 38px;
  padding: 0 24px;

  border-radius: 30px;
  border: none;

  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: #ffffff;

  font-size: 12px;
  font-weight: 600;
  letter-spacing: 0.5px;

  cursor: pointer;
  box-shadow: 0 8px 20px rgba(0, 53, 67, 0.28);
  transition: all 0.35s ease;
}

.apply-filters-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 16px 36px rgba(0, 53, 67, 0.38);
}

/* Reset button */
.filter-btn {
  height: 38px;
  padding: 0 18px;

  border-radius: 30px;
  border: 1px solid rgba(0, 53, 67, 0.22);

  background: rgba(255, 255, 255, 0.6);
  color: var(--primary);

  font-size: 12px;
  font-weight: 500;

  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-btn:hover {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: #fff;
  box-shadow: 0 10px 26px rgba(0, 53, 67, 0.32);
}

/* ================= RESPONSIVE ================= */
@media (max-width: 992px) {
  .filter-container {
    flex-direction: column;
    align-items: stretch;
  }

  .filter-group,
  .filter-actions {
    justify-content: center;
    flex-wrap: wrap;
  }

  .search-input {
    width: 100%;
  }
}
/* ======================================================
   PREMIUM DROPDOWN (SELECT) REFINEMENT
====================================================== */

/* Remove default browser arrow */
.filter-select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;

  padding-right: 42px; /* space for custom arrow */
  background:
    linear-gradient(135deg, rgba(255,255,255,0.9), rgba(255,255,255,0.7));
  backdrop-filter: blur(12px);
  box-shadow:
    inset 0 1px 2px rgba(255,255,255,0.6),
    0 6px 16px rgba(0, 53, 67, 0.12);

  font-weight: 500;
}

/* Custom arrow */
.filter-select {
  background-image:
    url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23003543' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6 9l6 6 6-6'/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: right 16px center;
  background-size: 14px;
}

/* Hover */
.filter-select:hover {
  border-color: var(--primary);
  box-shadow:
    inset 0 1px 2px rgba(255,255,255,0.7),
    0 10px 26px rgba(0, 53, 67, 0.18);
}

/* Focus (luxury ring) */
.filter-select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow:
    0 0 0 3px rgba(0, 53, 67, 0.18),
    0 14px 32px rgba(0, 53, 67, 0.25);
}

/* ================= DROPDOWN OPTIONS ================= */
/* (Note: browser-limited, but improved) */
.filter-select option {
  background: #ffffff;
  color: var(--text-dark);
  font-size: 13px;
  padding: 10px;
}

/* ================= FILTER BAR MICRO POLISH ================= */

/* Slightly tighter vertical rhythm */
.filter-container {
  padding-top: 12px;
  padding-bottom: 12px;
}

/* Elevate whole bar on scroll feel */
.filter-navbar {
  transition: box-shadow 0.35s ease, background 0.35s ease;
}

.filter-navbar:hover {
  box-shadow: 0 14px 40px rgba(0, 53, 67, 0.18);
}

/* ================= SEARCH + SELECT VISUAL UNITY ================= */
.search-input,
.filter-select {
  height: 38px;
}

/* Make all controls feel from same family */
.search-input,
.filter-select,
.apply-filters-btn,
.filter-btn,
.search-btn {
  font-family: 'Montserrat', sans-serif;
}

/* ================= RESPONSIVE REFINEMENT ================= */
@media (max-width: 992px) {
  .filter-select {
    width: 100%;
  }
}

/* ================= PRODUCTS ================= */
.products-section {
  padding: 60px 20px 120px;
}

.results-count {
  max-width: 1200px;
  margin: 0 auto 30px;
  font-size: 14px;
  color: var(--text-muted);
}

/* ================= GRID ================= */
.products-grid {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 28px;
}

/* ================= PRODUCT CARD ================= */
.product-card {
  background: var(--white);
  border-radius: 20px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
  overflow: hidden;
  transition: all 0.4s ease;
}

.product-card:hover {
  transform: translateY(-10px);
  box-shadow: var(--shadow-hover);
}

/* ================= IMAGE ================= */
.product-image {
  position: relative;
  height: 420px;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.product-card:hover img {
  transform: scale(1.07);
}

/* ================= GLASS OVERLAY ================= */
.product-quick-view {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  gap: 12px;
  padding: 22px;
  background: linear-gradient(
    to top,
    rgba(0, 53, 67, 0.85),
    rgba(0, 53, 67, 0.35),
    transparent
  );
  opacity: 0;
  transition: opacity 0.4s ease;
}

.product-card:hover .product-quick-view {
  opacity: 1;
}

/* ================= OVERLAY BUTTONS ================= */
.quick-view-btn {
  width: 100%;
  padding: 12px;
  border-radius: 30px;
  border: none;
  background: rgba(255, 255, 255, 0.95);
  color: var(--primary);
  font-weight: 600;
  cursor: pointer;
}

.quick-view-btn:hover {
  background: var(--primary);
  color: #fff;
}

.quick-btns-row {
  display: flex;
  justify-content: center;
}

.quick-btn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  border: none;
  background: rgba(255, 255, 255, 0.95);
  color: var(--primary);
  font-size: 18px;
  cursor: pointer;
  box-shadow: 0 8px 18px rgba(0,53,67,.18);
}

.quick-btn:hover {
  background: var(--primary);
  color: #fff;
}

/* ================= PRODUCT INFO ================= */
.product-info {
  padding: 20px;
  text-align: center;
}

.product-category {
  font-size: 11px;
  color: var(--text-muted);
  letter-spacing: 2px;
}

.product-name {
  font-size: 15px;
  font-weight: 600;
  margin: 10px 0;
}

.product-price {
  font-size: 17px;
  font-weight: 700;
  color: var(--primary);
}

/* ================= PAGINATION ================= */
.pagination {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 60px;
}

.pagination-btn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  border: 1px solid var(--border);
  background: transparent;
  color: var(--primary);
  cursor: pointer;
}

.pagination-btn.active,
.pagination-btn:hover {
  background: var(--primary);
  color: #fff;
}
/* ================= WISHLISTED (COLLECTION) ================= */
.quick-btn.wishlisted {
  background: #1c1c1c; /* premium charcoal */
  color: #f5f5f5;

  box-shadow:
    0 0 0 1px rgba(255,255,255,0.08),
    0 10px 22px rgba(0, 0, 0, 0.35);
}
.quick-btn.wishlisted:hover {
  background: #111;
}

/* ================= RESPONSIVE ================= */
@media (max-width: 1100px) {
  .products-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .filter-container {
    flex-direction: column;
    align-items: stretch;
  }

  .filter-group,
  .filter-actions {
    justify-content: center;
    flex-wrap: wrap;
  }

  .products-grid {
    grid-template-columns: 1fr;
  }

  .page-title {
    font-size: 42px;
  }
}


