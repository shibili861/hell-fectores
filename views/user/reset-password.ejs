
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - LUXSHORE</title>
    <style>
/* ================= PREMIUM PASSWORD RESET PAGE ================= */
/* ================= PREMIUM PASSWORD RESET PAGE ================= */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap');

:root {
    --primary: #003543;
    --secondary: #005566;
    --accent: #C19A6B;
    --accent-light: #D4B596;
    --success: #28a745;
    --error: #dc3545;
    --warning: #ffc107;
    --white: #ffffff;
    --off-white: #f9f7f4;
    --text-dark: #1a1a1a;
    --text-muted: #6c757d;
    --border: rgba(0, 53, 67, 0.1);
    --shadow: 0 15px 35px rgba(0, 53, 67, 0.08);
    --shadow-hover: 0 20px 40px rgba(0, 53, 67, 0.12);
    --glass-bg: rgba(255, 255, 255, 0.98);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    color: var(--text-dark);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    position: relative;
    overflow-x: hidden;
}

/* ================= ELEGANT BACKGROUND ================= */
.animated-bg {
    position: fixed;
    inset: 0;
    background: 
        linear-gradient(135deg, rgba(0, 53, 67, 0.03) 0%, transparent 100%),
        linear-gradient(225deg, rgba(193, 154, 107, 0.03) 0%, transparent 100%);
    z-index: -1;
    pointer-events: none;
}

/* ================= SUBTLE SHAPES ================= */
.floating-shapes {
    position: fixed;
    inset: 0;
    z-index: -1;
    pointer-events: none;
    overflow: hidden;
}

.shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.03;
    filter: blur(60px);
}

.shape1 {
    width: 300px;
    height: 300px;
    top: 15%;
    left: 10%;
    background: var(--primary);
}

.shape2 {
    width: 250px;
    height: 250px;
    top: 65%;
    right: 12%;
    background: var(--secondary);
}

.shape3 {
    width: 200px;
    height: 200px;
    bottom: 15%;
    left: 20%;
    background: var(--accent);
}

/* ================= MAIN CONTAINER ================= */
.reset-container {
    width: 100%;
    max-width: 460px;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 24px;
    padding: 48px 40px;
    box-shadow: var(--shadow);
    border: 1px solid rgba(255, 255, 255, 0.8);
    position: relative;
    z-index: 10;
    text-align: center;
}

/* Subtle border effect */
.reset-container::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 1px;
    background: linear-gradient(135deg, 
        rgba(0, 53, 67, 0.1) 0%, 
        rgba(255, 255, 255, 0.2) 50%, 
        rgba(0, 53, 67, 0.1) 100%);
    -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
}

/* ================= BRAND HEADER ================= */
.brand-header {
    margin-bottom: 40px;
    position: relative;
}

.brand-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 42px;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: 1px;
    margin-bottom: 8px;
    text-transform: uppercase;
    position: relative;
    display: inline-block;
}

.brand-title span {
    color: var(--accent);
    font-weight: 400;
    letter-spacing: 2px;
}

.brand-subtitle {
    color: var(--text-muted);
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    opacity: 0.7;
    position: relative;
    padding-top: 10px;
}

.brand-subtitle::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 1px;
    background: var(--accent);
    opacity: 0.5;
}

/* ================= ICON WRAPPER ================= */
.icon-wrapper {
    width: 80px;
    height: 80px;
    margin: 0 auto 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    position: relative;
    box-shadow: 
        0 8px 25px rgba(0, 53, 67, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.icon-wrapper::after {
    content: '';
    position: absolute;
    inset: 2px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    z-index: 1;
}

.icon-wrapper svg {
    width: 32px;
    height: 32px;
    stroke: var(--white);
    stroke-width: 1.5;
    position: relative;
    z-index: 2;
}

/* ================= FORM STYLES ================= */
form {
    margin-bottom: 32px;
}

form h2 {
    font-family: 'Inter', sans-serif;
    font-size: 26px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 24px;
    letter-spacing: -0.3px;
}

/* ================= ERROR MESSAGE ================= */
form p[style*="color:red"] {
    background: rgba(220, 53, 69, 0.08);
    border: 1px solid rgba(220, 53, 69, 0.15);
    border-radius: 12px;
    padding: 16px 20px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 28px;
    color: var(--error);
    text-align: left;
    position: relative;
    padding-left: 50px;
}

form p[style*="color:red"]::before {
    content: '‚ö†';
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 16px;
    color: var(--error);
}

/* ================= INPUT WRAPPER ================= */
.input-wrapper {
    position: relative;
    margin-bottom: 24px;
}

.input-wrapper input {
    width: 100%;
    padding: 18px 52px 18px 20px;
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    font-weight: 400;
    color: var(--text-dark);
    background: rgba(255, 255, 255, 0.9);
    border: 1.5px solid rgba(0, 53, 67, 0.15);
    border-radius: 12px;
    transition: all 0.2s ease;
    box-shadow: 
        0 2px 8px rgba(0, 53, 67, 0.04) inset;
}

.input-wrapper input:focus {
    outline: none;
    border-color: var(--accent);
    background: var(--white);
    box-shadow: 
        0 0 0 3px rgba(193, 154, 107, 0.1),
        0 2px 8px rgba(0, 53, 67, 0.04) inset;
}

.input-wrapper input::placeholder {
    color: var(--text-muted);
    opacity: 0.6;
}

/* ================= TOGGLE PASSWORD ================= */
.toggle-password {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    font-size: 18px;
    color: var(--text-muted);
    transition: all 0.2s ease;
    user-select: none;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

.toggle-password:hover {
    color: var(--accent);
    background: rgba(193, 154, 107, 0.1);
}

/* ================= PASSWORD STRENGTH ================= */
.password-strength {
    background: rgba(248, 249, 250, 0.8);
    border: 1.5px solid rgba(0, 53, 67, 0.1);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    text-align: left;
    display: none;
}

.password-strength.show {
    display: block;
}

.strength-title {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.strength-title::before {
    content: 'üîí';
    font-size: 14px;
}

.strength-bars {
    display: flex;
    gap: 6px;
    margin-bottom: 12px;
}

.strength-bar {
    flex: 1;
    height: 4px;
    background: rgba(0, 53, 67, 0.1);
    border-radius: 2px;
    transition: all 0.3s ease;
}

.strength-bar.active.weak {
    background: var(--error);
}

.strength-bar.active.medium {
    background: var(--warning);
}

.strength-bar.active.strong {
    background: var(--success);
}

.strength-text {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-muted);
    transition: all 0.3s ease;
}

/* ================= PASSWORD MATCH ================= */
.password-match {
    background: rgba(248, 249, 250, 0.8);
    border: 1.5px solid rgba(0, 53, 67, 0.1);
    border-radius: 12px;
    padding: 16px 20px;
    margin-bottom: 24px;
    font-size: 14px;
    font-weight: 500;
    display: none;
    text-align: left;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
}

.password-match.show {
    display: flex;
}

.password-match.match {
    color: var(--success);
    border-color: rgba(40, 167, 69, 0.2);
    background: rgba(40, 167, 69, 0.08);
}

.password-match.no-match {
    color: var(--error);
    border-color: rgba(220, 53, 69, 0.2);
    background: rgba(220, 53, 69, 0.08);
}

/* ================= SUBMIT BUTTON ================= */
form button[type="submit"] {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: var(--white);
    border: none;
    border-radius: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    font-weight: 600;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
    margin-top: 8px;
    box-shadow: 
        0 8px 20px rgba(0, 53, 67, 0.15);
}

form button[type="submit"]:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 
        0 12px 25px rgba(0, 53, 67, 0.2);
}

form button[type="submit"]:active:not(:disabled) {
    transform: translateY(0);
}

form button[type="submit"]:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none !important;
    box-shadow: 0 4px 12px rgba(0, 53, 67, 0.1);
}

/* ================= LOADING STATE ================= */
form button[type="submit"].loading {
    color: transparent;
    position: relative;
}

form button[type="submit"].loading::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 22px;
    height: 22px;
    margin: -11px 0 0 -11px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: var(--white);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* ================= FORM FOOTER ================= */
.form-footer {
    padding-top: 28px;
    border-top: 1px solid rgba(0, 53, 67, 0.08);
    text-align: center;
}

.footer-text {
    color: var(--text-muted);
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.3px;
}

.footer-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    position: relative;
    transition: all 0.2s ease;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: 2px;
}

.footer-link:hover {
    color: var(--accent);
    background: rgba(193, 154, 107, 0.1);
}

/* ================= RESPONSIVE DESIGN ================= */
@media (max-width: 768px) {
    .reset-container {
        max-width: 420px;
        padding: 40px 32px;
    }
    
    .brand-title {
        font-size: 36px;
    }
    
    .icon-wrapper {
        width: 72px;
        height: 72px;
        margin-bottom: 32px;
    }
    
    form h2 {
        font-size: 24px;
    }
    
    .input-wrapper input {
        padding: 16px 48px 16px 18px;
    }
    
    .password-strength,
    .password-match {
        padding: 18px;
    }
    
    form button[type="submit"] {
        padding: 16px;
    }
}

@media (max-width: 480px) {
    body {
        padding: 16px;
    }
    
    .reset-container {
        max-width: 100%;
        padding: 36px 24px;
        border-radius: 20px;
    }
    
    .brand-title {
        font-size: 32px;
    }
    
    .icon-wrapper {
        width: 64px;
        height: 64px;
        margin-bottom: 28px;
    }
    
    .icon-wrapper svg {
        width: 28px;
        height: 28px;
    }
    
    form h2 {
        font-size: 22px;
    }
    
    .input-wrapper input {
        padding: 14px 44px 14px 16px;
        font-size: 14px;
    }
    
    .toggle-password {
        right: 16px;
    }
    
    .password-strength,
    .password-match {
        padding: 16px;
    }
    
    form button[type="submit"] {
        padding: 16px;
        font-size: 14px;
    }
}

/* ================= FOCUS STATES ================= */
input:focus, 
button:focus, 
a:focus, 
.toggle-password:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
}

/* ================= SMOOTH APPEARANCE ================= */
.reset-container {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ================= ACCESSIBILITY ================= */
@media (prefers-reduced-motion: reduce) {
    * {
        animation: none !important;
        transition: none !important;
    }
    
    .reset-container {
        opacity: 1;
        transform: none;
        animation: none;
    }
}
    </style>
</head>
<body>
    <div class="animated-bg"></div>
    <div class="floating-shapes">
        <div class="shape shape1"></div>
        <div class="shape shape2"></div>
        <div class="shape shape3"></div>
    </div>

    <div class="reset-container">
        <div class="brand-header">
           <h1 class="brand-title">lux <span>shore</span></h1>
            <p class="brand-subtitle">Luxury Men's Fashion</p>
        </div>

        <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
            </svg>
        </div>

        <form action="/reset-password" method="POST" id="resetForm">
            <h2>Reset Password</h2>
            <% if (message) { %><p style="color:red"><%= message %></p><% } %>
            
            <div class="input-wrapper">
                <input type="password" name="password" id="password" placeholder="New Password"  />
                <span class="toggle-password" onclick="togglePassword('password')">üëÅ</span>
            </div>

            <div class="password-strength" id="passwordStrength">
                <div class="strength-title">Password Strength</div>
                <div class="strength-bars">
                    <div class="strength-bar"></div>
                    <div class="strength-bar"></div>
                    <div class="strength-bar"></div>
                    <div class="strength-bar"></div>
                </div>
                <div class="strength-text" id="strengthText">Enter a password</div>
            </div>

            <div class="input-wrapper">
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required />
                <span class="toggle-password" onclick="togglePassword('confirmPassword')">üëÅ</span>
            </div>

            <div class="password-match" id="passwordMatch"></div>

            <button type="submit">Reset</button>
        </form>

        <div class="form-footer">
            <p class="footer-text">
                Remember your password? 
                <a href="/login" class="footer-link">Sign In</a>
            </p>
        </div>
    </div>

    <script>
/* ============================
   Toggle password visibility
============================ */
function togglePassword(inputId) {
    const input = document.getElementById(inputId);
    const icon = input.nextElementSibling;

    if (input.type === 'password') {
        input.type = 'text';
        icon.textContent = 'üëÅÔ∏è‚Äçüó®Ô∏è';
    } else {
        input.type = 'password';
        icon.textContent = 'üëÅ';
    }
}

/* ============================
   Elements
============================ */
const form = document.getElementById('resetForm');
const passwordInput = document.getElementById('password');
const confirmPasswordInput = document.getElementById('confirmPassword');
const strengthIndicator = document.getElementById('passwordStrength');
const strengthText = document.getElementById('strengthText');
const matchIndicator = document.getElementById('passwordMatch');
const submitBtn = form.querySelector('button[type="submit"]');
const bars = document.querySelectorAll('.strength-bar');

/* ============================
   Password strength checker
============================ */
passwordInput.addEventListener('input', function () {
    const password = this.value;

    if (!password) {
        strengthIndicator.classList.remove('show');
        return;
    }

    strengthIndicator.classList.add('show');

    let strength = 0;
    bars.forEach(bar => bar.className = 'strength-bar');

    if (password.length >= 8) strength++;
    if (password.length >= 12) strength++;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
    if (/\d/.test(password)) strength++;
    if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) strength++;

    const level = Math.min(Math.floor(strength / 1.5), 4);

    for (let i = 0; i < level; i++) {
        bars[i].classList.add('active');
        bars[i].classList.add(
            level === 1 ? 'weak' :
            level === 2 ? 'medium' : 'strong'
        );
    }

    if (level <= 1) {
        strengthText.textContent = 'Weak password';
        strengthText.style.color = '#f44336';
    } else if (level === 2) {
        strengthText.textContent = 'Medium strength';
        strengthText.style.color = '#FFA726';
    } else if (level === 3) {
        strengthText.textContent = 'Strong password';
        strengthText.style.color = '#4CAF50';
    } else {
        strengthText.textContent = 'Very strong password';
        strengthText.style.color = '#4CAF50';
    }

    checkPasswordMatch();
});

/* ============================
   Password match checker
============================ */
function checkPasswordMatch() {
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;

    if (!confirmPassword) {
        matchIndicator.classList.remove('show');
        submitBtn.disabled = true;
        return;
    }

    matchIndicator.classList.add('show');

    if (password === confirmPassword) {
        matchIndicator.className = 'password-match show match';
        matchIndicator.textContent = '‚úì Passwords match';
        submitBtn.disabled = false;
    } else {
        matchIndicator.className = 'password-match show no-match';
        matchIndicator.textContent = '‚úó Passwords do not match';
        submitBtn.disabled = true;
    }
}

confirmPasswordInput.addEventListener('input', checkPasswordMatch);

/* ============================
   Form validation + loading
============================ */
form.addEventListener('submit', function (e) {
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;

    if (password.length < 8) {
        e.preventDefault();
        alert('Password must be at least 8 characters long');
        return;
    }

    if (password !== confirmPassword) {
        e.preventDefault();
        alert('Passwords do not match');
        return;
    }

    if (!/[a-z]/.test(password) || !/[A-Z]/.test(password) || !/\d/.test(password)) {
        e.preventDefault();
        alert('Password must contain at least one uppercase letter, one lowercase letter, and one number');
        return;
    }

    // Loading state
    submitBtn.classList.add('loading');
    submitBtn.disabled = true;
});

/* ============================
   Initial state
============================ */
submitBtn.disabled = true;
</script>
