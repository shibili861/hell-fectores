function openReturnModal(orderId, itemId) {
  currentOrderId = orderId;
  currentItemId = itemId;

  const modal = document.getElementById("returnModal");
  modal.style.display = "flex";

  modal.offsetHeight; // force reflow for animation

  setTimeout(() => {
    modal.classList.add("show");
  }, 30);
}

function closeReturnModal() {
  const modal = document.getElementById("returnModal");
  modal.classList.remove("show");

  setTimeout(() => {
    modal.style.display = "none";
  }, 200);
}

document.getElementById("confirmReturnBtn").addEventListener("click", async () => {
  
  let reason = document.getElementById("returnReasonSelect").value;
  let otherReason = document.getElementById("returnReasonText").value.trim();

  if (!reason) {
    return showToast("Please select a return reason.");
  }

  if (reason === "Other" && !otherReason) {
    return showToast("Please specify the reason.");
  }

  const finalReason = (reason === "Other") ? otherReason : reason;

  const res = await fetch("/return-item", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      orderId: currentOrderId,
      itemId: currentItemId,
      reason: finalReason
    })
  });

  const data = await res.json();
  showToast(data.message);

  if (data.success) {
    setTimeout(() => location.reload(), 1200);
  }
});


