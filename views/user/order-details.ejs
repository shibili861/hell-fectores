 <script>
    let currentOrderId = null;
    let currentItemId = null;

    const reasonSelect = document.getElementById("cancelReasonSelect");
    const reasonText = document.getElementById("cancelReasonText");

    reasonText.style.display = "none";

    reasonSelect.addEventListener("change", () => {
        reasonText.style.display = reasonSelect.value === "Other" ? "block" : "none";
    });


    /* ----------------- PREMIUM TOAST ----------------- */
    function showToast(message) {
        const toast = document.getElementById("toast");
        toast.textContent = message;
        toast.classList.add("show");

        setTimeout(() => {
            toast.classList.remove("show");
        }, 2500);
    }
    /* ------------------------------------------------- */


    function openCancelModal(orderId, itemId = null) {
        currentOrderId = orderId;
        currentItemId = itemId;

        const modal = document.getElementById("cancelModal");
        modal.style.display = "flex";

        // Fix: Force reflow for animation + ensure content is visible
        modal.querySelector("textarea")?.blur();
        modal.offsetHeight;

        setTimeout(() => modal.classList.add("show"), 30);
    }

    function closeCancelModal() {
        const modal = document.getElementById("cancelModal");
        modal.classList.remove("show");
        setTimeout(() => modal.style.display = "none", 200);

        reasonSelect.value = "";
        reasonText.value = "";
        reasonText.style.display = "none";
    }

    document.getElementById("confirmCancelBtn").addEventListener("click", async () => {
        let reason =
            reasonSelect.value === "Other" ? reasonText.value.trim() : reasonSelect.value;

        if (!reason) return showToast("Please select a reason.");

        const endpoint = currentItemId ? "/cancel-item" : "/cancel-order";
        const body = { orderId: currentOrderId, reason };
        if (currentItemId) body.itemId = currentItemId;

        const res = await fetch(endpoint, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(body)
        });

        const data = await res.json();
        showToast(data.message);

        if (data.success) setTimeout(() => location.reload(), 1200);
    });


