/* Fill progress bar */
.order-tracker .active ~ .tracker-step .tracker-circle {
  background: #ccc !important;
  box-shadow: none !important;
}

.order-tracker .tracker-step.active ~ .tracker-step::before {
  background: #28a745;
}

.order-tracker::after {
  content: "";
  position: absolute;
  top: 22px;
  left: 0;
  height: 4px;
  width: calc(
    (var(--active-step, 1) - 1) *
    (100% / 4)
  );
  background: #28a745;
  z-index: 1;
  border-radius: 5px;
}
