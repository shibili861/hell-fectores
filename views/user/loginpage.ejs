<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - ÉLÉGANCE</title>
    <style>
        /* ================= GLOBAL STYLES ================= */
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@300;400;500;600&display=swap');
        
        :root {
            --primary: #003543;
            --secondary: #005566;
            --white: #ffffff;
            --soft-white: #fafafa;
            --warm-white: #f3f2ef;
            --text-dark: #0b1f26;
            --text-muted: #6b7f87;
            --border: rgba(0, 53, 67, 0.12);
            --shadow: 0 18px 40px rgba(0, 53, 67, 0.12);
            --shadow-hover: 0 30px 60px rgba(0, 53, 67, 0.22);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, var(--warm-white), var(--soft-white));
            color: var(--text-dark);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }
        
        /* ================= BACKGROUND EFFECTS ================= */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(0, 53, 67, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(0, 85, 102, 0.03) 0%, transparent 50%);
            z-index: -1;
        }
        
        /* ================= NAVBAR ================= */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 20px 40px;
            z-index: 100;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 53, 67, 0.08);
            box-shadow: 0 10px 30px rgba(0, 53, 67, 0.08);
        }
        
        .logo {
            font-family: 'Cormorant Garamond', serif;
            font-size: 28px;
            font-weight: 600;
            color: var(--primary);
            text-decoration: none;
            letter-spacing: 1px;
            position: relative;
        }
        
        .logo::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 1px;
            background: linear-gradient(90deg, var(--primary), transparent);
        }
        
        /* ================= LOGIN CONTAINER ================= */
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 100px 20px 60px;
            position: relative;
        }
        
        /* ================= LOGIN BOX - GLASS MORPHISM ================= */
        .login-box {
            width: 100%;
            max-width: 440px;
            background: rgba(255, 255, 255, 0.75);
            backdrop-filter: blur(30px) saturate(180%);
            -webkit-backdrop-filter: blur(30px) saturate(180%);
            border-radius: 28px;
            padding: 50px 40px;
            box-shadow: 
                var(--shadow),
                inset 0 1px 0 rgba(255, 255, 255, 0.6),
                inset 0 -1px 0 rgba(0, 53, 67, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.4);
            position: relative;
            overflow: hidden;
        }
        
        .login-box::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(
                135deg,
                rgba(255, 255, 255, 0.4) 0%,
                rgba(255, 255, 255, 0.1) 50%,
                rgba(255, 255, 255, 0.2) 100%
            );
            z-index: -1;
            border-radius: 28px;
        }
        
        /* ================= LOGIN HEADER ================= */
        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .login-header h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 42px;
            font-weight: 600;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
            letter-spacing: -0.5px;
        }
        
        .login-header p {
            color: var(--text-muted);
            font-size: 15px;
            font-weight: 400;
            letter-spacing: 0.3px;
        }
        
        /* ================= GOOGLE LOGIN BUTTON ================= */
        .google-login-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            width: 100%;
            padding: 16px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1.5px solid rgba(0, 53, 67, 0.1);
            border-radius: 14px;
            font-size: 15px;
            font-weight: 600;
            color: var(--text-dark);
            text-decoration: none;
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }
        
        .google-login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.3), 
                transparent);
            transition: left 0.7s ease;
        }
        
        .google-login-btn:hover::before {
            left: 100%;
        }
        
        .google-login-btn:hover {
            transform: translateY(-3px);
            box-shadow: 
                0 15px 35px rgba(0, 53, 67, 0.15),
                inset 0 1px 1px rgba(255, 255, 255, 0.4);
            border-color: rgba(0, 53, 67, 0.2);
        }
        
        .google-login-btn:active {
            transform: translateY(-1px);
        }
        
        .google-login-btn img {
            width: 20px;
            height: 20px;
        }
        
        /* ================= DIVIDER ================= */
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 30px 0;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(0, 53, 67, 0.15), 
                transparent);
        }
        
        .divider span {
            padding: 0 20px;
            color: var(--text-muted);
            font-size: 13px;
            font-weight: 500;
            letter-spacing: 1px;
            text-transform: uppercase;
        }
        
        /* ================= FORM STYLES ================= */
        form {
            margin-bottom: 30px;
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-size: 13px;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }
        
        .form-group input {
            width: 100%;
            padding: 16px 20px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1.5px solid rgba(0, 53, 67, 0.1);
            border-radius: 12px;
            font-family: 'Montserrat', sans-serif;
            font-size: 15px;
            color: var(--text-dark);
            transition: all 0.3s ease;
            box-shadow: inset 0 1px 3px rgba(0, 53, 67, 0.05);
        }
        
        .form-group input::placeholder {
            color: var(--text-muted);
            opacity: 0.7;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 
                0 0 0 3px rgba(0, 53, 67, 0.1),
                inset 0 1px 3px rgba(0, 53, 67, 0.05);
            background: rgba(255, 255, 255, 0.95);
        }
        
        .error-message {
            color: #ef4444;
            font-size: 12px;
            margin-top: 6px;
            min-height: 18px;
        }
        
        /* ================= LOGIN BUTTON ================= */
        .login-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 14px;
            font-family: 'Montserrat', sans-serif;
            font-size: 15px;
            font-weight: 700;
            letter-spacing: 1.5px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
            margin-top: 10px;
            box-shadow: 
                0 12px 32px rgba(0, 53, 67, 0.25),
                inset 0 1px 1px rgba(255, 255, 255, 0.2);
        }
        
        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.2), 
                transparent);
            transition: left 0.7s ease;
        }
        
        .login-btn:hover::before {
            left: 100%;
        }
        
        .login-btn:hover {
            transform: translateY(-4px);
            box-shadow: 
                0 20px 48px rgba(0, 53, 67, 0.35),
                inset 0 1px 1px rgba(255, 255, 255, 0.3);
        }
        
        .login-btn:active {
            transform: translateY(-1px);
        }
        
        .login-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
        
        /* ================= ALERT MESSAGES ================= */
        .alert {
            padding: 16px 20px;
            margin-bottom: 24px;
            background: rgba(239, 68, 68, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 12px;
            color: #ef4444;
            font-size: 14px;
            font-weight: 500;
            text-align: center;
            animation: slideDown 0.4s ease;
        }
        
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* ================= LOGIN FOOTER ================= */
        .login-footer {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(0, 53, 67, 0.08);
        }
        
        .login-footer p {
            color: var(--text-muted);
            font-size: 14px;
            margin-bottom: 12px;
        }
        
        .login-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            position: relative;
            transition: color 0.3s ease;
        }
        
        .login-footer a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 1px;
            background: var(--primary);
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 0.3s ease;
        }
        
        .login-footer a:hover {
            color: var(--secondary);
        }
        
        .login-footer a:hover::after {
            transform: scaleX(1);
            transform-origin: left;
        }
        
        /* ================= CURSOR EFFECTS ================= */
        .cursor {
            width: 8px;
            height: 8px;
            background: var(--primary);
            border-radius: 50%;
            position: fixed;
            pointer-events: none;
            z-index: 9999;
            mix-blend-mode: difference;
            transition: all 0.1s ease;
        }
        
        .cursor-follower {
            width: 20px;
            height: 20px;
            border: 1.5px solid var(--primary);
            border-radius: 50%;
            position: fixed;
            pointer-events: none;
            z-index: 9998;
            mix-blend-mode: difference;
            transition: all 0.3s ease;
        }
        
        button:hover ~ .cursor,
        .google-login-btn:hover ~ .cursor,
        input:focus ~ .cursor {
            transform: scale(1.5);
        }
        
        button:hover ~ .cursor-follower,
        .google-login-btn:hover ~ .cursor-follower,
        input:focus ~ .cursor-follower {
            transform: scale(1.3);
        }
        
        /* ================= RESPONSIVE DESIGN ================= */
        @media (max-width: 768px) {
            .navbar {
                padding: 15px 20px;
            }
            
            .logo {
                font-size: 24px;
            }
            
            .login-container {
                padding: 80px 20px 40px;
            }
            
            .login-box {
                padding: 40px 25px;
                border-radius: 24px;
            }
            
            .login-header h2 {
                font-size: 36px;
            }
            
            .login-header p {
                font-size: 14px;
            }
        }
        
        @media (max-width: 480px) {
            .login-box {
                padding: 35px 20px;
            }
            
            .login-header h2 {
                font-size: 32px;
            }
            
            .google-login-btn,
            .login-btn {
                padding: 14px;
            }
            
            .form-group input {
                padding: 14px 16px;
            }
        }
        
        /* ================= LOADING ANIMATION ================= */
        .loading {
            position: relative;
            color: transparent;
        }
        
        .loading::after {
            content: '';
            position: absolute;
            left: 50%;
            top: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* ================= SUCCESS STATE ================= */
        .success {
            background: linear-gradient(135deg, #10b981, #059669);
            animation: successPulse 1.5s ease;
        }
        
        @keyframes successPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        /* ================= FLOWING GRADIENT BACKGROUND ================= */
        @keyframes gradientFlow {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
        
        /* ================= FADE IN ANIMATION ================= */
        .login-box {
            animation: fadeInUp 0.8s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
            opacity: 0;
            transform: translateY(30px);
        }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="cursor"></div>
    <div class="cursor-follower"></div>

    <nav class="navbar">
        <a href="/" class="logo">ÉLÉGANCE<span></span></a>
    </nav>

    <div class="login-container">
        <div class="login-box">
            <div class="login-header">
                <h2>Welcome Back</h2>
                <p>Sign in to access your exclusive account</p>
            </div>
            
            <a href="/auth/google" class="google-login-btn">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo">
                <span>Continue with Google</span>
            </a>

            <div class="divider">
                <span>Or sign in with email</span>
            </div>
            
            <form id="loginpage" method="POST" action="/login">

                <% if (message && message.length > 0) { %>
                <div class="alert" id="backend-error"><%= message %></div>
                <% } %>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email">
                    <div class="error-message"></div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password">
                    <div class="error-message"></div>
                </div>

                <button type="submit" class="login-btn">LOG IN</button>
            </form>
            
            <div class="login-footer">
                <p>Don't have an account? <a href="/signup">Create account</a></p>
                <p><a href="/forgot-password">Forgot your password?</a></p>
            </div>
        </div>
    </div>

    <script>
        // Custom Cursor
        const cursor = document.querySelector('.cursor');
        const follower = document.querySelector('.cursor-follower');

        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
            
            setTimeout(() => {
                follower.style.left = e.clientX + 'px';
                follower.style.top = e.clientY + 'px';
            }, 100);
        });

        // Hover effects for buttons
        document.querySelectorAll('button, .google-login-btn, .social-btn').forEach(el => {
            el.addEventListener('mouseenter', () => {
                cursor.style.transform = 'scale(2)';
                follower.style.transform = 'scale(1.5)';
            });
            el.addEventListener('mouseleave', () => {
                cursor.style.transform = 'scale(1)';
                follower.style.transform = 'scale(1)';
            });
        });

        const form = document.querySelector("#loginpage");

        form.addEventListener("submit", function(e) {
          let isValid = true;
          const email = form.email.value.trim();
          const password = form.password.value.trim();

          // clear previous errors
          document.querySelectorAll(".error-message").forEach(el => el.textContent = "");

          // email validation
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!email) {
            form.email.nextElementSibling.textContent = "Email is required";
            isValid = false;
          } else if (!emailRegex.test(email)) {
            form.email.nextElementSibling.textContent = "Enter a valid email address";
            isValid = false;
          }

          // password validation
          if (!password) {
            form.password.nextElementSibling.textContent = "Password is required";
            isValid = false;
          } else if (password.length < 6) {
            form.password.nextElementSibling.textContent = "Password must be at least 6 characters";
            isValid = false;
          }

          // Remove error messages after 3 seconds
          if (!isValid) {
            e.preventDefault(); // stop submission
            setTimeout(() => {
              document.querySelectorAll(".error-message").forEach(el => el.textContent = "");
            }, 6000);
          }
        });
        window.addEventListener("DOMContentLoaded", () => {
          const backendError = document.getElementById("backend-error");
          if (backendError) {
            setTimeout(() => {
              backendError.style.display = "none";
            }, 6000); // disappears after 3 seconds
          }
        });
    </script>
</body>
</html>