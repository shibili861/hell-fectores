// ========== ZOOM FUNCTIONALITY ==========

// Get elements for zoom functionality
const mainImageContainer = document.getElementById('mainImageContainer');
const mainImage = document.getElementById('mainImage');
const zoomLens = document.getElementById('zoomLens');
const zoomResult = document.getElementById('zoomResult');
const zoomImage = document.getElementById('zoomImage');

// Initialize variables
let isZoomActive = false;
const zoomLevel = 2.5; // Increased zoom level for better effect

// Function to calculate cursor position
function getCursorPos(e) {
    const rect = mainImageContainer.getBoundingClientRect();
    let x = e.clientX - rect.left;
    let y = e.clientY - rect.top;
    
    // Account for scroll position
    x = x - window.pageXOffset;
    y = y - window.pageYOffset;
    
    return {x: x, y: y};
}

// Function to move zoom lens and result
function moveZoom(e) {
    if (!isZoomActive || window.innerWidth <= 768) return;
    
    e.preventDefault();
    
    // Get cursor position
    const pos = getCursorPos(e);
    let x = pos.x;
    let y = pos.y;
    
    // Calculate lens position (centered on cursor)
    const lensWidth = zoomLens.offsetWidth;
    const lensHeight = zoomLens.offsetHeight;
    const containerWidth = mainImageContainer.offsetWidth;
    const containerHeight = mainImageContainer.offsetHeight;
    
    // Prevent lens from going outside image
    x = Math.max(lensWidth / 2, Math.min(x, containerWidth - lensWidth / 2));
    y = Math.max(lensHeight / 2, Math.min(y, containerHeight - lensHeight / 2));
    
    // Position the lens
    zoomLens.style.left = (x - lensWidth / 2) + 'px';
    zoomLens.style.top = (y - lensHeight / 2) + 'px';
    
    // Calculate zoomed image position
    const zoomRatioX = zoomImage.naturalWidth / mainImage.naturalWidth;
    const zoomRatioY = zoomImage.naturalHeight / mainImage.naturalHeight;
    
    // Calculate background position for zoom effect
    const bgX = (x / containerWidth) * 100;
    const bgY = (y / containerHeight) * 100;
    
    // Position zoomed image
    zoomImage.style.transformOrigin = `${bgX}% ${bgY}%`;
    zoomImage.style.transform = `scale(${zoomLevel})`;
    
    // Position zoom result window (top-right of main image)
    const mainImageRect = mainImageContainer.getBoundingClientRect();
    zoomResult.style.top = (mainImageRect.top + window.scrollY) + 'px';
    
}

// Function to activate zoom
function activateZoom() {
    if (window.innerWidth <= 768) return;
    
    isZoomActive = true;
    mainImageContainer.classList.add('zoomed');
    
    // Show lens
    zoomLens.style.display = 'block';
    zoomLens.style.opacity = '1';
    
    // Show zoom result
    zoomResult.style.display = 'block';
    
    // Position zoom result initially
    const mainImageRect = mainImageContainer.getBoundingClientRect();
    zoomResult.style.top = (mainImageRect.top + window.scrollY) + 'px';
    zoomResult.style.left = (mainImageRect.right + 20) + 'px';
    
    // Set zoom image source if not already set
    if (!zoomImage.src || zoomImage.src !== mainImage.src) {
        zoomImage.src = mainImage.src;
    }
    
    // Add event listener for mousemove
    mainImageContainer.addEventListener('mousemove', moveZoom);
}

// Function to deactivate zoom
function deactivateZoom() {
    isZoomActive = false;
    mainImageContainer.classList.remove('zoomed');
    
    // Hide lens
    zoomLens.style.display = 'none';
    zoomLens.style.opacity = '0';
    
    // Hide zoom result
    zoomResult.style.display = 'none';
    
    // Remove event listener
    mainImageContainer.removeEventListener('mousemove', moveZoom);
}

// Function to reset zoom
function resetZoom() {
    deactivateZoom();
}

// Event Listeners for zoom
mainImageContainer.addEventListener('mouseenter', function() {
    if (window.innerWidth > 768) {
        activateZoom();
    }
});

mainImageContainer.addEventListener('mouseleave', function() {
    deactivateZoom();
});

// Handle image load to ensure natural dimensions are available
mainImage.onload = function() {
    // Set zoom image dimensions based on natural size
    zoomImage.style.width = mainImage.naturalWidth + 'px';
    zoomImage.style.height = mainImage.naturalHeight + 'px';
};

// Also initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Set initial zoom image
    zoomImage.src = mainImage.src;
    
    // Set lens dimensions
    zoomLens.style.width = '180px';
    zoomLens.style.height = '180px';
});

// Handle thumbnail click to update zoom
document.querySelectorAll('.thumbnail').forEach(thumb => {
    thumb.addEventListener('click', function() {
        const imageUrl = this.getAttribute('data-image');
        
        // Update main image
        mainImage.src = imageUrl;
        
        // Update zoom image with preload
        const newZoomImage = new Image();
        newZoomImage.onload = function() {
            zoomImage.src = imageUrl;
            zoomImage.style.width = this.naturalWidth + 'px';
            zoomImage.style.height = this.naturalHeight + 'px';
        };
        newZoomImage.src = imageUrl;
        
        // Reset zoom state
        deactivateZoom();
    });
});

// Handle window resize
window.addEventListener('resize', function() {
    if (window.innerWidth <= 768 && isZoomActive) {
        deactivateZoom();
    }
});

// Mobile touch zoom (optional)
if ('ontouchstart' in window) {
    let lastTouchEnd = 0;
    let scale = 1;
    
    mainImageContainer.addEventListener('touchstart', function(e) {
        if (e.touches.length === 2) {
            e.preventDefault();
        }
    }, { passive: false });
    
    mainImageContainer.addEventListener('touchend', function(e) {
        const now = Date.now();
        if (now - lastTouchEnd <= 300) {
            // Double tap - toggle zoom
            if (scale === 1) {
                scale = 2;
                mainImage.style.transform = 'scale(2)';
                mainImage.style.transformOrigin = 'center center';
            } else {
                scale = 1;
                mainImage.style.transform = 'scale(1)';
            }
        }
        lastTouchEnd = now;
    });
}

