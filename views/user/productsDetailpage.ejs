  /* ================= ROOT LAYOUT ================= */
.product-container {
  min-height: 100vh;
  padding: 100px 20px 80px;
  background: linear-gradient(180deg, var(--warm-white), var(--soft-white));
}

.product-wrapper {
  max-width: 1300px;
  margin: auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
}

/* ================= PRODUCT GALLERY ================= */
.product-gallery {
  position: sticky;
  top: 120px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Wishlist Button */
.pd-wishlist-top {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: rgba(255,255,255,.95);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(0,53,67,.1);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: .3s ease;
  z-index: 20;
}

.pd-wishlist-top:hover { transform: scale(1.1); }
.pd-wishlist-top.added { color:#ff4136; }

.pd-wishlist-top .heart-icon {
  font-size: 20px;
}

/* Main Image */
.main-image {
  position: relative;
  width: 100%;
  height: 550px;
  border-radius: 20px;
  overflow: hidden;
  cursor: crosshair;
  box-shadow: var(--shadow);
}

.main-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Zoom */
.zoom-lens {
  position: absolute;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 2px solid rgba(255,255,255,.9);
  display: none;
  pointer-events: none;
}

.main-image.zoomed .zoom-lens { display: block; }

.zoom-result {
  position: fixed;
  width: 400px;
  height: 400px;
  border-radius: 16px;
  overflow: hidden;
  display: none;
  z-index: 9999;
}

/* Thumbnails */
.thumbnail-grid {
  display: grid;
  grid-template-columns: repeat(4,1fr);
  gap: 15px;
}

.thumbnail {
  height: 100px;
  border-radius: 12px;
  overflow: hidden;
  cursor: pointer;
  border: 2px solid transparent;
}

.thumbnail.active { border-color: var(--primary); }

.thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ================= PRODUCT INFO ================= */
.product-info {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.product-title {
  font-family: 'Cormorant Garamond', serif;
  font-size: 42px;
  background: linear-gradient(135deg,var(--primary),var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Rating */
.rating-section {
  display: flex;
  align-items: center;
  gap: 12px;
}

.stars { color:#FFD700; font-size:18px; }
.reviews { font-size:14px; color:var(--text-muted); }

/* Price */
.price-section {
  padding: 15px 0;
  border-top:1px solid rgba(0,53,67,.08);
  border-bottom:1px solid rgba(0,53,67,.08);
}

.price-wrapper {
  display:flex;
  align-items:center;
  gap:15px;
}

.current-price {
  font-size:36px;
  font-weight:700;
  color:var(--primary);
}

.original-price {
  font-size:22px;
  color:var(--text-muted);
  text-decoration:line-through;
}

.discount-badge {
  padding:6px 18px;
  background:linear-gradient(135deg,#ff6b6b,#ff4757);
  color:white;
  border-radius:30px;
  font-size:14px;
  font-weight:700;
}

/* Stock */
.stock-status {
  display:flex;
  align-items:center;
  gap:10px;
}

.stock-dot {
  width:10px;
  height:10px;
  border-radius:50%;
  background:#10b981;
}

.stock-status.out-of-stock .stock-dot {
  background:#ef4444;
}

/* ================= SIZE ================= */
.size-grid {
  display:flex;
  gap:12px;
  flex-wrap:wrap;
}

.size-option {
  min-width:60px;
  height:45px;
  border-radius:10px;
  border:1.5px solid rgba(0,53,67,.15);
  background:#fff;
  font-size:14px;
  font-weight:600;
