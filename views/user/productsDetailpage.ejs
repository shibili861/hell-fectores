  color:white;
  border:none;
}

.size-option.out-of-stock {
  opacity:.5;
  cursor:not-allowed;
}

/* ================= QUANTITY ================= */
.quantity-selector {
  display:inline-flex;
  border-radius:12px;
  overflow:hidden;
  border:1px solid rgba(0,53,67,.1);
}

.qty-btn {
  width:50px;
  height:50px;
