
<!DOCTYPE html>
<html lang="en">
<head>

   <%- include('partials/user/header') %>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - ÉLÉGANCE</title>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Montserrat:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
/* =================== MINIMAL PREMIUM DESIGN =================== */

:root {
  --primary: #003543;
  --primary-light: #005566;
  --accent: #d4af37;
  --light: #f8fafc;
  --dark: #1a1a1a;
  --gray: #64748b;
  --light-gray: #e2e8f0;
  --border-color: rgba(0, 53, 67, 0.1);
  --shadow-sm: 0 2px 8px rgba(0, 53, 67, 0.05);
  --shadow: 0 4px 20px rgba(0, 53, 67, 0.08);
  --shadow-hover: 0 8px 30px rgba(0, 53, 67, 0.12);
  --transition: all 0.3s ease;
  --border-radius: 8px;
  --border-radius-lg: 16px;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

  nav {
      left: 0;
  }
body {
  font-family: 'Montserrat', sans-serif;
  background: #f8fafc;
  color: var(--dark);
  line-height: 1.5;
  min-height: 100vh;
  padding: 20px;
}

/* =================== CONTAINER - FIXED ALIGNMENT =================== */
.orders-container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 40px;
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow);
  animation: fadeIn 0.5s ease-out;
  position: relative;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* =================== PAGE TITLE =================== */
.page-title {
  font-family: 'Cormorant Garamond', serif;
  font-size: 36px;
  font-weight: 600;
  color: var(--primary);
  margin-bottom: 40px;
  text-align: center;
  position: relative;
  padding-bottom: 15px;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background: var(--accent);
}

/* =================== ORDERS TABLE - PROPER ALIGNMENT =================== */
.orders-table {
  width: 100%;
  border-collapse: collapse;
  margin: 30px 0;
  font-size: 14px;
  table-layout: fixed; /* Ensures consistent column widths */
}

/* Fixed column widths to prevent misalignment */
.orders-table th:nth-child(1),
.orders-table td:nth-child(1) { width: 15%; } /* Order ID */
.orders-table th:nth-child(2),
.orders-table td:nth-child(2) { width: 20%; } /* Date */
.orders-table th:nth-child(3),
.orders-table td:nth-child(3) { width: 20%; } /* Status */
.orders-table th:nth-child(4),
.orders-table td:nth-child(4) { width: 20%; } /* Total */
.orders-table th:nth-child(5),
.orders-table td:nth-child(5) { width: 25%; } /* Action */

.orders-table thead {
  border-bottom: 2px solid var(--border-color);
}

.orders-table th {
  padding: 20px 15px;
  text-align: left;
  font-weight: 600;
  color: var(--primary);
  font-size: 12px;
  letter-spacing: 1px;
  text-transform: uppercase;
  background: var(--light);
  border-bottom: 2px solid var(--border-color);
}

.orders-table tbody tr {
  border-bottom: 1px solid var(--border-color);
  transition: var(--transition);
}

.orders-table tbody tr:last-child {
  border-bottom: none;
}

.orders-table tbody tr:hover {
  background: rgba(0, 53, 67, 0.02);
}

.orders-table td {
  padding: 20px 15px;
  color: var(--dark);
  vertical-align: middle;
}

/* Fix text alignment for better visual balance */
.orders-table td:nth-child(1) { /* Order ID */
  font-weight: 600;
  color: var(--primary);
  font-family: 'Cormorant Garamond', serif;
  font-size: 16px;
}

.orders-table td:nth-child(2) { /* Date */
  color: var(--gray);
  font-size: 13px;
}

.orders-table td:nth-child(4) { /* Total */
  font-weight: 600;
  color: var(--primary);
  font-family: 'Cormorant Garamond', serif;
  font-size: 18px;
}

.orders-table td:nth-child(5) { /* Action */
  text-align: center;
}

/* =================== STATUS BADGES - MINIMAL PREMIUM =================== */
.status {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
  border: 1px solid;
  transition: var(--transition);
}

.status.pending {
  background: rgba(255, 193, 7, 0.1);
  color: #d97706;
  border-color: rgba(255, 193, 7, 0.3);
}

.status.processing {
  background: rgba(59, 130, 246, 0.1);
  color: #1d4ed8;
  border-color: rgba(59, 130, 246, 0.3);
}

.status.shipped {
  background: rgba(139, 92, 246, 0.1);
  color: #7c3aed;
  border-color: rgba(139, 92, 246, 0.3);
}

.status.delivered {
  background: rgba(34, 197, 94, 0.1);
  color: #15803d;
  border-color: rgba(34, 197, 94, 0.3);
}

.status.cancelled {
  background: rgba(239, 68, 68, 0.1);
  color: #dc2626;
  border-color: rgba(239, 68, 68, 0.3);
}

.status:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-sm);
}

/* =================== VIEW BUTTON - MINIMAL ELEGANT =================== */
.btn-view {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 10px 20px;
  background: white;
  border: 1px solid var(--primary);
  color: var(--primary);
  text-decoration: none;
  border-radius: 20px;
  font-weight: 600;
  font-size: 12px;
  letter-spacing: 1px;
  text-transform: uppercase;
  transition: var(--transition);
}

.btn-view:hover {
  background: var(--primary);
  color: white;
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

.btn-view i {
  font-size: 12px;
  transition: transform 0.3s ease;
}

.btn-view:hover i {
  transform: translateX(4px);
}

/* =================== EMPTY STATE =================== */
.empty-message {
  text-align: center;
  font-size: 16px;
  color: var(--gray);
  margin: 50px 0 30px;
  font-weight: 400;
}

.btn-shop {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 12px 30px;
  background: var(--primary);
  color: white;
  text-decoration: none;
  border-radius: 25px;
  font-weight: 600;
  font-size: 13px;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  transition: var(--transition);
  margin: 0 auto;
  border: 1px solid var(--primary);
}

.btn-shop:hover {
  background: white;
  color: var(--primary);
  transform: translateY(-3px);
  box-shadow: var(--shadow);
}

/* =================== RESPONSIVE DESIGN =================== */
@media (max-width: 1200px) {
  .orders-container {
    padding: 30px;
    margin: 30px auto;
  }
  
  .page-title {
    font-size: 32px;
  }
}

@media (max-width: 992px) {
  .orders-table {
    display: block;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  .orders-table thead {
    display: none;
  }
  
  .orders-table tbody tr {
    display: block;
    margin-bottom: 20px;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    padding: 20px;
    background: white;
    box-shadow: var(--shadow-sm);
  }
  
  .orders-table td {
    display: block;
    text-align: right;
    padding: 12px 15px;
    border-bottom: 1px solid var(--border-color);
    position: relative;
  }
  
  .orders-table td::before {
    content: attr(data-label);
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    font-weight: 600;
    color: var(--primary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .orders-table td:last-child {
    border-bottom: none;
    text-align: center;
    padding-top: 15px;
  }
  
  /* Remove fixed widths for mobile */
  .orders-table th,
  .orders-table td {
    width: auto !important;
  }
  
  .orders-table td:nth-child(5) {
    text-align: center;
  }
}

@media (max-width: 768px) {
  body {
    padding: 15px;
  }
  
  .orders-container {
    padding: 25px 20px;
    margin: 20px auto;
  }
  
  .page-title {
    font-size: 28px;
    margin-bottom: 30px;
  }
  
  .btn-view, .btn-shop {
    padding: 10px 18px;
    font-size: 11px;
  }
  
  .status {
    padding: 6px 12px;
    font-size: 10px;
  }
  
  .empty-message {
    font-size: 15px;
    margin: 40px 0 25px;
  }
}

@media (max-width: 480px) {
  .page-title {
    font-size: 24px;
  }
  
  .orders-table tbody tr {
    padding: 15px;
  }
  
  .btn-shop {
    padding: 12px 24px;
    font-size: 12px;
  }
}

/* =================== SCROLLBAR STYLING =================== */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: #f1f5f9;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: var(--primary);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-light);
}
/* ================= EMPTY STATE FIX ================= */

.empty-state {
  min-height: 360px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  gap: 22px;
  margin-top: 20px;
}

.empty-message {
  font-size: 18px;
  line-height: 1.6;
  color: var(--gray);
  font-weight: 400;
  max-width: 480px;
}
.empty-state::before {
  content: '';
  width: 60px;
  height: 2px;
  background: var(--accent);
  margin-bottom: 10px;
}

/* =================== FOCUS STATES =================== */
.btn-view:focus,
.btn-shop:focus {
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}

/* =================== LOADING STATE =================== */
.orders-table.loading tbody tr {
  animation: shimmer 1.5s infinite linear;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}
  </style>
</head>
<body>
  <div class="orders-container">
    <h1 class="page-title">My Orders</h1>

    <% if (orders && orders.length > 0) { %>
      <table class="orders-table">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td data-label="Order ID"><%= order.orderId %></td>
              <td data-label="Date"><%= new Date(order.createdOn).toLocaleDateString('en-US', { 
                weekday: 'short', 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
              }) %></td>
              <td data-label="Status">
                <span class="status <%= order.status.toLowerCase() %>">
                  <% if (order.status.toLowerCase() === 'pending') { %>
                    <i class="fas fa-clock"></i>
                  <% } else if (order.status.toLowerCase() === 'processing') { %>
                    <i class="fas fa-cog fa-spin"></i>
                  <% } else if (order.status.toLowerCase() === 'shipped') { %>
                    <i class="fas fa-shipping-fast"></i>
                  <% } else if (order.status.toLowerCase() === 'delivered') { %>
                    <i class="fas fa-check-circle"></i>
                  <% } else if (order.status.toLowerCase() === 'cancelled') { %>
                    <i class="fas fa-times-circle"></i>
                  <% } %>
                  <%= order.status %>
                </span>
              </td>
              <td data-label="Total">₹<%= order.finalAmount.toLocaleString() %></td>
              <td data-label="Action">
                <a href="/order-details/<%= order.orderId %>" class="btn-view">
                  <span>View Details <i class="fas fa-arrow-right"></i></span>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="empty-state">
  <p class="empty-message">
    Your order history is empty<br>
    Begin your luxury shopping experience
  </p>

  <a href="/collections" class="btn-shop">
    <i class="fas fa-gem"></i>
    <span>Start Shopping</span>
  </a>
</div>

    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add subtle hover effects
      const tableRows = document.querySelectorAll('.orders-table tbody tr');
      const statusBadges = document.querySelectorAll('.status');
      
      // Table row hover
      tableRows.forEach(row => {
        row.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-2px)';
          this.style.boxShadow = '0 4px 12px rgba(0, 53, 67, 0.08)';
        });
        
        row.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
          this.style.boxShadow = 'none';
        });
      });
      
      // Status badge hover
      statusBadges.forEach(status => {
        status.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-2px)';
          this.style.boxShadow = '0 4px 12px rgba(0, 53, 67, 0.1)';
        });
        
        status.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
          this.style.boxShadow = 'none';
        });
      });
      
      // Button click animation
      const buttons = document.querySelectorAll('.btn-view, .btn-shop');
      buttons.forEach(button => {
        button.addEventListener('click', function(e) {
          // Prevent if href is #
          if (this.getAttribute('href') === '#') {
            e.preventDefault();
          }
          
          // Add click animation
          this.style.transform = 'scale(0.98)';
          setTimeout(() => {
            this.style.transform = '';
          }, 150);
        });
      });
    });
  </script>
</body>
</html>