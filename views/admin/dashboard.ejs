
<%- include('../partials/admin/sidebar') %>
<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premium Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>

        html, body {
    max-width: 100%;
    overflow-x: hidden;
}

        * {
            
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        :root {
            --primary: #8B6B4D;
            --primary-light: #C2A783;
            --primary-extra-light: #f9f5f0;
            --primary-dark: #5a4a3a;
            --text-dark: #333333;
            --text-light: #888888;
            --white: #ffffff;
            --shadow: 0 5px 15px rgba(139, 107, 77, 0.1);
            --transition: all 0.3s ease;
        }
        
       body {
    background-color: #f8f5f2;
    color: var(--text-dark);
    min-height: 100vh;
}

        
       
        
        /* Main Content Styles */
     .main-content {
    margin-left: 280px;
    width: calc(100% - 280px);
    padding: 30px;
    transition: all 0.3s ease;
}

        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e8e1d8;
        }
        
        .page-title {
            font-size: 28px;
            font-weight: 700;
            color: var(--primary-dark);
        }
        
        .header-actions {
            display: flex;
            gap: 15px;
            align-items: center;
        }
        
        .search-box {
            position: relative;
        }
        
        .search-box input {
            padding: 12px 15px 12px 45px;
            border: 1px solid #e0d6c8;
            border-radius: 6px;
            font-size: 14px;
            color: var(--primary-dark);
            transition: var(--transition);
            width: 250px;
            background: var(--white);
        }
        
        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-light);
        }
        
        .search-box input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(139, 107, 77, 0.2);
        }
        
        .notification-btn {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: var(--white);
            color: var(--primary);
            border: 1px solid #e0d6c8;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
        }
        
        .notification-btn:hover {
            background: var(--primary-extra-light);
        }
        
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #e74c3c;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }
        
        /* Logout Button */
        .logout-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 16px;
            background: linear-gradient(to right, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: 0 4px 10px rgba(139, 107, 77, 0.3);
        }
        
        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(139, 107, 77, 0.4);
            background: linear-gradient(to right, var(--primary-dark), var(--primary));
        }
        
        /* Dashboard Cards */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        
        .dashboard-card {
            background: linear-gradient(to bottom right, var(--white), var(--primary-extra-light));
            border-radius: 15px;
            padding: 25px;
            box-shadow: var(--shadow);
            border: 1px solid #e8e1d8;
            transition: var(--transition);
        }
        
        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(139, 107, 77, 0.15);
        }
        
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .card-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--primary-dark);
        }
        
        .card-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: var(--primary-extra-light);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 20px;
        }
        
        .card-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 5px;
        }
        
        .card-label {
            font-size: 14px;
            color: var(--primary-light);
        }
        
        /* Charts and Tables */
     .chart-container {
    background: var(--white);
    border-radius: 15px;
    padding: 25px;
    box-shadow: var(--shadow);
    border: 1px solid #e8e1d8;
    margin-bottom: 30px;
    overflow: hidden;   /* ðŸ”¥ IMPORTANT */
}

        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .chart-title {
            font-size: 20px;
            font-weight: 600;
            color: var(--primary-dark);
        }
        
        .chart-actions {
            display: flex;
            gap: 10px;
        }
        
        .chart-btn {
            padding: 8px 15px;
            background: var(--primary-extra-light);
            color: var(--primary);
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .chart-btn:hover {
            background: var(--primary-light);
            color: var(--white);
        }
        
        .chart-placeholder {
            height: 300px;
            background: #f9f9f9;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-light);
            font-style: italic;
        }
        
        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                width: 250px;
            }
            
            .sidebar.active {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .menu-toggle {
                display: block;
            }
            
            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .search-box input {
                width: 100%;
            }
            
            .header-actions {
                width: 100%;
                justify-content: space-between;
            }
        }
        
        /* Menu Toggle Button (for mobile) */
        .menu-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow);
        }
        
        /* EJS-specific styling for partials */
        .ejs-comment {
            background: #fff9eb;
            border-left: 4px solid #ffcc80;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-family: monospace;
            font-size: 14px;
            color: #5a4a3a;
        }


        /* =========================
   GLOBAL RESPONSIVE FIXES
========================= */

/* Ensure charts scale properly */
canvas {
    width: 100% !important;
    display: block;
}



/* Main content padding fix */
@media (max-width: 1200px) {
    .main-content {
        padding: 20px;
    }
}

/* =========================
   TABLET VIEW (â‰¤ 992px)
========================= */
@media (max-width: 992px) {
    .dashboard-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    /* keep height ONLY for bar charts */
    #topProductsChart,
    #topCategoriesChart {
        height: 260px !important;
    }
}


/* =========================
   MOBILE VIEW (â‰¤ 768px)
========================= */
@media (max-width: 768px) {

    .dashboard-grid {
        grid-template-columns: 1fr;
    }

    .chart-container {
        padding: 20px;
    }

    /* keep height ONLY for bar charts */
    #topProductsChart,
    #topCategoriesChart {
        height: 240px !important;
    }

    table {
        min-width: 700px;
    }
}


/* =========================
   SMALL MOBILE (â‰¤ 480px)
========================= */
@media (max-width: 480px) {

    .page-title {
        font-size: 22px;
    }

    .card-value {
        font-size: 26px;
    }

    .chart-title {
        font-size: 18px;
    }

    .logout-btn {
        width: 100%;
        justify-content: center;
    }

    .notification-btn {
        display: none;
    }
}
/* =========================
   Reduce Sales Overview chart size ONLY
========================= */
/* Sales Overview chart sizing */
.sales-overview-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
    gap: 25px;
}


.sales-chart-box {
    position: relative;
    height: 320px;
}

 @media (max-width: 992px) {
    .sales-overview-grid {
        grid-template-columns: 1fr;
    }
}




    </style>
</head>
<body>
    <!-- Menu Toggle Button (visible on mobile only) -->
    <div class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </div>
  <!-- Main Content -->
    <main class="main-content">
        <div class="header">
            <h1 class="page-title">Dashboard Overview</h1>
            <div class="header-actions">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search...">
                </div>
                <div class="notification-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </div>
             <button class="logout-btn" onclick="window.location.href='/admin/logout'">
  <i class="fas fa-sign-out-alt"></i>
  Logout
</button>


            </div>

            
        </div>

               <!-- FILTERS + DOWNLOAD -->
        <section style="margin-bottom: 25px;">
            <form id="salesFilterForm" style="display:flex; flex-wrap:wrap; gap:15px; align-items:flex-end;">
                <div>
                    <label>Report Type</label><br>
                    <select id="reportType" name="type" style="padding:8px 10px; border-radius:6px; border:1px solid #e0d6c8;">
                        <option value="daily">Today</option>
                        <option value="weekly">This Week</option>
                        <option value="monthly">This Month</option>
                        <option value="yearly">This Year</option>
                        <option value="custom">Custom</option>
                    </select>
                </div>

                <div id="singleDateWrapper">
                    <label>Date (for daily/weekly/monthly/yearly)</label><br>
                    <input type="date" id="singleDate" style="padding:8px 10px; border-radius:6px; border:1px solid #e0d6c8;">
                </div>

                <div id="customDateWrapper" style="display:none;">
                    <label>Custom Date Range</label><br>
                    <input type="date" id="startDate" style="padding:8px 10px; border-radius:6px; border:1px solid #e0d6c8;">
                    <input type="date" id="endDate" style="padding:8px 10px; border-radius:6px; border:1px solid #e0d6c8; margin-left:5px;">
                </div>

                <button type="button" id="applyFilterBtn" class="chart-btn">Generate Report</button>

                <div style="margin-left:auto; display:flex; gap:10px;">
                    <button type="button" id="downloadPdfBtn" class="chart-btn">
                        <i class="fas fa-file-pdf"></i> Download PDF
                    </button>
                    <button type="button" id="downloadExcelBtn" class="chart-btn">
                        <i class="fas fa-file-excel"></i> Download Excel
                    </button>
                </div>
            </form>
        </section>

        <!-- SUMMARY CARDS -->
        <section class="dashboard-grid" id="summarySection">
            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Total Orders</h3>
                    <div class="card-icon"><i class="fas fa-shopping-bag"></i></div>
                </div>
                <div class="card-value" id="summaryTotalOrders">0</div>
                <div class="card-label">Orders in selected period</div>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Gross Amount</h3>
                    <div class="card-icon"><i class="fas fa-coins"></i></div>
                </div>
                <div class="card-value" id="summaryGross">â‚¹0</div>
                <div class="card-label">Total before discounts</div>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Total Discount</h3>
                    <div class="card-icon"><i class="fas fa-percentage"></i></div>
                </div>
                <div class="card-value" id="summaryDiscount">â‚¹0</div>
                <div class="card-label">Offers + Coupons</div>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">Net Sales</h3>
                    <div class="card-icon"><i class="fas fa-wallet"></i></div>
                </div>
                <div class="card-value" id="summaryNet">â‚¹0</div>
                <div class="card-label">Final revenue after discount</div>
            </div>
        </section>
               <!-- CHARTS ROW 1 -->
        <section class="chart-container">
            <div class="chart-header">
                <h2 class="chart-title">Sales Overview</h2>
            </div>
          <div class="sales-overview-grid">
    <div class="sales-chart-box">
        <canvas id="salesTrendChart"></canvas>
    </div>
    <div class="sales-chart-box">
        <canvas id="salesDistributionChart"></canvas>
    </div>
</div>

        </section>

        <!-- CHARTS ROW 2 -->
        <section class="chart-container">
            <div class="chart-header">
                <h2 class="chart-title">Top Performing Items</h2>
            </div>
            <div style="display:grid; grid-template-columns: 1fr 1fr; gap:25px;">
                <div>
                    <h4 style="margin-bottom:10px;">Top Products</h4>
                   <div style="height:300px;">
    <canvas id="topProductsChart"></canvas>
</div>

                </div>
                <div>
                    <h4 style="margin-bottom:10px;">Top Categories</h4>
                    <canvas id="topCategoriesChart"></canvas>
                </div>
            </div>
        </section>
              <!-- ORDERS TABLE -->
        <section class="chart-container">
            <div class="chart-header">
                <h2 class="chart-title">Orders in Selected Period</h2>
            </div>
            <div style="overflow-x:auto;">
                <table style="width:100%; border-collapse:collapse; font-size:14px;">
                    <thead>
                        <tr style="background:#f5ede3; text-align:left;">
                            <th style="padding:10px;">Date</th>
                            <th style="padding:10px;">Order ID</th>
                            <th style="padding:10px;">Customer</th>
                            <th style="padding:10px;">Total</th>
                            <th style="padding:10px;">Discount</th>
                            <th style="padding:10px;">Coupon</th>
                            <th style="padding:10px;">Net Amount</th>
                            <th style="padding:10px;">Status</th>
                        </tr>
                    </thead>
                    <tbody id="ordersTableBody">
                        <!-- filled by JS -->
                    </tbody>
                </table>
            </div>
        </section>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // ---------- GLOBAL STATE ----------
        let salesTrendChart = null;
        let salesDistributionChart = null;
        let topProductsChart = null;
        let topCategoriesChart = null;

        // ---------- HELPERS ----------
        function formatCurrency(value) {
            return 'â‚¹' + Number(value || 0).toFixed(2);
        }

      function getFilterParams() {
    const type = document.getElementById("reportType").value;

    const startDate = document.getElementById("startDate").value;
    const endDate = document.getElementById("endDate").value;

    const params = new URLSearchParams();
    params.set("type", type);

    if (type === "custom") {
        if (startDate) params.set("startDate", startDate);
        if (endDate) params.set("endDate", endDate);
    }

    return params.toString();
}


        // ---------- FETCH & UPDATE ----------
        async function loadSalesReport() {
            try {
                const query = getFilterParams();
                const res = await fetch('/admin/sales-report/data?' + query);
                const data = await res.json();

                if (!data.success) {
                    console.error(data.message || 'Failed to load report');
                    return;
                }

                const { summary, salesTrend, topProducts, topCategories, orders } = data;

                // SUMMARY
                document.getElementById('summaryTotalOrders').innerText = summary.totalOrders || 0;
                document.getElementById('summaryGross').innerText = formatCurrency(summary.grossAmount);
                document.getElementById('summaryDiscount').innerText = formatCurrency(summary.totalDiscount);
                document.getElementById('summaryNet').innerText = formatCurrency(summary.netAmount);

                // ORDERS TABLE
                const tbody = document.getElementById('ordersTableBody');
                tbody.innerHTML = '';
                (orders || []).forEach(o => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td style="padding:8px; border-bottom:1px solid #eee;">${new Date(o.createdOn).toLocaleDateString()}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${o.orderId}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${o.userId ? o.userId.name : 'Guest'}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${formatCurrency(o.totalPrice)}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${formatCurrency(o.discount)}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${o.couponCode || '-'}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${formatCurrency(o.finalAmount)}</td>
                        <td style="padding:8px; border-bottom:1px solid #eee;">${o.status}</td>
                    `;
                    tbody.appendChild(tr);
                });

                // CHARTS: destroy old if exist to avoid leaks
                if (salesTrendChart) salesTrendChart.destroy();
                if (salesDistributionChart) salesDistributionChart.destroy();
                if (topProductsChart) topProductsChart.destroy();
                if (topCategoriesChart) topCategoriesChart.destroy();

                const trendLabels = (salesTrend || []).map(s => s._id);
                const trendValues = (salesTrend || []).map(s => s.netSales);
                
           

                const ctxTrend = document.getElementById('salesTrendChart').getContext('2d');
        salesTrendChart = new Chart(ctxTrend, {
    type: 'line',
    data: {
        labels: trendLabels,
        datasets: [{
            label: 'Net Sales',
            data: trendValues,
            tension: 0.3,
            fill: true,

            // ðŸ”¥ FIX #2 â€” ADD THESE LINES
            pointRadius: trendValues.length === 1 ? 6 : 3,
            pointHoverRadius: 8,
            borderWidth: 2
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        layout: {
            padding: {
                left: 10,
                right: 10,
                top: 10,
                bottom: 10
            }
        },
        plugins: {
            legend: {
                position: 'top'
            }
        }
    }
});



                const gross = Number(summary.grossAmount || 0);
                const totalDiscount = Number(summary.totalDiscount || 0);
                const couponDiscount = Number(summary.couponDiscount || 0);
                const otherDiscount = totalDiscount - couponDiscount;
                const net = Number(summary.netAmount || (gross - totalDiscount));

                const ctxDist = document.getElementById('salesDistributionChart').getContext('2d');
     salesDistributionChart = new Chart(ctxDist, {
    type: 'pie',
    data: {
        labels: ['Net Sales', 'Coupon Discount', 'Other Discount'],
        datasets: [{
            data: [net, couponDiscount, otherDiscount < 0 ? 0 : otherDiscount]
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom'   // ðŸ”¥ IMPORTANT
            }
        }
    }
});


                const prodLabels = (topProducts || []).map(p => p.name);
                const prodValues = (topProducts || []).map(p => p.revenue);

                        const ctxProd = document.getElementById('topProductsChart').getContext('2d');

            topProductsChart = new Chart(ctxProd, {
                type: 'bar',
                data: {
                    labels: prodLabels,
                    datasets: [{
                        label: 'Revenue',
                        data: prodValues
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false, // ðŸ”¥ important
                    layout: {
                        padding: {
                            bottom: 20
                        }
                    },
                    scales: {
                        x: {
                            ticks: {
                                maxRotation: 45,
                                minRotation: 45,
                                autoSkip: false,
                                callback: function(value) {
                                    const label = this.getLabelForValue(value);
                                    return label.length > 12 ? label.substring(0, 12) + 'â€¦' : label;
                                }
                            }
                        },
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });


                const catLabels = (topCategories || []).map(c => c.name);
                const catValues = (topCategories || []).map(c => c.revenue);

                const ctxCat = document.getElementById('topCategoriesChart').getContext('2d');
                topCategoriesChart = new Chart(ctxCat, {
                    type: 'bar',
                    data: {
                        labels: catLabels,
                        datasets: [{
                            label: 'Revenue',
                            data: catValues
                        }]
                    }
                });

            } catch (err) {
                console.error('Error loading sales report:', err);
            }
        }

        // ---------- EVENT LISTENERS ----------
        document.addEventListener('DOMContentLoaded', () => {
            const reportTypeSelect = document.getElementById('reportType');
            const customWrapper = document.getElementById('customDateWrapper');
            const singleWrapper = document.getElementById('singleDateWrapper');

            reportTypeSelect.addEventListener('change', () => {
                if (reportTypeSelect.value === 'custom') {
                    customWrapper.style.display = 'block';
                    singleWrapper.style.display = 'none';
                } else {
                    customWrapper.style.display = 'none';
                    singleWrapper.style.display = 'block';
                }
            });

            document.getElementById('applyFilterBtn').addEventListener('click', () => {
                loadSalesReport();
            });

           document.getElementById("downloadPdfBtn").addEventListener("click", () => {
    const query = getFilterParams();
    window.location.href = `/admin/sales-report/download/pdf?${query}`;
});

document.getElementById("downloadExcelBtn").addEventListener("click", () => {
    const query = getFilterParams();
    window.location.href = `/admin/sales-report/download/excel?${query}`;
});


            // initial load
            loadSalesReport();
        });
function resizeCharts() {
    if (salesTrendChart) salesTrendChart.resize();
    if (salesDistributionChart) salesDistributionChart.resize();
}

window.addEventListener("load", () => {
    setTimeout(resizeCharts, 300);
});

window.addEventListener("resize", resizeCharts);

    </script>
</body>
</html>


