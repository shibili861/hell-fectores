const enableVariantsCheckbox = document.getElementById('enableVariants');
const sizeVariantsContainer = document.getElementById('sizeVariantsContainer');
const sizeVariantsList = document.getElementById('sizeVariantsList');
const addSizeVariantBtn = document.getElementById('addSizeVariant');

const availableSizes = ['XS', 'S', 'M', 'L', 'XL', 'XXL', 'XXXL'];
let usedSizes = new Set();

// Toggle variants section
enableVariantsCheckbox.addEventListener('change', function() {
    sizeVariantsContainer.style.display = this.checked ? 'block' : 'none';
    if (!this.checked) {
        sizeVariantsList.innerHTML = '';
        usedSizes.clear();
        // Reset stock quantity to manual input
        document.getElementsByName('stockQty')[0].value = '';
        document.getElementsByName('stockQty')[0].readOnly = false;
    } else {
        // Make stock quantity read-only when variants are enabled
        document.getElementsByName('stockQty')[0].readOnly = true;
        document.getElementsByName('stockQty')[0].value = '0';
    }
});

// Add size variant
addSizeVariantBtn.addEventListener('click', function() {
    addSizeVariant();
});

function addSizeVariant(selectedSize = '', quantity = '') {
    const availableSizesOptions = availableSizes.filter(size => !usedSizes.has(size));
    
    if (availableSizesOptions.length === 0) {
        alert('All available sizes have been added.');
        return;
    }

    const variantId = Date.now();
    const variantDiv = document.createElement('div');
    variantDiv.className = 'size-variant-item';
    variantDiv.style.cssText = `
        display: grid;
        grid-template-columns: 1fr 1fr auto;
        gap: 1rem;
        align-items: end;
        padding: 1rem;
        background: var(--light-gold);
        border-radius: 12px;
        margin-bottom: 1rem;
        border: 1px solid var(--light-brown);
    `;

    variantDiv.innerHTML = `
        <div class="form-group">
            <label class="form-label">Size</label>
            <select class="form-select size-select" name="sizes" required>
                <option value="">Select Size</option>
                ${availableSizesOptions.map(size => 
                    `<option value="${size}" ${selectedSize === size ? 'selected' : ''}>${size}</option>`
                ).join('')}
            </select>
        </div>
        
        <div class="form-group">
            <label class="form-label">Quantity</label>
            <input type="number" class="form-input size-quantity" name="quantities" value="${quantity}" placeholder="0" min="0" required>
        </div>
        
        <div class="form-group">
            <button type="button" class="btn remove-size" style="background: var(--error); color: white; padding: 0.75rem;">
                <i class="fas fa-times"></i>
            </button>
        </div>
    `;

    sizeVariantsList.appendChild(variantDiv);

    const sizeSelect = variantDiv.querySelector('.size-select');
    const removeBtn = variantDiv.querySelector('.remove-size');
    const quantityInput = variantDiv.querySelector('.size-quantity');

    if (selectedSize) {
        usedSizes.add(selectedSize);
    }

    sizeSelect.addEventListener('change', function() {
        if (this.value) {
            usedSizes.add(this.value);
        }
    });

    removeBtn.addEventListener('click', function() {
        const selectedSizeValue = sizeSelect.value;
        if (selectedSizeValue) {
            usedSizes.delete(selectedSizeValue);
        }
        variantDiv.remove();
        updateStockQuantity();
    });

    // Update stock quantity when variant quantities change
    quantityInput.addEventListener('input', updateStockQuantity);
    updateStockQuantity();
}

function updateStockQuantity() {
    if (!enableVariantsCheckbox.checked) return;

    const quantityInputs = document.querySelectorAll('.size-quantity');
    let totalQuantity = 0;
    
    quantityInputs.forEach(input => {
        totalQuantity += parseInt(input.value) || 0;
    });

    document.getElementsByName('stockQty')[0].value = totalQuantity;
}

// Update form submission to handle variants
const originalFormSubmit = productForm.onsubmit;
productForm.onsubmit = function(e) {
    if (enableVariantsCheckbox.checked) {
        const sizeSelects = document.querySelectorAll('.size-select');
        const quantityInputs = document.querySelectorAll('.size-quantity');

        // Validate variants
        for (let i = 0; i < sizeSelects.length; i++) {
            if (!sizeSelects[i].value || !quantityInputs[i].value) {
                e.preventDefault();
                alert('Please fill all fields for size variants.');
                return false;
            }
        }
    }
    
    return originalFormSubmit ? originalFormSubmit.call(this, e) : true;
};
