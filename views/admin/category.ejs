}

/* SweetAlert2 Animations */
.swal2-show {
    animation: swal2-show 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
}

.swal2-hide {
    animation: swal2-hide 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
}

@keyframes swal2-show {
    0% {
        transform: scale(0.8) translateY(-20px);
        opacity: 0;
    }
    100% {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
}

@keyframes swal2-hide {
    0% {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
    100% {
        transform: scale(0.8) translateY(-20px);
        opacity: 0;
    }
}
    @keyframes shake {
      0%,100% { transform: translateX(0); }
      25% { transform: translateX(-5px); }
      50% { transform: translateX(5px); }
      75% { transform: translateX(-5px); }
    }

    .shake {
      animation: shake 0.3s;
      border-color: var(--danger) !important;
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .content-main {
        margin-left: 0;
      }
    }

    @media (max-width: 992px) {
      .col-md-3, .col-md-8 {
        max-width: 100%;
        flex: 0 0 100%;
        margin-bottom: 30px;
      }
      
      .input-group {
        width: 100%;
      }
    }

    /* Additional Premium Elements */
    .table tbody tr {
      position: relative;
    }

    .table tbody tr:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 20px;
      right: 20px;
      height: 1px;
      background: linear-gradient(90deg, transparent 0%, rgba(139, 90, 43, 0.1) 50%, transparent 100%);
    }

    .btn-primary, .btn-search, .btn-action {
      position: relative;
      overflow: hidden;
    }

    .btn-primary:after, .btn-search:after, .btn-action:after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 5px;
      height: 5px;
      background: rgba(255, 255, 255, 0.5);
      opacity: 0;
      border-radius: 100%;
      transform: scale(1, 1) translate(-50%);
      transform-origin: 50% 50%;
    }

    .btn-primary:hover:after, .btn-search:hover:after, .btn-action:hover:after {
      animation: ripple 1s ease-out;
    }

    @keyframes ripple {
      0% {
        transform: scale(0, 0);
        opacity: 0.5;
      }
      100% {
        transform: scale(20, 20);
        opacity: 0;
      }
    }

    /* Text Center Utility */
    .text-center {
      text-align: center;
    }

    .text-start {
      text-align: left;
    }

    .mb-4 {
      margin-bottom: 24px;
    }

    .mb-20 {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <!-- Sidebar include -->

  <!-- Main Content -->
  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title card-title">Premium Category Management</h2>
    </div>
    
    <header class="card-header text-center mb-20">
      <form action="/admin/category/" method="get" class="d-inline">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search categories..." name="search" value="<%= search %>"/>
          <button class="btn-search" type="submit">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </form>
    </header>
    
    <div class="card">
      <div class="card-body">
        <div class="row">
          <!-- Add Category Form -->
          <div class="col-md-3">
            <div class="form-container">
              <form method="post" action="/admin/addCategory" onsubmit="return handleformsubmit(event)">
                <div class="mb-4">
                  <label class="form-label">Category Name</label>
                  <input type="text" id="name" name="name" placeholder="Type category name" class="form-control"/>
                  <small id="name-error" class="error-message"></small>
                </div>
                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <textarea id="descriptionId" name="description" placeholder="Type category description" class="form-control"></textarea>
                  <small id="description-error" class="error-message"></small>
                </div>
                <button class="btn btn-primary" type="submit">
                  <i class="fas fa-plus-circle"></i> Create Category
                </button>
              </form>
            </div>
          </div>
          
          <!-- Categories Table -->
          <div class="col-md-8">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center">#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Offer Price</th>
                    <th>Offer</th>
                    <th>Status</th>
                    <th>List/Unlist</th>
                    <th class="text-start">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% cat.reverse().forEach((category,index)=>{ %>
                  <tr>
                    <td class="text-center"><%= index+1 %></td>
                    <td><b><%= category.name %></b></td>
                    <td><%= category.description %></td>
                    <td>--</td>
                    <td>
                      <button class="btn-action btn-info">
                        <i class="fas fa-tag"></i> Add Offer
                      </button>
                      <button class="btn-action btn-info">
                        <i class="fas fa-times"></i> Remove
                      </button>
                    </td>
                    <td>
                      <span class="badge <%= category.isListed ? 'alert-success' : 'alert-danger' %>">
                        <i class="fas <%= category.isListed ? 'fa-eye' : 'fa-eye-slash' %>"></i>
                        <%= category.isListed ? 'Listed' : 'Unlisted' %>
                      </span>
                    </td>
                    <td>
                 <% if(category.isListed){ %>
              <button class="btn-action btn-danger list-toggle" 
            data-id="<%= category._id %>" data-action="unlist">
            <i class="fas fa-eye-slash"></i> Unlist
            </button>
           <% } else { %>

         <button class="btn-action btn-success list-toggle" 
            data-id="<%= category._id %>" data-action="list">
            <i class="fas fa-eye"></i> List
       </button>
           <% } %>
        </td>

                    <td>
                      <a href="/admin/editCategory?id=<%= category.id %>" class="btn-action btn-info">
                        <i class="fas fa-edit"></i> Edit
                      </a>
                      <button class="btn-action btn-danger delete-category" data-id="<%= category._id %>" data-name="<%= category.name %>">
                       <i class="fas fa-trash"></i> Delete
                     </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="pagination-container">
      <ul class="pagination">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">
            <i class="fas fa-chevron-left"></i> Prev
          </a>
        </li>
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>
        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">
            Next <i class="fas fa-chevron-right"></i>
          </a>
        </li>
      </ul>
    </div>

  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script>
    function handleformsubmit(event) {
      event.preventDefault();
      if (!validateform()) return;

      const name = document.getElementById("name").value.trim();
      const description = document.getElementById("descriptionId").value.trim();

      fetch('/admin/addCategory', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, description })
      })
      .then(response => response.json())
      .then(data => {
        if (data.error === "Category already exists") {
          Swal.fire({ icon: 'error', title: 'Oops', text: data.error });
        } else if (data.message) {
          Swal.fire({ icon: 'success', title: 'Success', text: data.message })
            .then(() => location.reload());
        }
      })
      .catch(() => Swal.fire({ icon: 'error', title: 'Oops', text: "An unexpected error occurred" }));
    }

    function validateform() {
      clearErrorMessages();
      const name = document.getElementById("name").value.trim();
      const description = document.getElementById("descriptionId").value.trim();
      let isValid = true;

      if (name === '') {
        displayErrorMessage("name-error", "Please enter a name"); isValid = false;
      } else if (name.length < 3) {
        displayErrorMessage("name-error", "Name must be at least 3 characters"); isValid = false;
      }

      if (description === '') {
        displayErrorMessage("description-error", "Please enter a description"); isValid = false;
      } else if (description.length < 10) {
        displayErrorMessage("description-error", "Description must be at least 10 characters"); isValid = false;
      }

      return isValid;
    }

    function displayErrorMessage(elementId, message) {
      const errorElement = document.getElementById(elementId);
      if (errorElement) {
        errorElement.innerText = message;
        errorElement.style.display = "block";
        const inputField = errorElement.previousElementSibling;
        if (inputField) {
          inputField.classList.add("shake");
          setTimeout(() => inputField.classList.remove("shake"), 400);
        }
      }
    }

    function clearErrorMessages() {
      document.querySelectorAll(".error-message").forEach(el => {
        el.style.display = "none";
        el.innerText = "";
      });
    }

    $(document).ready(function() {
      $('.list-toggle').click(function() {
        const btn = $(this);
        const categoryId = btn.data('id');
        const action = btn.data('action');
        const url = action === 'list' ? '/admin/listCategory' : '/admin/unlistCategory';
        const actionText = action === 'list' ? 'list' : 'unlist';

      Swal.fire({
    title: `Are you sure?`,
    html: `
        <div style="text-align: center;">
            <div style="font-size: 4rem; color: var(--warning); margin-bottom: 1rem;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <p style="font-size: 1.2rem; color: var(--primary); margin-bottom: 0.5rem; font-weight: 600;">
                ${action === 'list' ? 'List' : 'Unlist'} this category?
            </p>
            <p style="font-size: 1rem; color: var(--accent); font-weight: 600; margin-bottom: 0.5rem;">
