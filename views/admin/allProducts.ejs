  display: inline-block;
  background: #e53935;
  color: #fff;
  padding: 3px 8px;
  font-size: 12px;
  border-radius: 8px;
  font-weight: 600;
}
.offer-badge {
  background: #43a047;
  padding: 4px 8px;
  color: white;
  font-weight: 600;
  border-radius: 8px;
