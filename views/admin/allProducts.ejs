        }).then(async (result) => {
            if (result.isConfirmed) {

                const response = await fetch(`/admin/products/remove-offer/${id}`, {
                    method: "POST"
                });

                const data = await response.json();

                if (data.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Offer Removed",
                        text: "The offer has been successfully deleted.",
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: data.message || "Something went wrong"
                    });
                }
            }
        });
    });
