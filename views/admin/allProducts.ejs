    const offer = document.getElementById("offerValue").value;
    const productId = document.getElementById("offerProductId").value;

    const response = await fetch(`/admin/products/offer/${productId}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ offer })
    });

    const data = await response.json();

    if (data.success) {
        Swal.fire({
            icon: "success",
            title: "Offer Added!",
            text: "The product offer has been successfully updated.",
            timer: 1500,
            showConfirmButton: false
        }).then(() => {
