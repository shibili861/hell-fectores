</div>

    <script>
        // Enhanced hover effects and smooth transitions
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation delays to table rows
            const rows = document.querySelectorAll('.table-body tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.03}s`;
            });

            // Enhanced button hover effects
            const buttons = document.querySelectorAll('.btn, .page-btn, .add-product-btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px) scale(1.05)';
                });
                
                button.addEventListener('mouseleave', function() {
                    if (!this.classList.contains('active')) {
                        this.style.transform = 'translateY(0) scale(1)';
                    }
                });
            });

            // Smooth page transitions for pagination
            const pageLinks = document.querySelectorAll('.page-btn');
            pageLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    
                    // Add fade out animation
                    document.querySelector('.main-content').style.opacity = '0';
                    document.querySelector('.main-content').style.transform = 'translateY(15px)';
                    
                    // Navigate after animation (shorter delay)
                    setTimeout(() => {
                        window.location.href = href;
                    }, 300);
                });
            });

            // Enhanced search and filter interactions
            const searchInput = document.querySelector('.search-input');
            const filterSelects = document.querySelectorAll('.filter-select');

            searchInput.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
            });

            searchInput.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });

            filterSelects.forEach(select => {
                select.addEventListener('change', function() {
                    this.style.borderColor = 'var(--gold)';
                    setTimeout(() => {
                        this.style.borderColor = '';
                    }, 1000);
                });
            });
        });

        // Add smooth scrolling to top when pagination changes
        window.addEventListener('load', function() {
            if (window.location.search.includes('page=')) {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            }
        });

        // --- SEARCH & CLEAR FUNCTIONALITY ---
        const searchBtn = document.getElementById('searchBtn');
        const clearBtn = document.getElementById('clearBtn');
        const searchInput = document.getElementById('searchInput');

        if (searchBtn) {
            searchBtn.addEventListener('click', function() {
                const searchValue = searchInput.value.trim();
                const baseUrl = window.location.pathname;
                if (searchValue) {
                    window.location.href = `${baseUrl}?search=${encodeURIComponent(searchValue)}`;
                } else {
                    window.location.href = baseUrl;
                }
            });
        }

        if (clearBtn) {
            clearBtn.addEventListener('click', function() {
                searchInput.value = '';
                const baseUrl = window.location.pathname;
                window.location.href = baseUrl;
            });
        }

        if (searchInput) {
            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    searchBtn.click();
                }
            });
        }

        // --- BLOCK, UNBLOCK & DELETE WITH AJAX ---
        document.addEventListener("DOMContentLoaded", function() {
            const table = document.querySelector(".products-table");

            // Event Delegation for dynamic elements
            table.addEventListener("click", async function(e) {
                const blockBtn = e.target.closest(".btn-block");
                const unblockBtn = e.target.closest(".btn-unblock");
                const deleteBtn = e.target.closest(".btn-delete");

                // SweetAlert2 configuration
                const swalConfig = {
                    customClass: {
                        popup: 'custom-swal-popup',
                        title: 'custom-swal-title',
                        htmlContainer: 'custom-swal-content',
                        confirmButton: 'custom-swal-confirm',
                        cancelButton: 'custom-swal-cancel',
                        actions: 'custom-swal-actions'
                    },
                    buttonsStyling: false,
                    showClass: {
                        popup: 'swal2-show-animation'
                    },
                    hideClass: {
                        popup: 'swal2-hide-animation'
                    },
                    background: 'linear-gradient(135deg, var(--primary-white) 0%, var(--light-gold) 100%)',
                    backdrop: 'rgba(62, 39, 35, 0.7)'
                };

                // Helper function for block/unblock
                async function updateStatus(productId, action) {
                    try {
                        const response = await fetch(`/admin/${action}-product/${productId}`, {
                            method: "PATCH",
                            headers: {
                                "Content-Type": "application/json",
                            },
                        });

                        const result = await response.json();

                        if (result.success) {
                            // Update UI instantly
                            const row = document.querySelector(`tr[data-product-id="${productId}"]`);
                            const statusBadge = row.querySelector(".status-badge");
                            const actionContainer = row.querySelector(".action-buttons");

                            if (action === "block") {
                                statusBadge.className = "status-badge status-inactive";
                                statusBadge.innerHTML = `<i class="fas fa-circle" style="font-size: 6px;"></i> Blocked`;

                                actionContainer.innerHTML = `
                                    <a href="/admin/editproduct?id=${productId}" class="btn btn-edit"><i class="fas fa-edit"></i> Edit</a>
                                    <button class="btn btn-unblock" data-product-id="${productId}"><i class="fas fa-check"></i> Unblock</button>
                                    <button class="btn btn-delete" data-product-id="${productId}"><i class="fas fa-trash"></i> Delete</button>
                                `;
                            } else {
                                statusBadge.className = "status-badge status-active";
                                statusBadge.innerHTML = `<i class="fas fa-circle" style="font-size: 6px;"></i> Active`;

                                actionContainer.innerHTML = `
                                    <a href="/admin/editproduct?id=${productId}" class="btn btn-edit"><i class="fas fa-edit"></i> Edit</a>
                                    <button class="btn btn-block" data-product-id="${productId}"><i class="fas fa-ban"></i> Block</button>
                                    <button class="btn btn-delete" data-product-id="${productId}"><i class="fas fa-trash"></i> Delete</button>
                                `;
                            }

                            // Smooth visual feedback
                            statusBadge.style.transform = "scale(1.2)";
                            setTimeout(() => (statusBadge.style.transform = "scale(1)"), 300);

                            // Success notification with SweetAlert2
                            Swal.fire({
                                ...swalConfig,
                                icon: 'success',
                                title: 'Success!',
                                text: result.message,
                                showConfirmButton: true,
                                confirmButtonText: 'OK',
                                width: '450px'
                            });
                        } else {
                            // Error notification with SweetAlert2
                            Swal.fire({
                                ...swalConfig,
                                icon: 'error',
                                title: 'Error!',
                                text: result.message || "Failed to update status",
                                showConfirmButton: true,
                                confirmButtonText: 'OK',
                                width: '450px'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                        // Error notification with SweetAlert2
                        Swal.fire({
                            ...swalConfig,
                            icon: 'error',
                            title: 'Error!',
                            text: "Error updating product status",
                            showConfirmButton: true,
                            confirmButtonText: 'OK',
                            width: '450px'
                        });
                    }
                }

                // DELETE PRODUCT FUNCTIONALITY
                if (deleteBtn) {
                    const productId = deleteBtn.closest("tr").dataset.productId;
                    const productName = deleteBtn.closest("tr").querySelector(".product-name").textContent;
                    
                    Swal.fire({
                        ...swalConfig,
                        title: 'Delete Product',
                        html: `
                            <div style="text-align: center;">
                                <div style="font-size: 4rem; color: var(--error); margin-bottom: 1rem;">
                                    <i class="fas fa-trash-alt"></i>
                                </div>
                                <p style="font-size: 1.2rem; color: var(--text-dark); margin-bottom: 0.5rem;">
                                    Are you sure you want to delete this product?
                                </p>
                                <p style="font-size: 1.1rem; color: var(--dark-brown); font-weight: 600;">
                                    "${productName}"
                                </p>
                                <p style="font-size: 0.9rem; color: var(--error); font-weight: 600; margin-top: 1rem;">
                                     This action cannot be undone!
                                </p>
                                <p style="font-size: 0.9rem; color: var(--text-light); margin-top: 0.5rem;">
                                    All product data and images will be permanently removed.
                                </p>
                            </div>
                        `,
                        showCancelButton: true,
                        confirmButtonText: 'Yes, Delete Product',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: 'var(--error)',
                        reverseButtons: true,
                        width: '500px'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            try {
                                const response = await fetch(`/admin/delete-product/${productId}`, {
                                    method: "DELETE",
                                    headers: {
                                        "Content-Type": "application/json",
                                    },
                                });

                                const result = await response.json();

                                if (result.success) {
                                    // Remove the product row from UI with animation
                                    const row = document.querySelector(`tr[data-product-id="${productId}"]`);
                                    if (row) {
                                        row.style.transform = "translateX(100%)";
                                        row.style.opacity = "0";
                                        row.style.transition = "all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)";
                                        
                                        setTimeout(() => {
                                            row.remove();
                                            
                                            // Check if table is empty after deletion
                                            const remainingRows = document.querySelectorAll('.table-body tr[data-product-id]');
                                            if (remainingRows.length === 0) {
                                                // Reload the page to show empty state
                                                setTimeout(() => {
                                                    location.reload();
                                                }, 1000);
                                            }
                                        }, 400);
                                    }

                                    // Success notification with SweetAlert2
                                    Swal.fire({
                                        ...swalConfig,
                                        icon: 'success',
                                        title: 'Deleted!',
                                        text: result.message,
                                        showConfirmButton: true,
                                        confirmButtonText: 'OK',
                                        width: '450px'
                                    });
                                } else {
                                    // Error notification with SweetAlert2
                                    Swal.fire({
                                        ...swalConfig,
                                        icon: 'error',
                                        title: 'Error!',
                                        text: result.message || "Failed to delete product",
                                        showConfirmButton: true,
                                        confirmButtonText: 'OK',
                                        width: '450px'
                                    });
                                }
                            } catch (err) {
                                console.error(err);
                                // Error notification with SweetAlert2
                                Swal.fire({
                                    ...swalConfig,
                                    icon: 'error',
                                    title: 'Error!',
                                    text: "Error deleting product",
                                    showConfirmButton: true,
                                    confirmButtonText: 'OK',
                                    width: '450px'
                                });
                            }
                        }
                    });
                }

                // BLOCK PRODUCT
                if (blockBtn) {
                    const productId = blockBtn.closest("tr").dataset.productId;
                    const productName = blockBtn.closest("tr").querySelector(".product-name").textContent;
                    
                    Swal.fire({
                        ...swalConfig,
                        title: 'Block Product',
                        html: `
                            <div style="text-align: center;">
                                <div style="font-size: 4rem; color: var(--warning); margin-bottom: 1rem;">
                                    <i class="fas fa-ban"></i>
                                </div>
                                <p style="font-size: 1.2rem; color: var(--text-dark); margin-bottom: 0.5rem;">
                                    Are you sure you want to block this product?
                                </p>
                                <p style="font-size: 1.1rem; color: var(--dark-brown); font-weight: 600;">
                                    "${productName}"
                                </p>
                                <p style="font-size: 0.9rem; color: var(--text-light); margin-top: 1rem;">
                                    This product will be hidden from customers.
                                </p>
                            </div>
                        `,
                        showCancelButton: true,
                        confirmButtonText: 'Yes, Block Product',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: 'var(--warning)',
                        reverseButtons: true,
                        width: '500px'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            updateStatus(productId, "block");
                        }
                    });
                }

                // UNBLOCK PRODUCT
                if (unblockBtn) {
                    const productId = unblockBtn.closest("tr").dataset.productId;
                    const productName = unblockBtn.closest("tr").querySelector(".product-name").textContent;
                    
                    Swal.fire({
                        ...swalConfig,
                        title: 'Unblock Product',
                        html: `
                            <div style="text-align: center;">
                                <div style="font-size: 4rem; color: var(--success); margin-bottom: 1rem;">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <p style="font-size: 1.2rem; color: var(--text-dark); margin-bottom: 0.5rem;">
                                    Are you sure you want to unblock this product?
                                </p>
                                <p style="font-size: 1.1rem; color: var(--dark-brown); font-weight: 600;">
                                    "${productName}"
                                </p>
                                <p style="font-size: 0.9rem; color: var(--text-light); margin-top: 1rem;">
                                    This product will be visible to customers again.
                                </p>
                            </div>
                        `,
                        showCancelButton: true,
                        confirmButtonText: 'Yes, Unblock Product',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: 'var(--success)',
                        reverseButtons: true,
                        width: '500px'
                    }).then((result) => {
                        if (result.isConfirmed) {
