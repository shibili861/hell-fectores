        const id = btn.getAttribute("data-id");

        Swal.fire({
            title: "Remove Offer?",
            text: "This will remove the discount from this product.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
