                                type="text" 
                                class="search-input" 
                                id="searchInput"
                                placeholder="Search products..." 
                                value="<%= search || '' %>"
                            >
                            <button class="btn" id="searchBtn" style="margin-left:10px;">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <button class="btn" id="clearBtn" style="margin-left:5px; background:linear-gradient(135deg, #9e9e9e, #757575); color:white;">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>

                       <select class="filter-select" id="categoryFilter" name="category">
    <option value="">All Categories</option>
    <% if (cat && cat.length > 0) { %>
        <% cat.forEach(category => { %>
            <option 
              value="<%= category._id %>"
              <%= category._id.toString() === selectedCategory ? "selected" : "" %>
            >
              <%= category.name %>
            </option>
        <% }) %>
    <% } %>
</select>

                     <select class="filter-select" id="statusFilter" name="status">
    <option value="">All Status</option>
    <option value="active" <%= status === "active" ? "selected" : "" %>>Active</option>
    <option value="blocked" <%= status === "blocked" ? "selected" : "" %>>Blocked</option>
</select>

                    </div>
                </div>

                <div class="table-responsive">
                    <table class="products-table">
                                    <thead class="table-header">
                    <tr>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Offer</th> 
                         <th>Offer Actions</th>
                        <th>Quantity</th>
                        <th>Stock Status</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                        <tbody class="table-body">
                            <% if (data && data.length > 0) { %>
                                <% data.forEach((product, index) => { %>
                                    <tr data-product-id="<%= product._id %>" style="animation-delay: <%= index * 0.03 %>s;">

                                        <td>
                                            <div class="product-info">
                                                <div class="product-image">
                                                    <% if (product.productImage && product.productImage.length > 0) { %>
                                                        <img 
                                                            src="<%= product.productImage[0] %>" 
                                                            alt="<%= product.productName %>"
                                                            onerror="this.src='https://via.placeholder.com/70x70/f5f5f5/8d6e63?text=Image'"
                                                        >
                                                    <% } else { %>
                                                        <img 
                                                            src="https://via.placeholder.com/70x70/f5f5f5/8d6e63?text=Image" 
                                                            alt="No Image"
                                                        >
                                                    <% } %>
                                                </div>
                                                <div class="product-details">
                                                    <div class="product-name"><%= product.productName %></div>
                                                    <div class="product-category">
                                                        <%= product.category ? product.category.name : 'N/A' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <%= product.category ? product.category.name : 'N/A' %>
                                        </td>
                                        <td>
                                            <div class="price-info">
